<template>
  <div class="sy-main-tab">
    <div class="main-header">
      <div>
        <h3>ER Log Timeline</h3>
        <p class="lede">Click a lot bar to open the detail tab.</p>
      </div>
    </div>

    <!-- 변경 시작: 범례 클릭 필터 UI -->
    <div class="legend-row">
      <div class="legend">
        <button
          type="button"
          class="legend-item"
          :class="{ 'is-off': !legendFilters.hasSy }"
          @click="toggleLegend('hasSy')"
        >
          <span class="swatch has-sy"></span>
          <span>Has SY Data</span>
        </button>
        <button
          type="button"
          class="legend-item"
          :class="{ 'is-off': !legendFilters.incompleteSy }"
          @click="toggleLegend('incompleteSy')"
        >
          <span class="swatch incomplete"></span>
          <span>Has Incomplete SY Data</span>
        </button>
        <button
          type="button"
          class="legend-item"
          :class="{ 'is-off': !legendFilters.reject }"
          @click="toggleLegend('reject')"
        >
          <span class="swatch reject"></span>
          <span>Has Reject Wafer</span>
        </button>
      </div>
    </div>
    <!-- 변경 끝: 범례 클릭 필터 UI -->

    <SyErLogChart ref="chart" @select-lot="onSelectLot" />
  </div>
</template>

<script>
import SyErLogChart from './SyErLogChart.vue';

export default {
  name: 'MainTab',
  components: {
    SyErLogChart
  },
  props: {
    erLogData: {
      type: Array,
      default: () => []
    }
  },
  // 변경 시작: 범례 필터 상태/동작 추가
  data() {
    return {
      // 변경: 차트 필터링을 위한 범례 상태 추가
      legendFilters: {
        hasSy: true,
        incompleteSy: true,
        reject: true
      }
    };
  },
  watch: {
    erLogData: {
      deep: true,
      immediate: true,
      handler(value) {
        this.setData(value);
      }
    }
  },
  methods: {
    onSelectLot(payload) {
      console.log('메인탭 onSelectLot() payload = ', payload);
      this.$emit('select-lot', payload);
    },
    // 변경: 범례 상태를 토글하고 차트에 필터 전달
    toggleLegend(key) {
      if (!Object.prototype.hasOwnProperty.call(this.legendFilters, key)) return;
      this.legendFilters[key] = !this.legendFilters[key];
      const chart = this.$refs.chart;
      if (chart && typeof chart.setFilters === 'function') {
        chart.setFilters({ ...this.legendFilters });
      }
      this.hideTooltip();
    },
    setData(data) {
      const chart = this.$refs.chart;
      if (!chart || typeof chart.setData !== 'function') return;
      chart.setData(data);
      // 변경: 데이터 갱신 시 필터를 다시 적용
      if (typeof chart.setFilters === 'function') {
        chart.setFilters({ ...this.legendFilters });
      }
    },
    hideTooltip() {
      const chart = this.$refs.chart;
      if (chart && typeof chart.hideTooltip === 'function') {
        chart.hideTooltip();
      }
    }
  }
};
// 변경 끝: 범례 필터 상태/동작 추가
</script>

<style scoped>
.sy-main-tab {
  display: flex;
  flex-direction: column;
  gap: 18px;
}

.main-header {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  align-items: flex-start;
  justify-content: space-between;
}

h3 {
  margin: 0 0 6px;
  font-size: 20px;
}

.lede {
  margin: 0;
  color: #64748b;
  opacity: 1;
}

.legend-row {
  display: flex;
  justify-content: flex-end;
  margin-top: 6px;
}

.legend {
  display: flex;
  flex-wrap: wrap;
  gap: 10px 16px;
  font-size: 12px;
}

/* 변경 시작: 범례 버튼 스타일 */
.legend-item {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  color: #334155;
  /* 변경: 버튼 형태의 범례 스타일 */
  border: none;
  background: transparent;
  padding: 0;
  font: inherit;
  cursor: pointer;
}

/* 변경: 비활성 범례 시각 상태 */
.legend-item.is-off {
  opacity: 0.45;
}
/* 변경 끝: 범례 버튼 스타일 */

.swatch {
  width: 10px;
  height: 10px;
  border-radius: 999px;
  display: inline-block;
}

.swatch.has-sy {
  background: #3b82f6;
}

.swatch.incomplete {
  background: #f59e0b;
}

.swatch.reject {
  background: #ef4444;
}
</style>
