<!--
  ---------------------------------------------------------------------------
  필요한 라이브러리

  vuedraggable (Sortable.js 기반 드래그)
    npm install vuedraggable sortablejs
    yarn add vuedraggable sortablejs

  ---------------------------------------------------------------------------
-->

<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="containerStyle"
  >
    <!-- 활성 체인 영역 (왼쪽) -->
    <div
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span
            v-if="index > 0"
            class="control-chain__separator"
          >
            >>
          </span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <!-- 헤더 (타이틀 + 드래그핸들 + X 버튼) -->
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span class="control-chain__drag-handle">
                  ≡
                </span>
                <span
                  class="control-chain__title"
                  :style="getTextStyle(element, true)"
                >
                  {{ element.label }}
                </span>
              </div>

              <button
                type="button"
                class="control-chain__close-button"
                :style="{ visibility: showCloseControlId === element.id ? 'visible' : 'hidden' }"
                @click.stop="removeControlById(element.id)"
              >
                ✕
              </button>
            </div>

            <!-- 바디 (dropdown / label) : items 없으면 통째로 안 그림 -->
            <div
              v-if="hasBody(element)"
              class="control-chain__body"
            >
              <!-- single dropdown -->
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <!-- multi-dropdown -->
<ur-multi-dropdown
  v-else-if="element.type === 'multi'"
  class="control-chain__dropdown"
  sm
  v-model="element.selectedValues"
  :items="element.items"
  :select-all="element.selectAll === true"
  @input="onMultiSelectChange(element, index, $event)"
/>

              <!-- 라벨 컨트롤 -->
              <span
                v-else
                class="control-chain__label-value"
                :style="{ color: baseFontColor }"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>

            <!-- ColorBy 라디오 라인 -->
            <div
              v-if="useColorBy"
              class="control-chain__colorby-row"
            >
              <label class="control-chain__colorby-label">
                <input
                  type="radio"
                  class="control-chain__colorby-radio"
                  :value="element.id"
                  v-model="colorBySelectedId"
                  @change="onColorByChange(element, index)"
                />
                <span class="control-chain__colorby-text">
                  ColorBy
                </span>
              </label>
            </div>
          </div>
        </div>
      </draggable>

      <!-- 안내 문구: 드롭을 방해하지 않도록 절대 위치 + pointer-events: none -->
      <div
        v-if="!activeControls.length"
        class="control-chain__empty"
        :style="emptyGuideTextStyle"
      >
        {{ emptyGuideText }}
      </div>
    </div>

    <!-- 사용 가능한 컨트롤 영역 (오른쪽) -->
    <div
      class="control-chain__available"
      :style="availableAreaStyle"
    >
      <div
        v-if="availableTitle"
        class="control-chain__available-title"
        :style="availableTitleTextStyle"
      >
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span
                class="control-chain__drag-handle control-chain__drag-handle--small"
              >
                ≡
              </span>
              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>
  </div>
</template>

<script>
import draggable from 'vuedraggable';

const DEFAULT_MIN_HEIGHT = 260;
const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') {
    return undefined;
  }
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) {
    return null;
  }
  if (Array.isArray(input)) {
    return input.length ? input.slice() : null;
  }
  return [input];
};

const horizontalMap = {
  left: 'flex-start',
  center: 'center',
  right: 'flex-end'
};

const verticalMap = {
  top: 'flex-start',
  center: 'center',
  bottom: 'flex-end'
};

export default {
  name: 'ControlChain',
  components: { draggable },

  model: { prop: 'value', event: 'input' },

  props: {
    value: {
      type: Array,
      default() {
        return [];
      }
    },
    controlTemplates: {
      type: Array,
      required: true
    },
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return ['right', 'left'].includes(v);
      }
    },
    emptyGuideText: {
      type: String,
      default: '목록에서 드래그하여 추가해 주세요.'
    },
    availableTitle: {
      type: String,
      default: ''
    },

    width: {
      type: [Number, String],
      default: null
    },
    height: {
      type: [Number, String],
      default: null
    },

    useHorizontalScroll: {
      type: Boolean,
      default: false
    },
    useVerticalScroll: {
      type: Boolean,
      default: false
    },

    /**
     * ColorBy 기능 사용 여부
     * - true: 각 컨트롤에 ColorBy 라디오 표시
     * - false: ColorBy 라인 자체를 렌더링하지 않음
     */
    useColorBy: {
      type: Boolean,
      default: false
    },

    /**
     * ColorBy 초기 선택 컨트롤을 결정하는 함수
     * - (activeControlsWithoutId:Array) => key(string) | null
     * - null 또는 유효하지 않은 key를 리턴하면 기본 규칙(first) 사용
     */
    resolveInitialColorByKey: {
      type: Function,
      default: null
    },

    /**
     * ColorBy 선택된 컨트롤이 삭제될 때, 선택을 어디로 넘길지 규칙
     * - 'first' : 항상 첫 번째 컨트롤로 이동
     * - 'left'  : 삭제된 컨트롤의 왼쪽 컨트롤이 우선, 없으면 첫 번째
     * - 'right' : 삭제된 컨트롤의 오른쪽 컨트롤이 우선, 없으면 첫 번째
     */
    colorByTransferRule: {
      type: String,
      default: 'first',
      validator(v) {
        return ['first', 'left', 'right'].includes(v);
      }
    }
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],
      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',

      hoveredControlId: null,
      showCloseControlId: null,

      idMap: {},

      depthHighlightColors: [
        '#D5383A',
        '#EB702D',
        '#FBB41A',
        '#2DA379',
        '#1E5FCB',
        '#553CA5'
      ],
      depthHighlightBgColors: [
        '#F8DDDF',
        '#FAE2D4',
        '#FFF0C8',
        '#E0F0E8',
        '#E0EBFA',
        '#E5E0F6'
      ],

      defaultMaxWidth: 240,

      baseFontColor: '#222222',
      highlightFontColor: '#1E5FCB',

      availableWidth: null,

      horizontalAlign: 'flex-start',
      verticalAlign: 'center',

      // ColorBy 선택 상태(id 기준)
      colorBySelectedId: null
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    containerStyle() {
      const style = {
        width: toSize(this.width) || '100%',
        boxSizing: 'border-box'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = heightValue;
        style.minHeight = heightValue;
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        display: 'flex',
        flexDirection: 'column',
        boxSizing: 'border-box',
        position: 'relative'
      };

      const heightValue = toSize(this.height);

      if (heightValue) {
        style.height = '100%';
        style.minHeight = 0;
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';
      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';

      return style;
    },

    availableAreaStyle() {
      const rawWidth = this.availableWidth ?? `${DEFAULT_AVAILABLE_WIDTH}px`;
      const widthValue = toSize(rawWidth) ?? rawWidth;

      const style = {
        width: widthValue,
        flexBasis: widthValue,
        flexShrink: 0,
        flexGrow: 0,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = '100%';
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        flex: '1 1 auto',
        width: '100%',
        minWidth: 0,
        minHeight: '140px'
      };

      style.flexWrap = this.useHorizontalScroll ? 'nowrap' : 'wrap';
      style.justifyContent = this.horizontalAlign;

      if (this.useHorizontalScroll) {
        style.alignItems = this.verticalAlign;
      } else {
        style.alignContent = this.verticalAlign;
      }

      return style;
    },

    emptyGuideTextStyle() {
      return {
        color: '#999999'
      };
    },

    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
      },
      deep: true
    },
    controlTemplates: {
      handler() {
        this.buildControls();
      },
      deep: true
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // ===================== Public API =====================

    setHighlightBorderColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightColors = array;
      }
    },

    setHighlightBackgroundColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightBgColors = array;
      }
    },

    setBaseFontColor(color) {
      if (color) {
        this.baseFontColor = color;
      }
    },

    setHighlightFontColor(color) {
      if (color) {
        this.highlightFontColor = color;
      }
    },

    setAvailableWidth(width) {
      if (typeof width === 'number') {
        this.availableWidth = `${width}px`;
      } else if (width) {
        this.availableWidth = width;
      }
    },

    setHorizontalAlign(mode) {
      const mapped = horizontalMap[mode];
      if (mapped) {
        this.horizontalAlign = mapped;
      }
    },

    setVerticalAlign(mode) {
      const mapped = verticalMap[mode];
      if (mapped) {
        this.verticalAlign = mapped;
      }
    },

    // ===================== 내부 빌드 로직 =====================

    getStableId(control) {
      const key = control.key || control.label || 'control';
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[key];
    },

    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates)
        ? this.controlTemplates
        : [];

      const usedKeys = new Set(
        valueArray
          .map(control => control.key)
          .filter(key => key != null)
      );

      this.activeControls = valueArray.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter(template => !usedKeys.has(template.key))
        .map(template => ({
          ...template,
          id: template.id || this.getStableId(template)
        }));

      this.initColorBySelection();
      this.emitChain();
    },

    emitChain() {
      const cloned = this.activeControls.map(control => {
        const clone = { ...control };
        if (Array.isArray(clone.selectedValues)) {
          clone.selectedValues = clone.selectedValues.slice();
        }
        delete clone.id;
        return clone;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    // ===================== 드래그/드랍 =====================

    onActiveChange(event) {
      this.emitChain();

      if (event.added) {
        this.$emit('control-added', {
          control: event.added.element,
          index: event.added.newIndex
        });
      }

      if (event.moved) {
        this.$emit('control-depth-change', {
          control: event.moved.element,
          oldIndex: event.moved.oldIndex,
          newIndex: event.moved.newIndex
        });
      }

      if (event.removed) {
        const removed = event.removed.element;
        this.$emit('control-removed', {
          control: removed,
          index: event.removed.oldIndex
        });

        if (this.useColorBy && removed && removed.id === this.colorBySelectedId) {
          this.transferColorBySelection(event.removed.oldIndex);
        }
      }
    },

    removeControlById(controlId) {
      const index = this.activeControls.findIndex(control => control.id === controlId);
      if (index < 0) {
        return;
      }

      const removedList = this.activeControls.splice(index, 1);
      const removed = removedList[0];

      this.availableControls.push(removed);

      if (this.hoveredControlId === controlId) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === controlId) {
        this.showCloseControlId = null;
      }

      if (this.useColorBy && removed && removed.id === this.colorBySelectedId) {
        this.transferColorBySelection(index);
      }

      this.emitChain();
      this.$emit('control-removed', {
        control: removed,
        index
      });
    },

    onControlMouseEnter(element) {
      this.hoveredControlId = element.id;
      this.showCloseControlId = element.id;
    },

    onControlMouseLeave(element) {
      if (this.hoveredControlId === element.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === element.id) {
        this.showCloseControlId = null;
      }
    },

    // ===================== 선택 변경 =====================

    onSingleSelectChange(element, index, value) {
      if (element.selectedValue === value) {
        return;
      }
      element.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'single',
        value
      });
    },

    onMultiSelectChange(element, index, values) {
      const nextValues = Array.isArray(values) ? values.slice() : [];
      const prevValues = Array.isArray(element.selectedValues)
        ? element.selectedValues
        : [];

      const isSame =
        prevValues.length === nextValues.length &&
        prevValues.every((item, position) => item === nextValues[position]);

      if (isSame) {
        return;
      }

      element.selectedValues = nextValues;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'multi',
        values: nextValues
      });
    },

    // ===================== ColorBy 로직 =====================

    hasBody(element) {
      // dropdown: items 없으면 바디 렌더링 안 함
      if (element.type === 'single' || element.type === 'multi') {
        return Array.isArray(element.items) && element.items.length > 0;
      }
      // label은 항상 바디 표시
      if (element.type === 'label') {
        return true;
      }
      return false;
    },

    initColorBySelection() {
      if (!this.useColorBy) {
        this.colorBySelectedId = null;
        return;
      }

      if (!this.activeControls.length) {
        this.colorBySelectedId = null;
        return;
      }

      // 이미 선택된 id가 있고, 아직 목록에 남아 있으면 유지
      if (
        this.colorBySelectedId &&
        this.activeControls.some(control => control.id === this.colorBySelectedId)
      ) {
        return;
      }

      // 호출부에서 주는 resolver 우선
      if (typeof this.resolveInitialColorByKey === 'function') {
        const plainControls = this.activeControls.map(control => {
          const clone = { ...control };
          delete clone.id;
          return clone;
        });

        const key = this.resolveInitialColorByKey(plainControls);
        if (key) {
          const matched = this.activeControls.find(control => control.key === key);
          if (matched) {
            this.colorBySelectedId = matched.id;
            return;
          }
        }
      }

      // 그 외에는 기본 규칙(first)
      this.colorBySelectedId = this.activeControls[0].id;
    },

    transferColorBySelection(removedIndex) {
      if (!this.useColorBy) {
        return;
      }

      if (!this.activeControls.length) {
        this.colorBySelectedId = null;
        this.$emit('color-by-change', null);
        return;
      }

      const rule = this.colorByTransferRule || 'first';

      let targetIndex = 0;

      if (rule === 'left') {
        const candidateIndex = removedIndex - 1;
        if (candidateIndex >= 0 && candidateIndex < this.activeControls.length) {
          targetIndex = candidateIndex;
        }
      } else if (rule === 'right') {
        const candidateIndex = removedIndex;
        if (candidateIndex >= 0 && candidateIndex < this.activeControls.length) {
          targetIndex = candidateIndex;
        }
      }

      const target = this.activeControls[targetIndex];
      this.colorBySelectedId = target.id;

      this.$emit('color-by-change', {
        control: target,
        index: targetIndex,
        key: target.key
      });
    },

    onColorByChange(element, index) {
      this.colorBySelectedId = element.id;
      this.$emit('color-by-change', {
        control: element,
        index,
        key: element.key
      });
    },

    // ===================== 스타일 =====================

    getTextStyle(element, isActiveArea) {
      const isHovered = this.hoveredControlId === element.id;
      const isColorBySelected =
        this.useColorBy && this.colorBySelectedId === element.id;

      let color = this.baseFontColor;

      if (isActiveArea && isHovered) {
        color = this.highlightFontColor;
      } else if (isActiveArea && isColorBySelected) {
        color = this.highlightFontColor;
      }

      return { color };
    },

    getContentStyle(index, element) {
      const style = {};

      const maxWidth =
        element.maxWidth != null ? element.maxWidth : this.defaultMaxWidth;
      style.maxWidth = typeof maxWidth === 'number' ? `${maxWidth}px` : maxWidth;

      if (this.hoveredControlId === element.id) {
        const colorIndex = index % this.depthHighlightColors.length;
        style.borderColor = this.depthHighlightColors[colorIndex];
        style.backgroundColor = this.depthHighlightBgColors[colorIndex];
      } else if (this.useColorBy && this.colorBySelectedId === element.id) {
        // ColorBy 선택된 컨트롤은 살짝 테두리만 강조
        style.borderColor = '#1E5FCB';
      }

      return style;
    }
  }
};
</script>

<style scoped>
.control-chain {
  display: flex;
  gap: 16px;
  align-items: stretch;
  background: #fafafa;
  border: 1px solid #e5e5e5;
  padding: 8px;
  box-sizing: border-box;
}

.control-chain--available-right {
  flex-direction: row;
}

.control-chain--available-left {
  flex-direction: row-reverse;
}

/* 활성 체인 영역 */
.control-chain__active {
  position: relative;
  box-sizing: border-box;
}

.control-chain__draggable {
  width: 100%;
  height: 100%;
}

/* 사용 가능한 컨트롤 영역 */
.control-chain__available {
  box-sizing: border-box;
}

.control-chain__available-title {
  margin-bottom: 8px;
  font-weight: bold;
  font-size: 12px;
}

.control-chain__available-list-wrapper {
  flex: 1;
  overflow-y: auto;
}

.control-chain__available-list {
  list-style: none;
  padding: 0;
  margin: 0;
  height: 100%;
}

.control-chain__available-item + .control-chain__available-item {
  margin-top: 4px;
}

/* 체인 아이템 */
.control-chain__item {
  display: flex;
  align-items: center;
}

.control-chain__separator {
  margin-right: 4px;
}

.control-chain__content {
  border: 1px solid #e4e4e4;
  padding: 6px 8px;
  background: #ffffff;
  min-width: 180px;
  min-height: 44px;
  transition: background-color 0.15s ease, border-color 0.15s ease;
  display: flex;
  flex-direction: column;
}

/* 헤더 */
.control-chain__header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  align-items: center;
}

.control-chain__header-left {
  display: flex;
  align-items: center;
  gap: 4px;
}

.control-chain__title {
  font-size: 12px;
  font-weight: 600;
}

.control-chain__close-button {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 12px;
  width: 12px;
  height: 12px;
  display: flex;
