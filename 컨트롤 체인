  font-weight: 600;
}

.control-chain__close-button {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 12px;
  width: 12px;
  height: 12px;
  line-height: 1;
  display:flex;
  align-items:center;
  justify-content:center;
}

.control-chain__drag-handle {
  cursor: grab;
  font-size: 12px;
  width: 12px;
}

.control-chain__drag-handle--small {
  font-size: 11px;
  width: 11px;
}

.control-chain__body {
  display: flex;
  align-items: stretch;
  gap: 4px;
  min-height: 24px;
}

.control-chain__dropdown {
  width: 100%;
}

/* ë¼ë²¨ ì˜ì—­ */
.control-chain__label-value {
  font-size: 12px;
  display: flex;
  align-items: center;
  width: 100%;
  min-height: 26px; /* â†“ ê¸°ì¡´ë³´ë‹¤ 2px ì¤„ì„ */
  padding: 3px 6px; /* ìœ„/ì•„ë˜ ê°ê° -1px */
  background: #ffffff;
  border: 1px solid #d9d9d9;
  box-sizing: border-box;
}

.control-chain__empty {
  font-size: 12px;
}

.control-chain__available-content {
  border: 1px solid #e0e0e0;
  padding: 4px 6px;
  display: flex;
  align-items: center;
  gap: 4px;
  background: #ffffff;
  transition: background-color 0.12s ease, border-color 0.12s ease;
}
.control-chain__available-content:hover {
  background: #f7f7f7;
  border-color: #d0d0d0;
}

.control-chain__available-label {
  font-size: 12px;
}
</style>


