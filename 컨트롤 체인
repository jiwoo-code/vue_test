<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="containerStyle"
  >
    <div
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span
            v-if="index > 0"
            class="control-chain__separator"
          >
            >>
          </span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span class="control-chain__drag-handle">≡</span>
                <span
                  class="control-chain__title"
                  :style="getTextStyle(element, true)"
                >
                  {{ element.label }}
                </span>
              </div>
              <button
                type="button"
                class="control-chain__close-button"
                :style="{ visibility: showCloseControlId === element.id ? 'visible' : 'hidden' }"
                @click.stop="removeControlById(element.id)"
              >
                ✕
              </button>
            </div>

            <div class="control-chain__body">
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />
              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                @input="onMultiSelectChange(element, index, $event)"
              />
              <span
                v-else
                class="control-chain__label-value"
                :style="{ color: baseFontColor }"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>
          </div>
        </div>
      </draggable>

      <div
        v-if="!activeControls.length"
        class="control-chain__empty"
        :style="emptyGuideTextStyle"
      >
        {{ emptyGuideText }}
      </div>
    </div>

    <div
      class="control-chain__available"
      :style="availableAreaStyle"
    >
      <div
        v-if="availableTitle"
        class="control-chain__available-title"
        :style="availableTitleTextStyle"
      >
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span class="control-chain__drag-handle control-chain__drag-handle--small">
                ≡
              </span>
              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>
  </div>
</template>

<script>
import draggable from 'vuedraggable';

const DEFAULT_MIN_HEIGHT = 260;
const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') return undefined;
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) return null;
  if (Array.isArray(input)) return input.length ? input.slice() : null;
  return [input];
};

const horizontalMap = { left: 'flex-start', center: 'center', right: 'flex-end' };
const verticalMap = { top: 'flex-start', center: 'center', bottom: 'flex-end' };

export default {
  name: 'ControlChain',
  components: { draggable },
  model: { prop: 'value', event: 'input' },
  props: {
    value: { type: Array, default: () => [] },
    controlTemplates: { type: Array, required: true },
    availablePlacement: { type: String, default: 'right', validator: v => ['right', 'left'].includes(v) },
    emptyGuideText: { type: String, default: '목록에서 드래그하여 추가해 주세요.' },
    availableTitle: { type: String, default: '' },
    width: [Number, String],
    height: [Number, String],
    useHorizontalScroll: { type: Boolean, default: false },
    useVerticalScroll: { type: Boolean, default: false }
  },
  data() {
    return {
      activeControls: [],
      availableControls: [],
      dragGroup: { name: 'control-chain', pull: true, put: true },
      dragHandleSelector: '.control-chain__drag-handle',
      hoveredControlId: null,
      showCloseControlId: null,
      idMap: {},
      depthHighlightColors: ['#D5383A', '#EB702D', '#FBB41A', '#2DA379', '#1E5FCB', '#553CA5'],
      depthHighlightBgColors: ['#F8DDDF', '#FAE2D4', '#FFF0C8', '#E0F0E8', '#E0EBFA', '#E5E0F6'],
      defaultMaxWidth: 240,
      baseFontColor: '#222222',
      highlightFontColor: '#1E5FCB',
      availableWidth: null,
      horizontalAlign: 'flex-start',
      verticalAlign: 'center'
    };
  },
  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },
    containerStyle() {
      const style = { width: toSize(this.width) || '100%', boxSizing: 'border-box' };
      const h = toSize(this.height);
      if (h) { style.height = h; style.minHeight = h; }
      else { style.height = 'auto'; style.minHeight = `${DEFAULT_MIN_HEIGHT}px`; }
      return style;
    },
    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        display: 'flex',
        flexDirection: 'column',
        boxSizing: 'border-box',
        position: 'relative' // [중요] 절대 위치 안내 문구를 위해 relative 설정
      };
      const h = toSize(this.height);
      if (h) { style.height = '100%'; style.minHeight = 0; }
      else { style.height = 'auto'; style.minHeight = `${DEFAULT_MIN_HEIGHT}px`; }
      style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';
      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';
      return style;
    },
    availableAreaStyle() {
      const raw = this.availableWidth ?? `${DEFAULT_AVAILABLE_WIDTH}px`;
      const w = toSize(raw) ?? raw;
      const style = {
        width: w, flexBasis: w, flexShrink: 0, flexGrow: 0,
        padding: '8px', border: '1px solid #e5e5e5', background: '#ffffff',
        boxSizing: 'border-box', display: 'flex', flexDirection: 'column'
      };
      const h = toSize(this.height);
      style.height = h ? '100%' : 'auto';
      if (!h) style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      return style;
    },
    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        flex: '1 1 auto',
        width: '100%',
        minWidth: 0,
        // [중요] 비어있어도 드롭을 받을 수 있도록 최소 높이 확보
        minHeight: '140px' 
      };
      style.flexWrap = this.useHorizontalScroll ? 'nowrap' : 'wrap';
      style.justifyContent = this.horizontalAlign;
      if (this.useHorizontalScroll) style.alignItems = this.verticalAlign;
      else style.alignContent = this.verticalAlign;
      return style;
    },
    emptyGuideTextStyle() {
      return { color: '#999999' };
    },
    availableTitleTextStyle() {
      return { color: this.baseFontColor, fontWeight: '600' };
    }
  },
  watch: {
    value: { handler() { this.buildControls(); }, deep: true },
    controlTemplates: { handler() { this.buildControls(); }, deep: true }
  },
  created() { this.buildControls(); },
  methods: {
    setHighlightBorderColors(c) { const a = toArray(c); if(a) this.depthHighlightColors = a; },
    setHighlightBackgroundColors(c) { const a = toArray(c); if(a) this.depthHighlightBgColors = a; },
    setBaseFontColor(c) { if(c) this.baseFontColor = c; },
    setHighlightFontColor(c) { if(c) this.highlightFontColor = c; },
    setAvailableWidth(w) { this.availableWidth = typeof w === 'number' ? `${w}px` : w; },
    setHorizontalAlign(m) { if(horizontalMap[m]) this.horizontalAlign = horizontalMap[m]; },
    setVerticalAlign(m) { if(verticalMap[m]) this.verticalAlign = verticalMap[m]; },
    
    getStableId(c) {
      const k = c.key || c.label || 'control';
      if(!this.idMap[k]) this.idMap[k] = `${k}-${Math.random().toString(36).slice(2,8)}`;
      return this.idMap[k];
    },
    buildControls() {
      const vals = Array.isArray(this.value) ? this.value : [];
      const tpls = Array.isArray(this.controlTemplates) ? this.controlTemplates : [];
      const used = new Set(vals.map(c => c.key).filter(k => k != null));
      this.activeControls = vals.map(c => ({...c, id: c.id || this.getStableId(c)}));
      this.availableControls = tpls.filter(t => !used.has(t.key)).map(t => ({...t, id: t.id || this.getStableId(t)}));
    },
    emitChain() {
      const cloned = this.activeControls.map(c => {
        const o = {...c};
        if(Array.isArray(o.selectedValues)) o.selectedValues = o.selectedValues.slice();
        delete o.id;
        return o;
      });
      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },
    onActiveChange(e) {
      this.emitChain();
      if(e.added) this.$emit('control-added', {control: e.added.element, index: e.added.newIndex});
      if(e.moved) this.$emit('control-depth-change', {control: e.moved.element, oldIndex: e.moved.oldIndex, newIndex: e.moved.newIndex});
      if(e.removed) this.$emit('control-removed', {control: e.removed.element, index: e.removed.oldIndex});
    },
    removeControlById(id) {
      const idx = this.activeControls.findIndex(c => c.id === id);
      if(idx < 0) return;
      const rm = this.activeControls.splice(idx, 1)[0];
      this.availableControls.push(rm);
      if(this.hoveredControlId === id) this.hoveredControlId = null;
      if(this.showCloseControlId === id) this.showCloseControlId = null;
      this.emitChain();
      this.$emit('control-removed', {control: rm, index: idx});
    },
    onControlMouseEnter(el) { this.hoveredControlId = el.id; this.showCloseControlId = el.id; },
    onControlMouseLeave(el) { if(this.hoveredControlId===el.id) this.hoveredControlId=null; if(this.showCloseControlId===el.id) this.showCloseControlId=null; },
    onSingleSelectChange(el, idx, v) { if(el.selectedValue===v) return; el.selectedValue=v; this.emitChain(); this.$emit('control-selection-change', {control:el, index:idx, type:'single', value:v}); },
    onMultiSelectChange(el, idx, vals) {
      const n = Array.isArray(vals) ? vals.slice() : [];
      const p = Array.isArray(el.selectedValues) ? el.selectedValues : [];
      if(p.length===n.length && p.every((v,i)=>v===n[i])) return;
      el.selectedValues=n; this.emitChain(); this.$emit('control-selection-change', {control:el, index:idx, type:'multi', values:n});
    },
    getTextStyle(el, isActive) {
      const isHov = this.hoveredControlId === el.id;
      return { color: isActive && isHov ? this.highlightFontColor : this.baseFontColor };
    },
    getContentStyle(idx, el) {
      const style = {};
      const mw = el.maxWidth != null ? el.maxWidth : this.defaultMaxWidth;
      style.maxWidth = typeof mw === 'number' ? `${mw}px` : mw;
      if(this.hoveredControlId === el.id) {
        style.borderColor = this.depthHighlightColors[idx % this.depthHighlightColors.length];
        style.backgroundColor = this.depthHighlightBgColors[idx % this.depthHighlightBgColors.length];
      }
      return style;
    }
  }
};
</script>

<style scoped>
/* 기존 스타일 유지 */
.control-chain { display: flex; gap: 16px; align-items: stretch; background: #fafafa; border: 1px solid #e5e5e5; padding: 8px; box-sizing: border-box; }
.control-chain--available-right { flex-direction: row; }
.control-chain--available-left { flex-direction: row-reverse; }
.control-chain__active { position: relative; box-sizing: border-box; }
.control-chain__draggable { width: 100%; height: 100%; }
.control-chain__available { box-sizing: border-box; }
.control-chain__available-title { margin-bottom: 8px; font-weight: bold; font-size: 12px; }
.control-chain__available-list-wrapper { flex: 1; overflow-y: auto; }
.control-chain__available-list { list-style: none; padding: 0; margin: 0; height: 100%; }
.control-chain__available-item + .control-chain__available-item { margin-top: 4px; }
.control-chain__item { display: flex; align-items: center; }
.control-chain__separator { margin-right: 4px; }
.control-chain__content { border: 1px solid #e4e4e4; padding: 6px 8px; background: #ffffff; min-width: 180px; min-height: 44px; transition: background-color 0.15s ease, border-color 0.15s ease; display: flex; flex-direction: column; }
.control-chain__header { display: flex; justify-content: space-between; margin-bottom: 4px; align-items: center; }
.control-chain__header-left { display: flex; align-items: center; gap: 4px; }
.control-chain__title { font-size: 12px; font-weight: 600; }
.control-chain__close-button { background: transparent; border: none; cursor: pointer; font-size: 12px; width: 12px; height: 12px; display: flex; align-items: center; justify-content: center; }
.control-chain__drag-handle { cursor: grab; font-size: 12px; width: 12px; }
.control-chain__drag-handle--small { font-size: 11px; width: 11px; }
.control-chain__body { display: flex; align-items: stretch; gap: 4px; min-height: 24px; }
.control-chain__dropdown { width: 100%; }
.control-chain__label-value { font-size: 12px; display: flex; align-items: center; width: 100%; min-height: 26px; padding: 3px 6px; background: #ffffff; border: 1px solid #d9d9d9; box-sizing: border-box; }
.control-chain__available-content { border: 1px solid #e0e0e0; padding: 4px 6px; display: flex; align-items: center; gap: 4px; background: #ffffff; transition: background-color 0.12s ease, border-color 0.12s ease; }
.control-chain__available-content:hover { background: #f7f7f7; border-color: #d0d0d0; }
.control-chain__available-label { font-size: 12px; }

/* [수정 3] 안내 문구 스타일 변경
  draggable 밖으로 빠져나왔으므로, 부모(.control-chain__active) 기준으로 절대 위치를 잡아줍니다.
  pointer-events: none을 추가하여 드래그 중인 마우스 이벤트를 가로채지 않도록 합니다.
*/
.control-chain__empty {
  font-size: 12px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none; /* 드롭 영역 방해 금지 */
  width: 100%;
  text-align: center;
}
</style>
