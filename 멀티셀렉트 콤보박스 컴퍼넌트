  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 32px;
  padding: 4px 8px;
  border: 1px solid #bdbdbd;
  border-radius: 0;
  cursor: pointer;
  background-color: #ffffff;
}

.vcs-placeholder {
  color: #aaaaaa;
}

.vcs-summary {
  flex: 1;
  margin-right: 8px;
  white-space: nowrap;
