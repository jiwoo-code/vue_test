<!--
  ---------------------------------------------------------------------------
  필요한 라이브러리

  vuedraggable (Sortable.js 기반 드래그)
    npm install vuedraggable sortablejs

  ---------------------------------------------------------------------------
-->

<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="containerStyle"
  >
    <!-- 활성 체인 영역 (왼쪽) -->
    <div
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span
            v-if="index > 0"
            class="control-chain__separator"
          >
            >>
          </span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <!-- 헤더: 드래그 핸들 + 타이틀 + X 버튼 -->
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span class="control-chain__drag-handle">
                  ≡
                </span>
                <span
                  class="control-chain__title"
                  :style="getTextStyle(element, true)"
                >
                  {{ element.label }}
                </span>
              </div>

              <button
                type="button"
                class="control-chain__close-button"
                :style="{ visibility: showCloseControlId === element.id ? 'visible' : 'hidden' }"
                @click.stop="removeControlById(element.id)"
              >
                ✕
              </button>
            </div>

            <!-- 바디: 드롭다운 / 라벨 (items 없으면 숨김) -->
            <div
              v-if="hasBody(element)"
              class="control-chain__body"
            >
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <span
                v-else-if="element.type === 'label'"
                class="control-chain__label-value"
                :style="{ color: baseFontColor }"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>

            <!-- ColorBy 라디오 줄 -->
            <div
              v-if="useColorBy"
              class="control-chain__colorby-row"
            >
              <label class="control-chain__colorby-label">
                <input
                  type="radio"
                  class="control-chain__colorby-radio"
                  :value="element.key"
                  v-model="selectedColorByKey"
                  @change="onColorByChange(element)"
                />
                <span class="control-chain__colorby-text">
                  ColorBy
                </span>
              </label>
            </div>
          </div>
        </div>
      </draggable>

      <!-- 비어 있을 때 안내 문구 (드롭 영역 방해 안 함) -->
      <div
        v-if="!activeControls.length"
        class="control-chain__empty"
        :style="emptyGuideTextStyle"
      >
        {{ emptyGuideText }}
      </div>
    </div>

    <!-- 사용 가능한 컨트롤 영역 (오른쪽) -->
    <div
      class="control-chain__available"
      :style="availableAreaStyle"
    >
      <div
        v-if="availableTitle"
        class="control-chain__available-title"
        :style="availableTitleTextStyle"
      >
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span class="control-chain__drag-handle control-chain__drag-handle--small">
                ≡
              </span>
              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>
  </div>
</template>

<script>
import draggable from 'vuedraggable';

const DEFAULT_MIN_HEIGHT = 260;
const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') {
    return undefined;
  }
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) {
    return null;
  }
  if (Array.isArray(input)) {
    return input.length ? input.slice() : null;
  }
  return [input];
};

const horizontalMap = {
  left: 'flex-start',
  center: 'center',
  right: 'flex-end'
};

const verticalMap = {
  top: 'flex-start',
  center: 'center',
  bottom: 'flex-end'
};

export default {
  name: 'ControlChain',
  components: { draggable },

  model: { prop: 'value', event: 'input' },

  props: {
    value: {
      type: Array,
      default() {
        return [];
      }
    },
    controlTemplates: {
      type: Array,
      required: true
    },
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return ['right', 'left'].includes(v);
      }
    },
    emptyGuideText: {
      type: String,
      default: '목록에서 드래그하여 추가해 주세요.'
    },
    availableTitle: {
      type: String,
      default: ''
    },

    // 전체 컨트롤 체인 크기
    width: [Number, String],
    height: [Number, String],

    // 스크롤 옵션
    useHorizontalScroll: {
      type: Boolean,
      default: false
    },
    useVerticalScroll: {
      type: Boolean,
      default: false
    },

    // ColorBy 기능 사용 여부
    useColorBy: {
      type: Boolean,
      default: false
    },

    // ColorBy 선택 이동 규칙: first | left | right
    colorByTransferRule: {
      type: String,
      default: 'first',
      validator(v) {
        return ['first', 'left', 'right'].includes(v);
      }
    }
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],
      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',

      hoveredControlId: null,
      showCloseControlId: null,

      idMap: {},

      depthHighlightColors: [
        '#D5383A',
        '#EB702D',
        '#FBB41A',
        '#2DA379',
        '#1E5FCB',
        '#553CA5'
      ],
      depthHighlightBgColors: [
        '#F8DDDF',
        '#FAE2D4',
        '#FFF0C8',
        '#E0F0E8',
        '#E0EBFA',
        '#E5E0F6'
      ],

      defaultMaxWidth: 240,

      baseFontColor: '#222222',
      highlightFontColor: '#1E5FCB',

      availableWidth: null,

      horizontalAlign: 'flex-start',
      verticalAlign: 'center',

      // ColorBy 선택 상태 (컨트롤 key 기준)
      selectedColorByKey: null,

      // ColorBy 스타일 (나중에 튜닝 가능)
      colorByBorderColor: '#1E5FCB',
      colorByBackgroundColor: '#E8F0FF'
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    containerStyle() {
      const style = {
        width: toSize(this.width) || '100%',
        boxSizing: 'border-box'
      };

      const h = toSize(this.height);
      if (h) {
        style.height = h;
        style.minHeight = h;
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        display: 'flex',
        flexDirection: 'column',
        boxSizing: 'border-box',
        position: 'relative'
      };

      const h = toSize(this.height);
      if (h) {
        style.height = '100%';
        style.minHeight = 0;
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';
      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';

      return style;
    },

    availableAreaStyle() {
      const rawWidth = this.availableWidth ?? `${DEFAULT_AVAILABLE_WIDTH}px`;
      const widthValue = toSize(rawWidth) ?? rawWidth;

      const style = {
        width: widthValue,
        flexBasis: widthValue,
        flexShrink: 0,
        flexGrow: 0,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column'
      };

      const h = toSize(this.height);
      if (h) {
        style.height = '100%';
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        flex: '1 1 auto',
        width: '100%',
        minWidth: 0,
        minHeight: '140px'
      };

      style.flexWrap = this.useHorizontalScroll ? 'nowrap' : 'wrap';
      style.justifyContent = this.horizontalAlign;

      if (this.useHorizontalScroll) {
        style.alignItems = this.verticalAlign;
      } else {
        style.alignContent = this.verticalAlign;
      }

      return style;
    },

    emptyGuideTextStyle() {
      return {
        color: '#999999'
      };
    },

    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
      },
      deep: true
    },
    controlTemplates: {
      handler() {
        this.buildControls();
      },
      deep: true
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // ===================== 외부에서 호출할 수 있는 API =====================

    setHighlightBorderColors(colors) {
      const arr = toArray(colors);
      if (arr) {
        this.depthHighlightColors = arr;
      }
    },

    setHighlightBackgroundColors(colors) {
      const arr = toArray(colors);
      if (arr) {
        this.depthHighlightBgColors = arr;
      }
    },

    setBaseFontColor(color) {
      if (color) {
        this.baseFontColor = color;
      }
    },

    setHighlightFontColor(color) {
      if (color) {
        this.highlightFontColor = color;
      }
    },

    setAvailableWidth(width) {
      if (typeof width === 'number') {
        this.availableWidth = `${width}px`;
      } else if (width) {
        this.availableWidth = width;
      }
    },

    setHorizontalAlign(mode) {
      const mapped = horizontalMap[mode];
      if (mapped) {
        this.horizontalAlign = mapped;
      }
    },

    setVerticalAlign(mode) {
      const mapped = verticalMap[mode];
      if (mapped) {
        this.verticalAlign = mapped;
      }
    },

    // ColorBy 선택을 외부에서 변경하고 싶을 때 사용
    setColorBySelectedKey(key) {
      if (!this.useColorBy) {
        return;
      }
      if (!key) {
        this.selectedColorByKey = null;
        this.emitColorByChange(null, -1);
        return;
      }
      const index = this.activeControls.findIndex(control => control.key === key);
      if (index < 0) {
        return;
      }
      this.selectedColorByKey = key;
      this.emitColorByChange(this.activeControls[index], index);
    },

    getColorBySelectedKey() {
      return this.selectedColorByKey;
    },

    // ===================== 내부 빌드 로직 =====================

    getStableId(control) {
      const key = control.key || control.label || 'control';
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[key];
    },

    buildControls() {
      const vals = Array.isArray(this.value) ? this.value : [];
      const tpls = Array.isArray(this.controlTemplates) ? this.controlTemplates : [];

      const used = new Set(
        vals
          .map(control => control.key)
          .filter(key => key != null)
      );

      this.activeControls = vals.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = tpls
        .filter(template => !used.has(template.key))
        .map(template => ({
          ...template,
          id: template.id || this.getStableId(template)
        }));

      // ColorBy 초기 선택: value에 colorBySelected === true가 있으면 그걸로,
      // 없으면 첫 번째 컨트롤로
      if (this.useColorBy) {
        const explicit = this.activeControls.find(control => control.colorBySelected === true);
        if (explicit) {
          this.selectedColorByKey = explicit.key;
        } else if (!this.selectedColorByKey && this.activeControls.length > 0) {
          this.selectedColorByKey = this.activeControls[0].key;
        }
      } else {
        this.selectedColorByKey = null;
      }
    },

    emitChain() {
      const cloned = this.activeControls.map(control => {
        const obj = { ...control };
        if (Array.isArray(obj.selectedValues)) {
          obj.selectedValues = obj.selectedValues.slice();
        }
        delete obj.id;
        return obj;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    emitColorByChange(control, index) {
      const key = control ? control.key : null;
      this.$emit('color-by-change', {
        control,
        key,
        index
      });
    },

    // ===================== 드래그/드롭 =====================

    onActiveChange(event) {
      this.emitChain();

      if (event.added) {
        this.$emit('control-added', {
          control: event.added.element,
          index: event.added.newIndex
        });
      }

      if (event.moved) {
        this.$emit('control-depth-change', {
          control: event.moved.element,
          oldIndex: event.moved.oldIndex,
          newIndex: event.moved.newIndex
        });
      }

      if (event.removed) {
        this.$emit('control-removed', {
          control: event.removed.element,
          index: event.removed.oldIndex
        });
      }
    },

    removeControlById(controlId) {
      const index = this.activeControls.findIndex(
        control => control.id === controlId
      );
      if (index < 0) {
        return;
      }

      const removed = this.activeControls.splice(index, 1)[0];
      this.availableControls.push(removed);

      if (this.hoveredControlId === controlId) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === controlId) {
        this.showCloseControlId = null;
      }

      // ColorBy 선택된 컨트롤이 삭제되었을 때
      if (this.useColorBy && removed && removed.key === this.selectedColorByKey) {
        this.transferColorBySelection(index);
      }

      this.emitChain();
      this.$emit('control-removed', {
        control: removed,
        index
      });
    },

    transferColorBySelection(removedIndex) {
      const length = this.activeControls.length;
      if (!length) {
        this.selectedColorByKey = null;
        this.emitColorByChange(null, -1);
        return;
      }

      let targetIndex = 0;
      if (this.colorByTransferRule === 'left') {
        targetIndex = removedIndex - 1;
        if (targetIndex < 0) {
          targetIndex = 0;
        }
      } else if (this.colorByTransferRule === 'right') {
        targetIndex = removedIndex;
        if (targetIndex >= length) {
          targetIndex = length - 1;
        }
      } else {
        // first
        targetIndex = 0;
      }

      const target = this.activeControls[targetIndex] || null;
      this.selectedColorByKey = target ? target.key : null;
      this.emitColorByChange(target, targetIndex);
    },

    onControlMouseEnter(element) {
      this.hoveredControlId = element.id;
      this.showCloseControlId = element.id;
    },

    onControlMouseLeave(element) {
      if (this.hoveredControlId === element.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === element.id) {
        this.showCloseControlId = null;
      }
    },

    // ===================== 선택 변경 이벤트 =====================

    onSingleSelectChange(element, index, value) {
      if (element.selectedValue === value) {
        return;
      }

      element.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'single',
        value
      });
    },

    onMultiSelectChange(element, index, values) {
      const next = Array.isArray(values) ? values.slice() : [];
      const prev = Array.isArray(element.selectedValues)
        ? element.selectedValues
        : [];

      if (
        prev.length === next.length &&
        prev.every((v, i) => v === next[i])
      ) {
        return;
      }

      element.selectedValues = next;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'multi',
        values: next
      });
    },

    // ===================== ColorBy 라디오 =====================

    onColorByChange(element) {
      if (!this.useColorBy) {
        return;
      }
      this.selectedColorByKey = element.key;
      const index = this.activeControls.findIndex(control => control.key === element.key);
      this.emitColorByChange(element, index);
    },

    // ===================== 스타일 헬퍼 =====================

    getTextStyle(element, isActiveArea) {
      const isHovered = this.hoveredControlId === element.id;
      return {
        color:
          isActiveArea && isHovered
            ? this.highlightFontColor
            : this.baseFontColor
      };
    },

    getContentStyle(index, element) {
      const style = {};

      const maxWidth =
        element.maxWidth != null ? element.maxWidth : this.defaultMaxWidth;
      style.maxWidth =
        typeof maxWidth === 'number' ? `${maxWidth}px` : maxWidth;

      const isHovered = this.hoveredControlId === element.id;
      const isColorBySelected = this.useColorBy && element.key === this.selectedColorByKey;

      if (isHovered) {
        const borderIndex = index % this.depthHighlightColors.length;
        const backgroundIndex = index % this.depthHighlightBgColors.length;
        style.borderColor = this.depthHighlightColors[borderIndex];
        style.backgroundColor = this.depthHighlightBgColors[backgroundIndex];
      } else if (isColorBySelected) {
        style.borderColor = this.colorByBorderColor;
        style.backgroundColor = this.colorByBackgroundColor;
      }

      return style;
    },

    // 드롭다운/라벨 바디 표시 여부
    hasBody(element) {
      if (element.type === 'single' || element.type === 'multi') {
        const items = element.items;
        const hasItems = Array.isArray(items) && items.length > 0;
        return !!hasItems;
      }
      if (element.type === 'label') {
        return element.displayValue != null && element.displayValue !== '';
      }
      return false;
    }
  }
};
</script>

<style scoped>
.control-chain {
  display: flex;
  gap: 16px;
  align-items: stretch;
  background: #fafafa;
  border: 1px solid #e5e5e5;
  padding: 8px;
  box-sizing: border-box;
}

.control-chain--available-right {
  flex-direction: row;
}
.control-chain--available-left {
  flex-direction: row-reverse;
}

.control-chain__active {
  position: relative;
  box-sizing: border-box;
}

.control-chain__draggable {
  width: 100%;
  height: 100%;
}

.control-chain__available {
  box-sizing: border-box;
}

.control-chain__available-title {
  margin-bottom: 8px;
  font-weight: bold;
  font-size: 12px;
}

.control-chain__available-list-wrapper {
  flex: 1;
  overflow-y: auto;
}

.control-chain__available-list {
  list-style: none;
  padding: 0;
  margin: 0;
  height: 100%;
}

.control-chain__available-item + .control-chain__available-item {
  margin-top: 4px;
}

.control-chain__item {
  display: flex;
  align-items: center;
}

.control-chain__separator {
  margin-right: 4px;
}

.control-chain__content {
  border: 1px solid #e4e4e4;
  padding: 6px 8px;
  background: #ffffff;
  min-width: 180px;
  min-height: 44px;
  transition: background-color 0.15s ease, border-color 0.15s ease;
  display: flex;
  flex-direction: column;
}

/* 헤더 */
.control-chain__header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  align-items: center;
}

.control-chain__header-left {
  display: flex;
  align-items: center;
  gap: 4px;
}

.control-chain__title {
  font-size: 12px;
  font-weight: 600;
}

/* X 버튼 */
.control-chain__close-button {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 12px;
  width: 12px;
  height: 12px;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 드래그 핸들 */
.control-chain__drag-handle {
  cursor: grab;
  font-size: 12px;
  width: 12px;
}

.control-chain__drag-handle--small {
  font-size: 11px;
  width: 11px;
}

/* 바디 */
.control-chain__body {
  display: flex;
  align-items: stretch;
  gap: 4px;
  min-height: 24px;
}

.control-chain__dropdown {
  width: 100%;
}

/* 라벨 영역 */
.control-chain__label-value {
  font-size: 12px;
  display: flex;
  align-items: center;
  width: 100%;
  min-height: 26px;
  padding: 3px 6px;
  background: #ffffff;
  border: 1px solid #d9d9d9;
  box-sizing: border-box;
}

/* ColorBy 줄 */
.control-chain__colorby-row {
  margin-top: 4px;
}

.control-chain__colorby-label {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  font-size: 11px;
}

.control-chain__colorby-radio {
  margin: 0;
}

.control-chain__colorby-text {
  font-size: 11px;
}

/* 비어 있을 때 안내 */
