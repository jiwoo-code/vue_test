<template>
  <div class="sy-main-tab">
    <div class="main-header">
      <div>
        <h3>ER Log Timeline</h3>
        <p class="lede">Click a lot bar to open the detail tab.</p>
      </div>
    </div>

    <div class="legend-row">
      <div class="legend">
        <div class="legend-item">
          <span class="swatch has-sy"></span>
          <span>Has SY Data</span>
        </div>
        <div class="legend-item">
          <span class="swatch incomplete"></span>
          <span>Has Incomplete SY Data</span>
        </div>
        <div class="legend-item">
          <span class="swatch reject"></span>
          <span>Has Reject Wafer</span>
        </div>
      </div>
    </div>

    <SyErLogChart ref="chart" @select-lot="onSelectLot" />
  </div>
</template>

<script>
import SyErLogChart from './SyErLogChart.vue';

export default {
  name: 'MainTab',
  components: {
    SyErLogChart
  },
  props: {
    erLogData: {
      type: Array,
      default: () => []
    }
  },
  watch: {
    erLogData: {
      deep: true,
      immediate: true,
      handler(value) {
        this.setData(value);
      }
    }
  },
  methods: {
    onSelectLot(payload) {
      console.log('메인탭 onSelectLot() payload = ', payload);
      this.$emit('select-lot', payload);
    },
    setData(data) {
      const chart = this.$refs.chart;
      if (!chart || typeof chart.setData !== 'function') return;
      chart.setData(data);
    },
    hideTooltip() {
      const chart = this.$refs.chart;
      if (chart && typeof chart.hideTooltip === 'function') {
        chart.hideTooltip();
      }
    }
  }
};
</script>

<style scoped>
.sy-main-tab {
  display: flex;
  flex-direction: column;
  gap: 18px;
}

.main-header {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  align-items: flex-start;
  justify-content: space-between;
}

h3 {
  margin: 0 0 6px;
  font-size: 20px;
}

.lede {
  margin: 0;
  color: #64748b;
  opacity: 1;
}

.legend-row {
  display: flex;
  justify-content: flex-end;
  margin-top: 6px;
}

.legend {
  display: flex;
  flex-wrap: wrap;
  gap: 10px 16px;
  font-size: 12px;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8px;
  color: #334155;
}

.swatch {
  width: 10px;
  height: 10px;
  border-radius: 999px;
  display: inline-block;
}

.swatch.has-sy {
  background: #3b82f6;
}

.swatch.incomplete {
  background: #f59e0b;
}

.swatch.reject {
  background: #ef4444;
}
</style>
