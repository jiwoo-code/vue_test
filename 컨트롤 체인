  border: 1px solid #e4e4e4;
  padding: 6px 8px;
  background: #ffffff;
  min-width: 180px;
  min-height: 44px;
  transition: background-color 0.15s ease, border-color 0.15s ease;
  display: flex;
  flex-direction: column;
}

.control-chain__header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  align-items: center;
}

.control-chain__header-left {
  display: flex;
  align-items: center;
