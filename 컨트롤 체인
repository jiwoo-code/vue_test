  box-sizing: border-box;
}

.control-chain--available-right {
  flex-direction: row;
}
.control-chain--available-left {
  flex-direction: row-reverse;
}

.control-chain__active {
  position: relative;
  box-sizing: border-box;
}

.control-chain__draggable {
  width: 100%;
}

.control-chain__available {
  box-sizing: border-box;
}

.control-chain__available-title {
  margin-bottom: 8px;
  font-weight: bold;
  font-size: 12px;
}

.control-chain__available-list-wrapper {
  flex: 1;
  overflow-y: auto;
}

.control-chain__available-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.control-chain__available-item + .control-chain__available-item {
  margin-top: 4px;
}

.control-chain__item {
  display: flex;
  align-items: center;
}

.control-chain__separator {
  margin-right: 4px;
}

.control-chain__content {
  border: 1px solid #e4e4e4;
  padding: 6px 8px;
  background: #ffffff;
  min-width: 180px;
  min-height: 44px;
  transition: background-color 0.15s ease, border-color 0.15s ease,
    box-shadow 0.15s ease;
  display: flex;
  flex-direction: column;
}

.control-chain__header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  align-items: center;
}

.control-chain__header-left {
  display: flex;
  align-items: center;
  gap: 4px;
}

.control-chain__title {
  font-size: 12px;
  font-weight: 600;
}

.control-chain__close-button {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 12px;
  width: 12px;
  height: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-chain__drag-handle {
  cursor: grab;
  font-size: 12px;
  width: 12px;
}

.control-chain__drag-handle--small {
  font-size: 11px;
  width: 11px;
}

.control-chain__body {
  display: flex;
  align-items: stretch;
  gap: 4px;
  min-height: 24px;
}

.control-chain__dropdown {
  width: 100%;
}

.control-chain__label-value {
  font-size: 12px;
  display: flex;
  align-items: center;
  width: 100%;
  min-height: 26px;
  padding: 3px 6px;
  background: #ffffff;
  border: 1px solid #d9d9d9;
  box-sizing: border-box;
}

.control-chain__color-by-row {
  margin-top: 4px;
}

.control-chain__color-by-label {
  font-size: 11px;
  display: inline-flex;
  align-items: center;
  gap: 4px;
  color: #555555;
}

.control-chain__color-by-radio {
  margin: 0;
}

.control-chain__empty {
  font-size: 12px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
  width: 100%;
  text-align: center;
}

.control-chain__available-content {
  border: 1px solid #e0e0e0;
  padding: 4px 6px;
  display: flex;
  align-items: center;
