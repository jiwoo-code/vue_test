</style>








transferColorBySelection(removedIndex) {
  if (!this.useColorBy || !this.activeControls.length) {
    this.colorBySelectedKey = null;
    return;
  }

  const length = this.activeControls.length;
  let newSelectedKey = null;
  let newSelectedControl = null;

  if (this.colorByTransferRule === 'first') {
    newSelectedControl = this.activeControls[0];
  }

  else if (this.colorByTransferRule === 'left') {
    const targetIndex = removedIndex - 1;
    newSelectedControl =
      targetIndex >= 0
        ? this.activeControls[targetIndex]
        : this.activeControls[0];
  }

  else if (this.colorByTransferRule === 'right') {
    const targetIndex = removedIndex;
    newSelectedControl =
      targetIndex < length
        ? this.activeControls[targetIndex]
        : this.activeControls[length - 1];
  }

  // ìµœì¢… í‚¤/ì»¨íŠ¸ë¡¤ ê²°ì •
  newSelectedKey = newSelectedControl?.key ?? null;
  this.colorBySelectedKey = newSelectedKey;

  // ğŸ”¥ ì¶”ê°€ëœ ë¶€ë¶„: ìë™ ë³€ê²½ ì‹œì—ë„ ë¶€ëª¨ì—ê²Œ ì´ë²¤íŠ¸ ì•Œë¦¼
  this.$emit('color-by-change', {
    key: newSelectedKey,
    control: newSelectedControl
  });
}


























<!--
  ---------------------------------------------------------------------------
  í•„ìš”í•œ ë¼ì´ë¸ŒëŸ¬ë¦¬

  vuedraggable (Sortable.js ê¸°ë°˜ ë“œë˜ê·¸)
    npm install vuedraggable sortablejs
      ---------------------------------------------------------------------------
-->

<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="[containerStyle, cssVarStyle]"
  >
    <!-- í™œì„± ì²´ì¸ ì˜ì—­ (ì™¼ìª½) -->
    <div
      ref="activeArea"
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        :fallback-tolerance="8"
        :force-fallback="true"
        chosen-class="control-chain__chosen"
        ghost-class="control-chain__ghost"
        :animation="150"
        @move="onDragMove"
        @end="onDragEnd"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span
            v-if="index > 0"
            class="control-chain__separator"
          >
            >>
          </span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <!-- í—¤ë”: ë“œë˜ê·¸ í•¸ë“¤ + íƒ€ì´í‹€ + X ë²„íŠ¼ -->
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span class="control-chain__drag-handle">
                  â‰¡
                </span>
                <span
                  class="control-chain__title"
                  :style="getTextStyle(element, true)"
                >
                  {{ element.label }}
                </span>
              </div>

              <button
                type="button"
                class="control-chain__close-button"
                :style="{ visibility: showCloseControlId === element.id ? 'visible' : 'hidden' }"
                @click.stop="removeControlById(element.id)"
              >
                âœ•
              </button>
            </div>

            <!-- ë°”ë””: dropdown / label (ì˜µì…˜ ì—†ìœ¼ë©´ í†µì§¸ë¡œ ë¯¸í‘œì‹œ) -->
            <div
              v-if="hasBody(element)"
              class="control-chain__body"
            >
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                :all-select="element.allSelect === true"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <span
                v-else-if="element.type === 'label'"
                class="control-chain__label-value"
                :style="{ color: baseFontColor }"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>

            <!-- ColorBy ë¼ì¸ -->
            <div
              v-if="useColorBy"
              class="control-chain__color-by-row"
            >
              <label class="control-chain__color-by-label">
                <input
                  type="radio"
                  class="control-chain__color-by-radio"
                  :name="colorByGroupName"
                  :value="element.key"
                  v-model="colorBySelectedKey"
                  @change="onColorByChange(element)"
                />
                ColorBy
              </label>
            </div>
          </div>
        </div>
      </draggable>

      <!-- ë¹„ì–´ ìˆì„ ë•Œ ì•ˆë‚´ ë¬¸êµ¬: ë“œë¡­ ë°©í•´ X -->
      <div
        v-if="!activeControls.length"
        class="control-chain__empty"
        :style="emptyGuideTextStyle"
      >
        {{ emptyGuideText }}
      </div>
    </div>

    <!-- ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤ ì˜ì—­ (ì˜¤ë¥¸ìª½) -->
    <div
      class="control-chain__available"
      :style="availableAreaStyle"
    >
      <div
        v-if="availableTitle"
        ref="availableTitle"
        class="control-chain__available-title"
        :style="availableTitleTextStyle"
      >
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
          :fallback-tolerance="8"
          :force-fallback="true"
          chosen-class="control-chain__chosen"
          ghost-class="control-chain__ghost"
          :animation="150"
          tag="ul"
          @move="onDragMove"
          @end="onDragEnd"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span class="control-chain__drag-handle control-chain__drag-handle--small">
                â‰¡
              </span>

              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>

        </draggable>
      </div>
    </div>
  </div>
</template>

<script>
import draggable from 'vuedraggable';
import UrDropdown from './UrDropdown.vue';
import UrMultiDropdown from './UrMultiDropdown.vue';

const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') {
    return undefined;
  }
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) return null;
  if (Array.isArray(input)) return input.length ? input.slice() : null;
  return [input];
};

const horizontalMap = {
  left: 'flex-start',
  center: 'center',
  right: 'flex-end'
};

const verticalMap = {
  top: 'flex-start',
  center: 'center',
  bottom: 'flex-end'
};

export default {
  name: 'ControlChain',
  components: { draggable, UrDropdown, UrMultiDropdown },

  model: { prop: 'value', event: 'input' },

  props: {
    /**
     * v-model ê°’
     * - í™œì„± ì²´ì¸ì— ì˜¬ë¼ê°„ ì»¨íŠ¸ë¡¤ ë°°ì—´
     */
    value: {
      type: Array,
      default() {
        return [];
      }
    },

    /**
     * ì „ì²´ ì»¨íŠ¸ë¡¤ í…œí”Œë¦¿ ëª©ë¡
     */
    controlTemplates: {
      type: Array,
      required: true
    },

    /**
     * ì˜¤ë¥¸ìª½/ì™¼ìª½ ì¤‘ ì–´ë–¤ ìª½ì— "ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤ ëª©ë¡"ì„ ë‘˜ì§€ ê²°ì •
     */
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return ['right', 'left'].includes(v);
      }
    },

    /**
     * ì™¼ìª½ ì²´ì¸ì´ ë¹„ì–´ ìˆì„ ë•Œ ë³´ì—¬ì¤„ ì•ˆë‚´ ë¬¸êµ¬
     */
    emptyGuideText: {
      type: String,
      default: 'ëª©ë¡ì—ì„œ ë“œë˜ê·¸í•˜ì—¬ ì¶”ê°€í•´ ì£¼ì„¸ìš”.'
    },

    /**
     * ì˜¤ë¥¸ìª½ "ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤" ì˜ì—­ì˜ íƒ€ì´í‹€
     */
    availableTitle: {
      type: String,
      default: ''
    },

    /**
     * ì „ì²´ ì»¨íŠ¸ë¡¤ì²´ì¸ ê°€ë¡œ/ì„¸ë¡œ í¬ê¸°
     * - height ë¯¸ì§€ì • ì‹œ: ë‚´ìš© ë†’ì´ì— ë”°ë¼ ìë™
     */
    width: {
      type: [Number, String],
      default: null
    },
    height: {
      type: [Number, String],
      default: null
    },

    /**
     * ìŠ¤í¬ë¡¤ ì‚¬ìš© ì—¬ë¶€
     */
    useHorizontalScroll: {
      type: Boolean,
      default: false
    },
    useVerticalScroll: {
      type: Boolean,
      default: false
    },

    /**
     * ColorBy ê¸°ëŠ¥ ì‚¬ìš© ì—¬ë¶€
     */
    useColorBy: {
      type: Boolean,
      default: false
    },

    /**
     * ì™¼ìª½ìœ¼ë¡œ ì˜¬ë¦´ ìˆ˜ ìˆëŠ” ì»¨íŠ¸ë¡¤ ìµœëŒ€ ê°œìˆ˜
     * - nullì´ë©´ ì œí•œ ì—†ìŒ
     */
    maxActiveControls: {
      type: Number,
      default: null
    },

    /**
     * ì»¨íŠ¸ë¡¤ ê¸°ë³¸ min/max width
     * - element.minWidth / element.maxWidthê°€ ìš°ì„ 
     */
    defaultMinWidth: {
      type: Number,
      default: 160
    },
    defaultMaxWidth: {
      type: Number,
      default: 240
    }
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],

      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',

      hoveredControlId: null,
      showCloseControlId: null,

      // ControlChainì˜ ê° controlì˜ ê³ ìœ  id ëª¨ìŒ
      idMap: {},

      depthHighlightColors: [
        '#D5383A',
        '#EB702D',
        '#FBB41A',
        '#2DA379',
        '#1E5FCB',
        '#553CA5'
      ],
      depthHighlightBgColors: [
        '#F8DDDF',
        '#FAE2D4',
        '#FFF0C8',
        '#E0F0E8',
        '#E0EBFA',
        '#E5E0F6'
      ],

      baseFontColor: '#222222',
      highlightFontColor: '#1E5FCB',

      availableWidth: null,

      horizontalAlign: 'flex-start',
      verticalAlign: 'center',

      // ColorBy ì„ íƒ ìƒíƒœ (key ê¸°ì¤€)
      colorBySelectedKey: null,

      // ë¼ë””ì˜¤ ë²„íŠ¼ ê·¸ë£¹ëª… (ControlChain ë‹¤ì¤‘ ì‚¬ìš© ëŒ€ë¹„ ëœë¤ ì‚¬ìš©)
      colorByGroupName: `color-by-${Math.random().toString(36).slice(2, 8)}`,

      // ìµœëŒ€ ê°œìˆ˜ ì œí•œìœ¼ë¡œ "ì¶”ê°€ ì‹œë„"ê°€ ì°¨ë‹¨ë˜ì—ˆëŠ”ì§€ ì—¬ë¶€ (ë“œë˜ê·¸ ì„¸ì…˜ ë‹¨ìœ„)
      isAddBlockedByLimit: false,

      // ì˜¤ë¥¸ìª½ ë“œë¡­ ë†’ì´(px): (ì™¼ìª½ ë“œë¡­ ì˜ì—­ ë†’ì´ - ì˜¤ë¥¸ìª½ ì œëª© ë†’ì´)
      availableDropHeightPx: null,

      // ì¸¡ì • ìŠ¤ì¼€ì¤„ ì¤‘ë³µ ë°©ì§€
      isMeasuringScheduled: false
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    containerStyle() {
      const style = {
        width: toSize(this.width) || '100%',
        boxSizing: 'border-box'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = heightValue;
      }

      return style;
    },

    cssVarStyle() {
      if (typeof this.availableDropHeightPx !== 'number') {
        return {};
      }
      return {
        '--available-drop-height': `${this.availableDropHeightPx}px`
      };
    },

    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        display: 'flex',
        flexDirection: 'column',
        boxSizing: 'border-box',
        position: 'relative'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = '100%';
        style.minHeight = 0;
      }

      style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';
      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';

      return style;
    },

    availableAreaStyle() {
      const widthValue = toSize(this.availableWidth ?? DEFAULT_AVAILABLE_WIDTH) ?? `${DEFAULT_AVAILABLE_WIDTH}px`;

      const style = {
        width: widthValue,
        flexBasis: widthValue,
        flexShrink: 0,
        flexGrow: 0,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = '100%';
        style.minHeight = 0;
      }

      return style;
    },

    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        flex: '1 1 auto',
        width: '100%',
        minWidth: 0,
        flexWrap: this.useHorizontalScroll ? 'nowrap' : 'wrap',
        justifyContent: this.horizontalAlign
      };

      if (this.useHorizontalScroll) {
        style.alignItems = this.verticalAlign;
      } else {
        style.alignContent = this.verticalAlign;
      }

      return style;
    },

    emptyGuideTextStyle() {
      return {
        color: '#999999'
      };
    },

    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
        this.scheduleMeasureAvailableDropHeight();
      },
      deep: true
    },
    controlTemplates: {
      handler() {
        this.buildControls();
        this.scheduleMeasureAvailableDropHeight();
      },
      deep: true
    },
    height() {
      this.scheduleMeasureAvailableDropHeight();
    },
    availableTitle() {
      this.scheduleMeasureAvailableDropHeight();
    }
  },

  mounted() {
    this.scheduleMeasureAvailableDropHeight();
    window.addEventListener('resize', this.onWindowResize);
  },

  beforeDestroy() {
    window.removeEventListener('resize', this.onWindowResize);
  },

  methods: {
    // ===================== ì™¸ë¶€ì—ì„œ í˜¸ì¶œ ê°€ëŠ¥í•œ API =====================

    setHighlightBorderColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightColors = array;
      }
    },

    setHighlightBackgroundColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightBgColors = array;
      }
    },

    setBaseFontColor(color) {
      if (color) {
        this.baseFontColor = color;
      }
    },

    setHighlightFontColor(color) {
      if (color) {
        this.highlightFontColor = color;
      }
    },

    setAvailableWidth(width) {
      if (typeof width === 'number') {
        this.availableWidth = `${width}px`;
        return;
      }
      if (width) {
        this.availableWidth = width;
      }
    },

    setHorizontalAlign(mode) {
      const mapped = horizontalMap[mode];
      if (mapped) {
        this.horizontalAlign = mapped;
      }
    },

    setVerticalAlign(mode) {
      const mapped = verticalMap[mode];
      if (mapped) {
        this.verticalAlign = mapped;
      }
    },

    // ===================== ë‚´ë¶€ ë°ì´í„° ë¹Œë“œ =====================

    getStableId(control) {
      const key = control.key || control.label || 'control';
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[key];
    },

    // activeControls / availableControls ì¬êµ¬ì„± (value/controlTemplates ë³€ê²½ ì‹œ)
    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates) ? this.controlTemplates : [];

      const usedKeys = new Set(
        valueArray
          .map(control => control.key)
          .filter(key => key != null)
      );

      this.activeControls = valueArray.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter(template => !usedKeys.has(template.key))
        .map(template => ({
          ...template,
          id: template.id || this.getStableId(template)
        }));

      this.ensureInitialColorBySelection();
    },

    emitChain() {
      const cloned = this.activeControls.map(control => {
        const copiedControl = { ...control };

        if (Array.isArray(copiedControl.selectedValues)) {
          copiedControl.selectedValues = copiedControl.selectedValues.slice();
        }

        delete copiedControl.id;
        return copiedControl;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    // ===================== ColorBy ê´€ë ¨ =====================

    ensureInitialColorBySelection() {
      if (!this.useColorBy) {
        if (this.colorBySelectedKey !== null) {
          this.colorBySelectedKey = null;
          this.$emit('color-by-change', { key: null, control: null });
        }
        return;
      }

      if (!this.activeControls.length) {
        if (this.colorBySelectedKey !== null) {
          this.colorBySelectedKey = null;
          this.$emit('color-by-change', { key: null, control: null });
        }
        return;
      }

      const previousKey = this.colorBySelectedKey;

      if (
        previousKey &&
        this.activeControls.some(control => control.key === previousKey)
      ) {
        return;
      }

      const nextControl = this.activeControls[0];
      const nextKey = nextControl ? nextControl.key : null;

      this.colorBySelectedKey = nextKey;

      if (previousKey !== nextKey) {
        this.$emit('color-by-change', {
          key: nextKey,
          control: nextControl
        });
      }
    },

    onColorByChange(element) {
      const nextKey = element && element.key != null ? element.key : null;

      this.colorBySelectedKey = nextKey;

      this.$emit('color-by-change', {
        key: nextKey,
        control: element
      });
    },

    // ===================== ë“œë˜ê·¸/ë“œë¡­ ìœ í‹¸ =====================

    // ì˜¤ë¥¸ìª½ -> ì™¼ìª½ í™œì„± ì˜ì—­ìœ¼ë¡œ "ì¶”ê°€ ì‹œë„"ì¸ì§€ íŒë‹¨
    isTryingToAddIntoActive(event) {
      const isDroppingIntoActive =
        event.to && event.to.classList && event.to.classList.contains('control-chain__draggable');

      const isCrossListMove = event.from !== event.to;

      // ì™¼ìª½ ë‚´ë¶€ ì´ë™ì´ê±°ë‚˜, ë‹¤ë¥¸ ì˜ì—­ì´ë©´ í—ˆìš©(ì¶”ê°€ ì‹œë„ê°€ ì•„ë‹˜)
      if (!isDroppingIntoActive || !isCrossListMove) {
        return false;
      }

      return true;
    },

    // ===================== ë“œë˜ê·¸/ë“œë¡­ ì´ë²¤íŠ¸ =====================

    onDragMove(event) {
      if (this.maxActiveControls == null) {
        return true;
      }

      if (!this.isTryingToAddIntoActive(event)) {
        return true;
      }

      const canAdd = this.activeControls.length < this.maxActiveControls;

      this.isAddBlockedByLimit = this.isAddBlockedByLimit || !canAdd;

      return canAdd;
    },

    onDragEnd() {
      if (this.maxActiveControls == null) {
        this.isAddBlockedByLimit = false;
        this.scheduleMeasureAvailableDropHeight();
        return;
      }

      if (this.isAddBlockedByLimit) {
        this.$emit('max-active-controls-reached', {
          max: this.maxActiveControls
        });
      }

      this.isAddBlockedByLimit = false;

      this.scheduleMeasureAvailableDropHeight();
    },

    onActiveChange(event) {
      this.emitChain();

      if (event.added) {
        this.$emit('control-added', {
          control: event.added.element,
          index: event.added.newIndex
        });
      }

      if (event.moved) {
        this.$emit('control-depth-change', {
          control: event.moved.element,
          oldIndex: event.moved.oldIndex,
          newIndex: event.moved.newIndex
        });
      }

      if (event.removed) {
        this.$emit('control-removed', {
          control: event.removed.element,
          index: event.removed.oldIndex
        });
      }

      this.ensureInitialColorBySelection();
      this.scheduleMeasureAvailableDropHeight();
    },

    removeControlById(controlId) {
      const removedIndex = this.activeControls.findIndex(control => control.id === controlId);
      if (removedIndex < 0) {
        return;
      }

      const removedControl = this.activeControls.splice(removedIndex, 1)[0];
      this.availableControls.push(removedControl);

      if (this.hoveredControlId === controlId) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === controlId) {
        this.showCloseControlId = null;
      }

      this.emitChain();
      this.$emit('control-removed', {
        control: removedControl,
        index: removedIndex
      });

      this.ensureInitialColorBySelection();
      this.scheduleMeasureAvailableDropHeight();
    },

    onControlMouseEnter(element) {
      this.hoveredControlId = element.id;
      this.showCloseControlId = element.id;
    },

    onControlMouseLeave(element) {
      if (this.hoveredControlId === element.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === element.id) {
        this.showCloseControlId = null;
      }
    },

    // ===================== ì„ íƒ ë³€ê²½ ì´ë²¤íŠ¸ =====================

    onSingleSelectChange(element, index, value) {
      if (element.selectedValue === value) {
        return;
      }

      element.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'single',
        value
      });
    },

    onMultiSelectChange(element, index, values) {
      const nextValues = Array.isArray(values) ? values.slice() : [];
      const previousValues = Array.isArray(element.selectedValues) ? element.selectedValues : [];

      const isSame =
        previousValues.length === nextValues.length &&
        previousValues.every((item, position) => item === nextValues[position]);

      if (isSame) {
        return;
      }

      element.selectedValues = nextValues;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'multi',
        values: nextValues
      });
    },

    // ===================== ìŠ¤íƒ€ì¼ í—¬í¼ =====================

    hasBody(element) {
      if (element.type === 'single' || element.type === 'multi') {
        return Array.isArray(element.items) && element.items.length > 0;
      }
      if (element.type === 'label') {
        return true;
      }
      return false;
    },

    getTextStyle(element, isActiveArea) {
      const isHovered = this.hoveredControlId === element.id;
      const color =
        isActiveArea && isHovered
          ? this.highlightFontColor
          : this.baseFontColor;

      return { color };
    },

    getContentStyle(index, element) {
      const style = {};

      const maxWidth = element.maxWidth ?? this.defaultMaxWidth;
      const minWidth = element.minWidth ?? this.defaultMinWidth;

      style.maxWidth = typeof maxWidth === 'number' ? `${maxWidth}px` : maxWidth;
      style.minWidth = typeof minWidth === 'number' ? `${minWidth}px` : minWidth;

      const isHovered = this.hoveredControlId === element.id;
      const isColorBySelected =
        this.useColorBy && element.key === this.colorBySelectedKey;

      if (isHovered) {
        const backgroundIndex = index % this.depthHighlightBgColors.length;
        style.backgroundColor = this.depthHighlightBgColors[backgroundIndex];

        // ColorBy ì„ íƒëœ ì»¨íŠ¸ë¡¤ì€ hover ì‹œ depth borderColor ì ìš© ì•ˆ í•¨
        if (!isColorBySelected) {
          const borderIndex = index % this.depthHighlightColors.length;
          style.borderColor = this.depthHighlightColors[borderIndex];
        }
      }

      if (isColorBySelected) {
        style.boxShadow = '0 0 0 1px #1E5FCB';
      }

      return style;
    },

    // ===================== ë†’ì´ ì¸¡ì • =====================

    onWindowResize() {
      this.scheduleMeasureAvailableDropHeight();
    },

    scheduleMeasureAvailableDropHeight() {
      if (this.isMeasuringScheduled) {
        return;
      }

      this.isMeasuringScheduled = true;

      this.$nextTick(() => {
        this.isMeasuringScheduled = false;
        this.measureAvailableDropHeight();
      });
    },

    measureAvailableDropHeight() {
      const activeAreaEl = this.$refs.activeArea;
      if (!activeAreaEl) {
        this.availableDropHeightPx = null;
        return;
      }

      const activeHeight = activeAreaEl.offsetHeight;

      const titleEl = this.$refs.availableTitle;
      const titleHeight = titleEl ? titleEl.offsetHeight : 0;

      const nextHeight = Math.max(activeHeight - titleHeight, 0);

      this.availableDropHeightPx = nextHeight;
    }
  },

  created() {
    this.buildControls();
  }
};
</script>

