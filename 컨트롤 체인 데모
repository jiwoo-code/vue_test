<template>
  <div class="demo-shell">
    <section class="demo-panel">
      <header class="demo-header">
        <div>
          <p class="eyebrow">Example</p>
          <h2>ControlChain 실시간 데모</h2>
          <p class="lede">
            사용 가능한 컨트롤을 드래그해 체인을 만들고, 오른쪽 설정에서 레이아웃 옵션을 즉시 바꿔보세요.
          </p>
        </div>
        <div class="actions">
          <button type="button" class="btn" @click="resetChain">초기화</button>
          <button type="button" class="btn ghost" @click="clearChain">모두 제거</button>
        </div>
      </header>

      <div class="layout">
        <div class="chain-column">
          <ControlChain
            ref="chain"
            v-model="chainValue"
            :control-templates="controlTemplates"
            :available-placement="settings.availablePlacement"
            :available-title="settings.availableTitle"
            :empty-guide-text="settings.emptyGuideText"
            :width="settings.width"
            :height="settings.height"
            :use-horizontal-scroll="settings.useHorizontalScroll"
            :use-vertical-scroll="settings.useVerticalScroll"
            @change="onChainChange"
          />
        </div>

        <aside class="side-column">
          <div class="card">
            <h3>레이아웃 설정</h3>
            <div class="form-grid">
              <label>
                Width
                <input v-model="settings.width" type="text" placeholder="e.g. 100% or 960px" />
              </label>
              <label>
                Height
                <input v-model="settings.height" type="text" placeholder="e.g. 360px" />
              </label>
              <label>
                Available width
                <input v-model="settings.availableWidth" type="text" placeholder="e.g. 220px" />
              </label>
              <label>
                위치
                <select v-model="settings.availablePlacement">
                  <option value="right">오른쪽</option>
                  <option value="left">왼쪽</option>
                </select>
              </label>
              <label>
                수평 정렬
                <select v-model="settings.horizontalAlign">
                  <option value="left">왼쪽</option>
                  <option value="center">가운데</option>
                  <option value="right">오른쪽</option>
                </select>
              </label>
              <label>
                수직 정렬
                <select v-model="settings.verticalAlign">
                  <option value="top">위</option>
                  <option value="center">가운데</option>
                  <option value="bottom">아래</option>
                </select>
              </label>
              <label class="checkbox">
                <input v-model="settings.useHorizontalScroll" type="checkbox" />
                가로 스크롤 사용
              </label>
              <label class="checkbox">
                <input v-model="settings.useVerticalScroll" type="checkbox" />
                세로 스크롤 사용
              </label>
              <label>
                안내 문구
                <input v-model="settings.emptyGuideText" type="text" />
              </label>
              <label>
                Available 타이틀
                <input v-model="settings.availableTitle" type="text" />
              </label>
              <label>
                기본 글자색
                <div class="color-field">
                  <input v-model="settings.baseFontColor" type="color" />
                  <input v-model="settings.baseFontColor" type="text" />
                </div>
              </label>
              <label>
                강조 글자색
                <div class="color-field">
                  <input v-model="settings.highlightFontColor" type="color" />
                  <input v-model="settings.highlightFontColor" type="text" />
                </div>
              </label>
            </div>
          </div>

          <div class="card">
            <h3>현재 체인 값</h3>
            <pre class="state-block">{{ formattedChain }}</pre>
          </div>
        </aside>
      </div>
    </section>
  </div>
</template>

<script>
import ControlChain from './ControlChain/ControlChain.vue';

const templateCountry = {
  key: 'country',
  label: '국가',
  type: 'single',
  items: [
    { label: '한국', value: 'KR' },
    { label: '미국', value: 'US' },
    { label: '일본', value: 'JP' }
  ],
  selectedValue: 'KR',
  maxWidth: 220
};

const templateChannel = {
  key: 'channel',
  label: '채널',
  type: 'multi',
  allSelect: true,
  items: [
    { label: '이메일', value: 'email' },
    { label: '알림톡', value: 'kakao' },
    { label: '푸시', value: 'push' }
  ],
  selectedValues: ['email']
};

const templateStatus = {
  key: 'status',
  label: '상태',
  type: 'label',
  displayValue: '활성'
};

const templatePriority = {
  key: 'priority',
  label: '우선순위',
  type: 'single',
  items: [
    { label: '높음', value: 'high' },
    { label: '보통', value: 'medium' },
    { label: '낮음', value: 'low' }
  ],
  selectedValue: 'medium'
};

const templateSegment = {
  key: 'segment',
  label: '세그먼트',
  type: 'multi',
  items: [
    { label: 'VIP', value: 'vip' },
    { label: '신규', value: 'new' },
    { label: '휴면', value: 'dormant' }
  ],
  selectedValues: ['vip', 'new']
};

const templateLanguage = {
  key: 'language',
  label: '언어',
  type: 'single',
  items: [
    { label: '한국어', value: 'ko' },
    { label: '영어', value: 'en' },
    { label: '일본어', value: 'ja' }
  ],
  selectedValue: 'ko'
};

const templateWindow = {
  key: 'send-window',
  label: '발송 시간대',
  type: 'label',
  displayValue: '09:00 ~ 18:00'
};

export default {
  name: 'ControlChainDemo',
  components: {
    ControlChain
  },
  data() {
    return {
      controlTemplates: [
        templateCountry,
        templateChannel,
        templatePriority,
        templateSegment,
        templateLanguage,
        templateWindow,
        templateStatus
      ],
      chainValue: [
        { ...templateCountry },
        { ...templateChannel },
        { ...templatePriority },
        { ...templateStatus }
      ],
      settings: {
        width: '100%',
        height: '360px',
        availablePlacement: 'right',
        useHorizontalScroll: false,
        useVerticalScroll: true,
        availableWidth: '220px',
        horizontalAlign: 'left',
        verticalAlign: 'center',
        emptyGuideText: '오른쪽에서 컨트롤을 추가하세요',
        availableTitle: '사용 가능',
        baseFontColor: '#222222',
        highlightFontColor: '#1E5FCB'
      }
    };
  },
  computed: {
    formattedChain() {
      return JSON.stringify(this.chainValue, null, 2);
    }
  },
  watch: {
    'settings.availableWidth': 'applyAvailableWidth',
    'settings.baseFontColor': 'applyBaseFontColor',
    'settings.highlightFontColor': 'applyHighlightFontColor',
    'settings.horizontalAlign': 'applyHorizontalAlign',
    'settings.verticalAlign': 'applyVerticalAlign'
  },
  mounted() {
    this.$nextTick(() => {
      this.applyAllChainMethods();
    });
  },
  methods: {
    resetChain() {
      this.chainValue = [{ ...templateCountry }, { ...templateChannel }];
    },
    clearChain() {
      this.chainValue = [];
    },
    onChainChange(next) {
      this.chainValue = next;
    },
    getChainRef() {
      return this.$refs.chain;
    },
    applyAvailableWidth() {
      const ref = this.getChainRef();
      if (ref && typeof ref.setAvailableWidth === 'function') {
        ref.setAvailableWidth(this.settings.availableWidth);
      }
    },
    applyBaseFontColor() {
      const ref = this.getChainRef();
      if (ref && typeof ref.setBaseFontColor === 'function') {
        ref.setBaseFontColor(this.settings.baseFontColor);
      }
    },
    applyHighlightFontColor() {
      const ref = this.getChainRef();
      if (ref && typeof ref.setHighlightFontColor === 'function') {
        ref.setHighlightFontColor(this.settings.highlightFontColor);
      }
    },
    applyHorizontalAlign() {
      const ref = this.getChainRef();
      if (ref && typeof ref.setHorizontalAlign === 'function') {
        ref.setHorizontalAlign(this.settings.horizontalAlign);
      }
    },
    applyVerticalAlign() {
      const ref = this.getChainRef();
      if (ref && typeof ref.setVerticalAlign === 'function') {
        ref.setVerticalAlign(this.settings.verticalAlign);
      }
    },
    applyAllChainMethods() {
      this.applyAvailableWidth();
      this.applyBaseFontColor();
      this.applyHighlightFontColor();
      this.applyHorizontalAlign();
      this.applyVerticalAlign();
    }
  }
};
</script>

