<!--
  ---------------------------------------------------------------------------
  필요한 라이브러리

  vuedraggable (Sortable.js 기반 드래그)
    npm install vuedraggable sortablejs
    yarn add vuedraggable sortablejs

  ---------------------------------------------------------------------------
-->

<template>
  <div class="control-chain" :class="layoutClass">

    <!-- 활성 체인 -->
    <div class="control-chain__active">
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span v-if="index > 0" class="control-chain__separator">>></span>

          <div
            class="control-chain__content"
            @mouseenter="onControlMouseEnter(element)"
            @mouseleave="onControlMouseLeave(element)"
          >
            <div class="control-chain__header">
              <div class="control-chain__header-left">
                <span
                  v-if="hoveredControlId === element.id"
                  class="control-chain__drag-handle"
                >
                  ≡
                </span>
                <span class="control-chain__title">{{ element.label }}</span>
              </div>

              <div class="control-chain__header-right">
                <button
                  v-if="showCloseControlId === element.id"
                  type="button"
                  class="control-chain__close-button"
                  @click.stop="removeControlById(element.id)"
                >
                  ✕
                </button>
              </div>
            </div>

            <div class="control-chain__body">
              <!-- 단일 선택 -->
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <!-- 다중 선택 -->
              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <!-- 라벨 -->
              <span v-else class="control-chain__label-value">
                {{ element.displayValue || '-' }}
              </span>
            </div>
          </div>
        </div>

        <div v-if="!activeControls.length" class="control-chain__empty">
          사용 가능한 컨트롤 목록에서 드래그해 추가해주세요.
        </div>
      </draggable>
    </div>

    <!-- 사용 가능한 컨트롤 -->
    <div class="control-chain__available">
      <div class="control-chain__available-title">사용 가능한 컨트롤</div>

      <draggable
        :list="availableControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__available-list"
        :handle="dragHandleSelector"
      >
        <li
          v-for="element in availableControls"
          :key="element.id"
          class="control-chain__available-item"
        >
          <div
            class="control-chain__available-content"
            @mouseenter="onControlMouseEnter(element)"
            @mouseleave="onControlMouseLeave(element)"
          >
            <span
              v-if="hoveredControlId === element.id"
              class="control-chain__drag-handle control-chain__drag-handle--small"
            >
              ≡
            </span>
            <span class="control-chain__available-label">
              {{ element.label }}
            </span>
          </div>
        </li>
      </draggable>
    </div>

  </div>
</template>

<script>
import draggable from 'vuedraggable';

export default {
  name: 'ControlChain',
  components: { draggable },

  model: {
    prop: 'value',
    event: 'input'
  },

  props: {
    value: {
      type: Array,
      default() {
        return [];
      }
    },
    controlTemplates: {
      type: Array,
      required: true
    },
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return ['right', 'left', 'top', 'bottom'].includes(v);
      }
    }
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],
      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',
      hoveredControlId: null,
      hoverTimerId: null,
      showCloseControlId: null,
      idMap: {}   // key / label 기준으로 안정적인 id 유지
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
      }
    },
    controlTemplates: {
      handler() {
        this.buildControls();
      }
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    getStableId(control) {
      const key = control.key || control.label || 'control';
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[key];
    },

    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates) ? this.controlTemplates : [];

      const usedKeys = new Set(
        valueArray
          .map(c => c.key)
          .filter(key => key != null)
      );

      this.activeControls = valueArray.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter(t => !usedKeys.has(t.key))
        .map(t => ({
          ...t,
          id: t.id || this.getStableId(t)
        }));
    },

    onActiveChange(evt) {
      // 순서/체인 구조가 바뀐 경우만 체인 emit
      this.emitChain();

      if (evt.added) {
        this.$emit('control-added', {
          control: evt.added.element,
          index: evt.added.newIndex
        });
      }

      if (evt.moved) {
        this.$emit('control-depth-change', {
          control: evt.moved.element,
          oldIndex: evt.moved.oldIndex,
          newIndex: evt.moved.newIndex
        });
      }

      if (evt.removed) {
        this.$emit('control-removed', {
          control: evt.removed.element,
          index: evt.removed.oldIndex
        });
      }
    },

    onSingleSelectChange(control, index, value) {
      // 값이 실제로 바뀌지 않았으면 아무 것도 안 함 (루프 방지)
      if (control.selectedValue === value) {
        return;
      }
      control.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control,
        index,
        type: 'single',
        value
      });
    },

    onMultiSelectChange(control, index, values) {
      const next = Array.isArray(values) ? values.slice() : [];
      const prev = Array.isArray(control.selectedValues)
        ? control.selectedValues
        : [];

      if (
        prev.length === next.length &&
        prev.every((v, i) => v === next[i])
      ) {
        // 값이 완전히 같으면 emit 안 함 → ur-multi-dropdown 초기 input 루프 차단
        return;
      }

      control.selectedValues = next;
      this.emitChain();
      this.$emit('control-selection-change', {
        control,
        index,
        type: 'multi',
        values: control.selectedValues
      });
    },

    removeControlById(id) {
      const idx = this.activeControls.findIndex(c => c.id === id);
      if (idx < 0) {
        return;
      }

      const [removed] = this.activeControls.splice(idx, 1);
      this.availableControls.push(removed);

      this.emitChain();
      this.$emit('control-removed', {
        control: removed,
        index: idx
      });
    },

    onControlMouseEnter(control) {
      this.hoveredControlId = control.id;

      if (this.hoverTimerId) {
        clearTimeout(this.hoverTimerId);
      }

      this.hoverTimerId = setTimeout(() => {
        this.showCloseControlId = control.id;
      }, 1000);
    },

    onControlMouseLeave(control) {
      this.hoveredControlId = null;

      if (this.hoverTimerId) {
        clearTimeout(this.hoverTimerId);
        this.hoverTimerId = null;
      }

      if (this.showCloseControlId === control.id) {
        this.showCloseControlId = null;
      }
    },

    emitChain() {
      const cloned = this.activeControls.map(control => {
        const clone = { ...control };
        if (Array.isArray(clone.selectedValues)) {
          clone.selectedValues = clone.selectedValues.slice();
        }
        delete clone.id;
        return clone;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    }
  }
};
</script>

<style scoped>
.control-chain {
  display: flex;
  gap: 16px;
  align-items: flex-start;
}

.control-chain--available-right { flex-direction: row; }
.control-chain--available-left { flex-direction: row-reverse; }
.control-chain--available-top { flex-direction: column-reverse; }
.control-chain--available-bottom { flex-direction: column; }

.control-chain__active { flex: 1; }
.control-chain__draggable {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.control-chain__item {
  display: flex;
  align-items: center;
}
.control-chain__separator {
  margin-right: 4px;
}

.control-chain__content {
  border: 1px solid #ddd;
