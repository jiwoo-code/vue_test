  font-size: 12px;
}
</style>









<template>
  <div>
    <control-chain
      v-model="chain"
      :control-templates="controlTemplates"
      available-placement="right"
      @control-added="logEvent"
      @control-removed="logEvent"
      @control-depth-change="logEvent"
      @control-selection-change="logEvent"
    />
  </div>
</template>

<script>
import ControlChain from '@/components/ControlChain.vue';

export default {
  name: 'ControlChainDemo',
  components: { ControlChain },

  data() {
    return {
      controlTemplates: [
        {
          key: 'AAA',
          label: 'AAA',
          type: 'single',
          items: [
            { text: 'AAA1', value: 'aaa1' },
            { text: 'AAA2', value: 'aaa2' }
          ],
          selectedValue: 'aaa1'
        },
        {
          key: 'BBB',
          label: 'BBB',
          type: 'multi',
          items: [
            { text: 'BBB1', value: 'bbb1' },
            { text: 'BBB2', value: 'bbb2' }
          ],
          selectedValues: []
        },
        {
          key: 'CCC',
          label: 'CCC',
          type: 'label',
          displayValue: '고정 라벨'
        }
      ],
      chain: []
    };
  },

  methods: {
    logEvent(e) {
      console.log('EVENT:', e);
    }
  }
};
</script>