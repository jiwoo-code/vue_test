<!--
  필수 라이브러리
  vuedraggable (Sortable.js 기반 드래그)
    npm install vuedraggable sortablejs
-->
<template>
  <div class="control-chain" :class="layoutClass" :style="containerStyle">
    <!-- Active area (left) -->
    <div class="control-chain__active" :style="activeAreaStyle">
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        :force-fallback="true"
        :fallback-tolerance="8"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span v-if="index > 0" class="control-chain__separator">>></span>

          <div class="control-chain__content" :style="getContentStyle(index, element)">
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span class="control-chain__drag-handle" title="Drag">⋮⋮</span>
                <span class="control-chain__title" :style="getTextStyle(element, true)">
                  {{ element.label }}
                </span>
              </div>
              <button
                type="button"
                class="control-chain__close-button"
                :style="{ visibility: showCloseControlId === element.id ? 'visible' : 'hidden' }"
                @click.stop="removeControlById(element.id)"
              >
                ✕
              </button>
            </div>

            <div class="control-chain__body">
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                :all-select="element.allSelect === true"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <span v-else class="control-chain__label-value" :style="{ color: baseFontColor }">
                {{ element.displayValue || '-' }}
              </span>
            </div>
          </div>
        </div>
      </draggable>

      <div v-if="!activeControls.length" class="control-chain__empty" :style="emptyGuideTextStyle">
        {{ emptyGuideText }}
      </div>
    </div>

    <!-- Available area (right) -->
    <div class="control-chain__available" :style="availableAreaStyle">
      <div v-if="availableTitle" class="control-chain__available-title" :style="availableTitleTextStyle">
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
          :force-fallback="true"
          :fallback-tolerance="8"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span class="control-chain__drag-handle control-chain__drag-handle--small" title="Drag">
                ⋮⋮
              </span>
              <span class="control-chain__available-label" :style="getTextStyle(element, false)">
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>
  </div>
</template>

<script>
import draggable from 'vuedraggable';
import UrDropdown from './UrDropdown.vue';
import UrMultiDropdown from './UrMultiDropdown.vue';

const DEFAULT_MIN_HEIGHT = 260;
const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') {
    return undefined;
  }
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) {
    return null;
  }
  if (Array.isArray(input)) {
    return input.length ? input.slice() : null;
  }
  return [input];
};

const horizontalMap = {
  left: 'flex-start',
  center: 'center',
  right: 'flex-end'
};

const verticalMap = {
  top: 'flex-start',
  center: 'center',
  bottom: 'flex-end'
};

export default {
  name: 'ControlChain',
  components: { draggable, UrDropdown, UrMultiDropdown },

  model: { prop: 'value', event: 'input' },

  props: {
    // 부모가 관리하는 체인 값
    value: {
      type: Array,
      default() {
        return [];
      }
    },
    // 우측에 표시되는 컨트롤 템플릿 목록
    controlTemplates: {
      type: Array,
      required: true
    },
    // 사용 가능한 컨트롤 영역 위치
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return ['right', 'left'].includes(v);
      }
    },
    // 비어 있을 때 안내 문구
    emptyGuideText: {
      type: String,
      default: '목록에서 드래그하여 추가해 주세요'
    },
    // 사용 가능 영역 타이틀
    availableTitle: {
      type: String,
      default: ''
    },

    // 컨테이너 크기
    width: {
      type: [Number, String],
      default: null
    },
    height: {
      type: [Number, String],
      default: null
    },

    useHorizontalScroll: {
      type: Boolean,
      default: false
    },
    useVerticalScroll: {
      type: Boolean,
      default: false
    }
  },

  data() {
    return {
      // 현재 활성화된 체인 요소
      activeControls: [],
      // 사용 가능한 요소 목록
      availableControls: [],
      // draggable 공유 그룹 설정
      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',

      hoveredControlId: null,
      showCloseControlId: null,

      idMap: {},

      depthHighlightColors: ['#D5383A', '#EB702D', '#FBB41A', '#2DA379', '#1E5FCB', '#553CA5'],
      depthHighlightBgColors: ['#F8DDDF', '#FAE2D4', '#FFF0C8', '#E0F0E8', '#E0EBFA', '#E5E0F6'],

      defaultMaxWidth: 240,

      baseFontColor: '#222222',
      highlightFontColor: '#1E5FCB',

      availableWidth: null,

      horizontalAlign: 'flex-start',
      verticalAlign: 'center'
    };
  },

  computed: {
    // 레이아웃 방향 클래스
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    // 전체 컨테이너 스타일
    containerStyle() {
      return {
        width: toSize(this.width) || '100%',
        boxSizing: 'border-box'
      };
    },

    // 좌측 활성 영역 스타일
    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        display: 'flex',
        flexDirection: 'column',
        boxSizing: 'border-box',
        position: 'relative'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = heightValue;
        style.minHeight = heightValue;
      } else if (this.useHorizontalScroll && !this.useVerticalScroll) {
        // Horizontal-only compact mode.
        style.height = 'auto';
        style.minHeight = 'auto';
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';
      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';

      return style;
    },

    // 우측 사용 가능 영역 스타일
    availableAreaStyle() {
      const rawWidth = this.availableWidth ?? `${DEFAULT_AVAILABLE_WIDTH}px`;
      const widthValue = toSize(rawWidth) ?? rawWidth;

      const style = {
        width: widthValue,
        flexBasis: widthValue,
        flexShrink: 0,
        flexGrow: 0,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = heightValue;
        style.minHeight = heightValue;
      } else if (this.useHorizontalScroll && !this.useVerticalScroll) {
        // Horizontal-only mode: shrink with content when height is not provided.
        style.height = 'auto';
        style.minHeight = 'auto';
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    // 드래그 래퍼 스타일
    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        flex: '1 1 auto',
        width: '100%',
        minWidth: 0
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.minHeight = '100%';
      } else if (this.useHorizontalScroll && !this.useVerticalScroll) {
        style.minHeight = 'auto';
      } else {
        style.minHeight = '140px';
      }

      const horizontalOnly = this.useHorizontalScroll;
      style.flexWrap = horizontalOnly ? 'nowrap' : 'wrap';
      style.justifyContent = this.horizontalAlign;
      if (horizontalOnly) {
        style.alignItems = this.verticalAlign; // 가로 스크롤 모드에서는 행 단위 정렬만 사용
      } else {
        // 래핑되는 경우 전체 행들의 수직 정렬을 verticalAlign으로 맞춘다.
        style.alignItems = 'stretch';
        style.alignContent = this.verticalAlign;
      }
      style.padding = '8px';

      return style;
    },

    // 안내 문구 스타일
    emptyGuideTextStyle() {
      return {
        color: '#999999'
      };
    },

    // 타이틀 텍스트 스타일
    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
      },
      deep: true
    },
    controlTemplates: {
      handler() {
        this.buildControls();
      },
      deep: true
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // ===== setters =====

    // 하이라이트 테두리 컬러 변경
    setHighlightBorderColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightColors = array;
      }
    },

    // 하이라이트 배경 컬러 변경
    setHighlightBackgroundColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightBgColors = array;
      }
    },

    // 기본 글자색 지정
    setBaseFontColor(color) {
      if (color) {
        this.baseFontColor = color;
      }
    },

    // 하이라이트 글자색 지정
    setHighlightFontColor(color) {
      if (color) {
        this.highlightFontColor = color;
      }
    },

    // 사용 가능 영역 너비 지정
    setAvailableWidth(width) {
      if (typeof width === 'number') {
        this.availableWidth = `${width}px`;
      } else if (width) {
        this.availableWidth = width;
      }
    },

    // 수평 정렬 지정
    setHorizontalAlign(mode) {
      const mapped = horizontalMap[mode];
      if (mapped) {
        this.horizontalAlign = mapped;
      }
    },

    // 수직 정렬 지정
    setVerticalAlign(mode) {
      const mapped = verticalMap[mode];
      if (mapped) {
        this.verticalAlign = mapped;
      }
    },

    // ===== core logic =====

    // 키/라벨 기준으로 안정적인 내부 id 생성
    getStableId(control) {
      const key = control.key || control.label || 'control';
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[key];
    },

    // props 기반으로 active/available 리스트 구성
    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates) ? this.controlTemplates : [];

      const usedKeys = new Set(
        valueArray
          .map((control) => control.key)
          .filter((key) => key != null)
      );

      this.activeControls = valueArray.map((control) => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter((template) => !usedKeys.has(template.key))
        .map((template) => ({
          ...template,
          id: template.id || this.getStableId(template)
        }));
    },

    // 부모로 체인 변경 이벤트 전달
    emitChain() {
      const cloned = this.activeControls.map((control) => {
        const clone = { ...control };
        if (Array.isArray(clone.selectedValues)) {
          clone.selectedValues = clone.selectedValues.slice();
        }
        delete clone.id;
        return clone;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    // 드래그/드롭 발생 시 이벤트 브로드캐스트
    onActiveChange(event) {
      this.emitChain();

      if (event.added) {
        this.$emit('control-added', {
          control: event.added.element,
          index: event.added.newIndex
        });
      }

      if (event.moved) {
        this.$emit('control-depth-change', {
          control: event.moved.element,
          oldIndex: event.moved.oldIndex,
          newIndex: event.moved.newIndex
        });
      }

      if (event.removed) {
        this.$emit('control-removed', {
          control: event.removed.element,
          index: event.removed.oldIndex
        });
      }
    },

    // x 버튼으로 컨트롤 제거
    removeControlById(id) {
      const index = this.activeControls.findIndex((control) => control.id === id);
      if (index < 0) {
        return;
      }

      const removed = this.activeControls.splice(index, 1)[0];
      this.availableControls.push(removed);

      if (this.hoveredControlId === id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === id) {
        this.showCloseControlId = null;
      }

      this.emitChain();
      this.$emit('control-removed', {
        control: removed,
        index
      });
    },

    // hover 상태 토글
    onControlMouseEnter(element) {
      this.hoveredControlId = element.id;
      this.showCloseControlId = element.id;
    },

    onControlMouseLeave(element) {
      if (this.hoveredControlId === element.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === element.id) {
        this.showCloseControlId = null;
      }
    },

    // ===== selection events =====

    // 단일 선택 변경
    onSingleSelectChange(element, index, value) {
      if (element.selectedValue === value) {
        return;
      }
      element.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'single',
        value
      });
    },

    // 멀티 선택 변경
    onMultiSelectChange(element, index, values) {
      const nextValues = Array.isArray(values) ? values.slice() : [];
      const previousValues = Array.isArray(element.selectedValues) ? element.selectedValues : [];

      const isSame =
        previousValues.length === nextValues.length &&
        previousValues.every((item, position) => item === nextValues[position]);

      if (isSame) {
        return;
      }

      element.selectedValues = nextValues;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'multi',
        values: nextValues
      });
    },

    // ===== helpers =====

    // 텍스트 색상 계산 (hover 상태 반영)
    getTextStyle(element, isActiveArea) {
      const isHovered = this.hoveredControlId === element.id;
      return {
        color: isActiveArea && isHovered ? this.highlightFontColor : this.baseFontColor
      };
    },

    // 컨트롤 카드 스타일 계산 (폭/하이라이트)
    getContentStyle(index, element) {
      const style = {};

      const maxWidth = element.maxWidth != null ? element.maxWidth : this.defaultMaxWidth;
      style.maxWidth = typeof maxWidth === 'number' ? `${maxWidth}px` : maxWidth;

      if (this.hoveredControlId === element.id) {
        const colorIndex = index % this.depthHighlightColors.length;
        style.borderColor = this.depthHighlightColors[colorIndex];
        style.backgroundColor = this.depthHighlightBgColors[colorIndex];
      }

      return style;
    }
  }
};
</script>

<style scoped>
.control-chain {
  display: flex;
  gap: 16px;
  align-items: stretch;
  background: #fafafa;
  border: 1px solid #e5e5e5;
  padding: 8px;
  box-sizing: border-box;
}

.control-chain--available-right {
  flex-direction: row;
}

.control-chain--available-left {
  flex-direction: row-reverse;
}

.control-chain__active {
  position: relative;
  box-sizing: border-box;
}

.control-chain__draggable {
  width: 100%;
  height: 100%;
}

.control-chain__available {
  box-sizing: border-box;
}

.control-chain__available-title {
  margin-bottom: 8px;
  font-weight: bold;
  font-size: 12px;
}

.control-chain__available-list-wrapper {
  flex: 1;
  overflow-y: auto;
}

.control-chain__available-list {
  list-style: none;
  padding: 0;
  margin: 0;
  height: 100%;
}

.control-chain__available-item + .control-chain__available-item {
  margin-top: 4px;
}

.control-chain__item {
  display: flex;
  align-items: center;
}

.control-chain__separator {
  margin-right: 4px;
}

.control-chain__content {
  border: 1px solid #e4e4e4;
  padding: 6px 8px;
  background: #ffffff;
  min-width: 180px;
  min-height: 44px;
  transition: background-color 0.15s ease, border-color 0.15s ease;
  display: flex;
  flex-direction: column;
}

.control-chain__header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  align-items: center;
}

.control-chain__header-left {
  display: flex;
  align-items: center;
  gap: 4px;
}

.control-chain__title {
  font-size: 12px;
  font-weight: 600;
}

.control-chain__close-button {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 12px;
  width: 16px;
  height: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-chain__drag-handle {
  cursor: grab;
  font-size: 12px;
  width: 12px;
}

.control-chain__drag-handle--small {
  font-size: 11px;
  width: 11px;
}

.control-chain__body {
  display: flex;
  align-items: stretch;
  gap: 4px;
  min-height: 24px;
}

.control-chain__dropdown {
  width: 100%;
}

.control-chain__label-value {
  font-size: 12px;
  display: flex;
  align-items: center;
  width: 100%;
  min-height: 26px;
  padding: 3px 6px;
  background: #ffffff;
  border: 1px solid #d9d9d9;
  box-sizing: border-box;
}

.control-chain__empty {
  font-size: 12px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
  width: 100%;
  text-align: center;
}

.control-chain__available-content {
  border: 1px solid #e0e0e0;
  padding: 4px 6px;
  display: flex;
  align-items: center;
  gap: 4px;
  background: #ffffff;
  transition: background-color 0.12s ease, border-color 0.12s ease;
}

.control-chain__available-content:hover {
  background: #f7f7f7;
  border-color: #d0d0d0;
}

.control-chain__available-label {
  font-size: 12px;
}
</style>
