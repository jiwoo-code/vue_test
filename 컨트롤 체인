<!--
  ---------------------------------------------------------------------------
  í•„ìš”í•œ ë¼ì´ë¸ŒëŸ¬ë¦¬

  vuedraggable (Sortable.js ê¸°ë°˜ ë“œë˜ê·¸)
    npm install vuedraggable sortablejs
  ---------------------------------------------------------------------------
-->

<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="containerStyle"
  >
    <!-- í™œì„± ì²´ì¸ ì˜ì—­ (ì™¼ìª½) -->
    <div
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span
            v-if="index > 0"
            class="control-chain__separator"
          >
            >>
          </span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <!-- í—¤ë”: ë“œë˜ê·¸ í•¸ë“¤ + íƒ€ì´í‹€ + X ë²„íŠ¼ -->
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span class="control-chain__drag-handle">
                  â‰¡
                </span>
                <span
                  class="control-chain__title"
                  :style="getTextStyle(element, true)"
                >
                  {{ element.label }}
                </span>
              </div>

              <button
                type="button"
                class="control-chain__close-button"
                :style="{ visibility: showCloseControlId === element.id ? 'visible' : 'hidden' }"
                @click.stop="removeControlById(element.id)"
              >
                âœ•
              </button>
            </div>

            <!-- ë°”ë””: dropdown / label (ì˜µì…˜ ì—†ìœ¼ë©´ í†µì§¸ë¡œ ë¯¸í‘œì‹œ) -->
            <div
              v-if="hasBody(element)"
              class="control-chain__body"
            >
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                :select-all="!!element.selectAll"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <!-- ë¼ë²¨ ì»¨íŠ¸ë¡¤ -->
              <span
                v-else-if="element.type === 'label'"
                class="control-chain__label-value"
                :style="{ color: baseFontColor }"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>

            <!-- ColorBy ë¼ì¸ -->
            <div
              v-if="useColorBy"
              class="control-chain__color-by-row"
            >
              <label class="control-chain__color-by-label">
                <input
                  type="radio"
                  class="control-chain__color-by-radio"
                  :name="colorByGroupName"
                  :value="element.key"
                  v-model="colorBySelectedKey"
                  @change="onColorByChange(element)"
                />
                ColorBy
              </label>
            </div>
          </div>
        </div>
      </draggable>

      <!-- ë¹„ì–´ ìˆì„ ë•Œ ì•ˆë‚´ ë¬¸êµ¬: ë“œë¡­ì„ ë°©í•´í•˜ì§€ ì•Šë„ë¡ absolute + pointer-events:none -->
      <div
        v-if="!activeControls.length"
        class="control-chain__empty"
        :style="emptyGuideTextStyle"
      >
        {{ emptyGuideText }}
      </div>
    </div>

    <!-- ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤ ì˜ì—­ (ì˜¤ë¥¸ìª½) -->
    <div
      class="control-chain__available"
      :style="availableAreaStyle"
    >
      <div
        v-if="availableTitle"
        class="control-chain__available-title"
        :style="availableTitleTextStyle"
      >
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span class="control-chain__drag-handle control-chain__drag-handle--small">
                â‰¡
              </span>

              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>
  </div>
</template>

<script>
import draggable from 'vuedraggable';

const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') {
    return undefined;
  }
  return typeof value === 'number' ? `${value}px` : value;
};

const horizontalMap = {
  left: 'flex-start',
  center: 'center',
  right: 'flex-end'
};

const verticalMap = {
  top: 'flex-start',
  center: 'center',
  bottom: 'flex-end'
};

export default {
  name: 'ControlChain',
  components: { draggable },

  // v-model ì§€ì› ì„¤ì •: v-model â†’ prop:value / event:input
  model: { prop: 'value', event: 'input' },

  props: {
    /**
     * v-model ê°’
     * - í™œì„± ì²´ì¸ì— ì˜¬ë¼ê°„ ì»¨íŠ¸ë¡¤ ë°°ì—´
     * - ê° ì›ì†ŒëŠ” controlTemplatesì™€ ë™ì¼ êµ¬ì¡°ë¥¼ ê°€ì§
     */
    value: {
      type: Array,
      default() {
        return [];
      }
    },

    /**
     * ì „ì²´ ì»¨íŠ¸ë¡¤ í…œí”Œë¦¿ ëª©ë¡
     * - key, label, type(single|multi|label), items, selectedValue, selectedValues, selectAll ë“±
     */
    controlTemplates: {
      type: Array,
      required: true
    },

    /**
     * ì˜¤ë¥¸ìª½/ì™¼ìª½ ì¤‘ ì–´ë–¤ ìª½ì— "ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤ ëª©ë¡"ì„ ë‘˜ì§€ ê²°ì •
     */
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return ['right', 'left'].includes(v);
      }
    },

    /**
     * ì™¼ìª½ ì²´ì¸ì´ ë¹„ì–´ ìˆì„ ë•Œ ë³´ì—¬ì¤„ ì•ˆë‚´ ë¬¸êµ¬
     */
    emptyGuideText: {
      type: String,
      default: 'ëª©ë¡ì—ì„œ ë“œë˜ê·¸í•˜ì—¬ ì¶”ê°€í•´ ì£¼ì„¸ìš”.'
    },

    /**
     * ì˜¤ë¥¸ìª½ "ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤" ì˜ì—­ì˜ íƒ€ì´í‹€
     */
    availableTitle: {
      type: String,
      default: ''
    },

    /**
     * ì „ì²´ ì»¨íŠ¸ë¡¤ì²´ì¸ ê°€ë¡œ/ì„¸ë¡œ í¬ê¸°
     * - ì§€ì •í•˜ì§€ ì•Šìœ¼ë©´ width: 100%, height: auto
     */
    width: {
      type: [Number, String],
      default: null
    },
    height: {
      type: [Number, String],
      default: null
    },

    /**
     * ìŠ¤í¬ë¡¤ ì‚¬ìš© ì—¬ë¶€
     * - useHorizontalScroll: í™œì„± ì²´ì¸ ì˜ì—­ì˜ ê°€ë¡œ ìŠ¤í¬ë¡¤
     * - useVerticalScroll: í™œì„± ì²´ì¸ ì˜ì—­ì˜ ì„¸ë¡œ ìŠ¤í¬ë¡¤
     *   (ì˜¤ë¥¸ìª½ ëª©ë¡ ì˜ì—­ì€ í•­ìƒ ì„¸ë¡œ ìŠ¤í¬ë¡¤ ê°€ëŠ¥)
     */
    useHorizontalScroll: {
      type: Boolean,
      default: false
    },
    useVerticalScroll: {
      type: Boolean,
      default: false
    },

    /**
     * ColorBy ê¸°ëŠ¥ ì‚¬ìš© ì—¬ë¶€ (trueì¼ ë•Œë§Œ ê° ì»¨íŠ¸ë¡¤ì— ColorBy ë¼ë””ì˜¤ ë…¸ì¶œ)
     */
    useColorBy: {
      type: Boolean,
      default: false
    },

    /**
     * ColorBy ì„ íƒì´ ì‚¬ë¼ì¡Œì„ ë•Œ(ì²´í¬ëœ ì»¨íŠ¸ë¡¤ì´ ì‚­ì œë  ë•Œ)
     * ì„ íƒì„ ì–´ë””ë¡œ ë„˜ê¸¸ì§€ ê·œì¹™
     *  - 'first'  : ì²« ë²ˆì§¸ ì»¨íŠ¸ë¡¤
     *  - 'left'   : ì‚­ì œëœ ì»¨íŠ¸ë¡¤ì˜ ì™¼ìª½ ì»¨íŠ¸ë¡¤
     *  - 'right'  : ì‚­ì œëœ ì»¨íŠ¸ë¡¤ì˜ ì˜¤ë¥¸ìª½ ì»¨íŠ¸ë¡¤
     */
    colorByTransferRule: {
      type: String,
      default: 'first',
      validator(v) {
        return ['first', 'left', 'right'].includes(v);
      }
    },

    /**
     * ì´ˆê¸° ColorBy ì„ íƒ ì»¨íŠ¸ë¡¤ keyë¥¼ ê²°ì •í•˜ëŠ” í•¨ìˆ˜
     * - (activeControls:Array) => key ë˜ëŠ” null
     * - ì§€ì •í•˜ì§€ ì•Šìœ¼ë©´ ê¸°ë³¸ì ìœ¼ë¡œ ì²« ë²ˆì§¸ ì»¨íŠ¸ë¡¤ì„ ì„ íƒ
     */
    resolveInitialColorByKey: {
      type: Function,
      default: null
    },

    /**
     * ì»¨íŠ¸ë¡¤ ë°•ìŠ¤ì˜ ê¸°ë³¸ maxWidth (px)
     * - ê° element.maxWidthê°€ ì—†ì„ ë•Œ fallback ê°’
     */
    defaultMaxWidth: {
      type: [Number, String],
      default: 240
    }
  },

  data() {
    return {
      // í™œì„±/ëŒ€ê¸° ì»¨íŠ¸ë¡¤ ëª©ë¡
      activeControls: [],
      availableControls: [],

      // ë“œë˜ê·¸ ê·¸ë£¹ ì„¤ì •
      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',

      // hover ìƒíƒœ
      hoveredControlId: null,
      showCloseControlId: null,

      // key â†’ ì•ˆì •ì ì¸ ëœë¤ id ë§µ
      idMap: {},

      // ëìŠ¤ í•˜ì´ë¼ì´íŠ¸ ìƒ‰ìƒ
      depthHighlightColors: [
        '#D5383A',
        '#EB702D',
        '#FBB41A',
        '#2DA379',
        '#1E5FCB',
        '#553CA5'
      ],
      depthHighlightBgColors: [
        '#F8DDDF',
        '#FAE2D4',
        '#FFF0C8',
        '#E0F0E8',
        '#E0EBFA',
        '#E5E0F6'
      ],

      // í°íŠ¸/ì»¬ëŸ¬ ê´€ë ¨ ê¸°ë³¸ê°’
      baseFontColor: '#222222',
      highlightFontColor: '#1E5FCB',

      // ì˜¤ë¥¸ìª½ ì˜ì—­ ê³ ì • í­
      availableWidth: null,

      // í™œì„± ì²´ì¸ ì •ë ¬ ì˜µì…˜
      horizontalAlign: 'flex-start',
      verticalAlign: 'center',

      // ColorBy ì„ íƒ ìƒíƒœ (key ê¸°ì¤€)
      colorBySelectedKey: null,
      colorByGroupName: `control-chain-color-by-${Math.random()
        .toString(36)
        .slice(2, 8)}`
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    /**
     * ì „ì²´ ì»¨í…Œì´ë„ˆ ìŠ¤íƒ€ì¼
     * - height ë¯¸ì§€ì • ì‹œ: ë‚´ìš©ì— ë”°ë¼ ìë™ ë†’ì´
     * - height ì§€ì • ì‹œ: ê³ ì • ë†’ì´
     */
    containerStyle() {
      const style = {
        width: toSize(this.width) || '100%',
        boxSizing: 'border-box'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = heightValue;
        style.minHeight = heightValue;
      }

      return style;
    },

    /**
     * ì™¼ìª½ í™œì„± ì²´ì¸ ì˜ì—­ ìŠ¤íƒ€ì¼
     */
    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        display: 'flex',
        flexDirection: 'column',
        boxSizing: 'border-box',
        position: 'relative'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = '100%';
        style.minHeight = 0;
      }

      style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';
      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';

      return style;
    },

    /**
     * ì˜¤ë¥¸ìª½ ì‚¬ìš© ê°€ëŠ¥ ì»¨íŠ¸ë¡¤ ì˜ì—­ ìŠ¤íƒ€ì¼
     */
    availableAreaStyle() {
      const rawWidth = this.availableWidth ?? `${DEFAULT_AVAILABLE_WIDTH}px`;
      const widthValue = toSize(rawWidth) ?? rawWidth;

      const style = {
        width: widthValue,
        flexBasis: widthValue,
        flexShrink: 0,
        flexGrow: 0,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = '100%';
      }

      return style;
    },

    /**
     * í™œì„± ì²´ì¸ ë‚´ë¶€ ë“œë˜ê·¸ ì»¨í…Œì´ë„ˆ ìŠ¤íƒ€ì¼
     */
    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        flex: '1 1 auto',
        width: '100%',
        minWidth: 0,
        flexWrap: this.useHorizontalScroll ? 'nowrap' : 'wrap',
        justifyContent: this.horizontalAlign
      };

      if (this.useHorizontalScroll) {
        style.alignItems = this.verticalAlign;
      } else {
        style.alignContent = this.verticalAlign;
      }

      return style;
    },

    emptyGuideTextStyle() {
      return {
        color: '#999999'
      };
    },

    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
      },
      deep: true
    },
    controlTemplates: {
      handler() {
        this.buildControls();
      },
      deep: true
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // ===================== ì™¸ë¶€ì—ì„œ í˜¸ì¶œ ê°€ëŠ¥í•œ API =====================

    /**
     * ëìŠ¤ í•˜ì´ë¼ì´íŠ¸ í…Œë‘ë¦¬ ìƒ‰ìƒ ì„¤ì •
     */
    setHighlightBorderColors(colors) {
      if (Array.isArray(colors) && colors.length) {
        this.depthHighlightColors = colors.slice();
      }
    },

    /**
     * ëìŠ¤ í•˜ì´ë¼ì´íŠ¸ ë°°ê²½ ìƒ‰ìƒ ì„¤ì •
     */
    setHighlightBackgroundColors(colors) {
      if (Array.isArray(colors) && colors.length) {
        this.depthHighlightBgColors = colors.slice();
      }
    },

    /**
     * ê¸°ë³¸ í°íŠ¸ ìƒ‰ìƒ ì„¤ì •
     */
    setBaseFontColor(color) {
      if (color) {
        this.baseFontColor = color;
      }
    },

    /**
     * hover ìƒíƒœ í°íŠ¸ ìƒ‰ìƒ ì„¤ì •
     */
    setHighlightFontColor(color) {
      if (color) {
        this.highlightFontColor = color;
      }
    },

    /**
     * ì˜¤ë¥¸ìª½ ì‚¬ìš© ê°€ëŠ¥ ì»¨íŠ¸ë¡¤ ì˜ì—­ width ì„¤ì •
     */
    setAvailableWidth(width) {
      if (typeof width === 'number') {
        this.availableWidth = `${width}px`;
      } else if (width) {
        this.availableWidth = width;
      }
    },

    /**
     * í™œì„± ì²´ì¸ ê°€ë¡œ ì •ë ¬ ì„¤ì • (left / center / right)
     */
    setHorizontalAlign(mode) {
      const mapped = horizontalMap[mode];
      if (mapped) {
        this.horizontalAlign = mapped;
      }
    },

    /**
     * í™œì„± ì²´ì¸ ì„¸ë¡œ ì •ë ¬ ì„¤ì • (top / center / bottom)
     */
    setVerticalAlign(mode) {
      const mapped = verticalMap[mode];
      if (mapped) {
        this.verticalAlign = mapped;
      }
    },

    // ===================== ë‚´ë¶€ ë°ì´í„° ë¹Œë“œ/ê´€ë¦¬ =====================

    /**
     * ì»¨íŠ¸ë¡¤ì— ëŒ€í•œ ì•ˆì •ì ì¸ id ìƒì„±
     */
    getStableId(control) {
      const key = control.key || control.label || 'control';
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[key];
    },

    /**
     * props.value / controlTemplates ê¸°ë°˜ìœ¼ë¡œ
     * activeControls / availableControls ì¬êµ¬ì„±
     */
    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates)
        ? this.controlTemplates
        : [];

      const usedKeys = new Set(
        valueArray
          .map(control => control.key)
          .filter(key => key != null)
      );

      this.activeControls = valueArray.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter(template => !usedKeys.has(template.key))
        .map(template => ({
          ...template,
          id: template.id || this.getStableId(template)
        }));

      this.ensureInitialColorBySelection();
    },

    /**
     * v-model / change ì´ë²¤íŠ¸ ë°œí–‰
     */
    emitChain() {
      const cloned = this.activeControls.map(control => {
        const obj = { ...control };
        if (Array.isArray(obj.selectedValues)) {
          obj.selectedValues = obj.selectedValues.slice();
        }
        delete obj.id;
        return obj;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    // ===================== ColorBy ê´€ë ¨ =====================

    /**
     * ì´ˆê¸° ColorBy ì„ íƒ ë³´ì •
     * - useColorBy=falseë©´ ì„ íƒ í•´ì œ
     * - ê¸°ì¡´ ì„ íƒì´ ì—¬ì „íˆ ì¡´ì¬í•˜ë©´ ìœ ì§€
     * - resolveInitialColorByKey ìˆìœ¼ë©´ ìš°ì„  ì‚¬ìš©
     * - ê·¸ ì™¸ì—ëŠ” ì²« ë²ˆì§¸ ì»¨íŠ¸ë¡¤ ì„ íƒ
     */
    ensureInitialColorBySelection() {
      if (!this.useColorBy) {
        this.colorBySelectedKey = null;
        return;
      }

      if (!this.activeControls.length) {
        this.colorBySelectedKey = null;
        return;
      }

      if (
        this.colorBySelectedKey &&
        this.activeControls.some(
          control => control.key === this.colorBySelectedKey
        )
      ) {
        return;
      }

      if (typeof this.resolveInitialColorByKey === 'function') {
        const resolvedKey = this.resolveInitialColorByKey(this.activeControls);
        if (resolvedKey) {
          this.colorBySelectedKey = resolvedKey;
          return;
        }
      }

      this.colorBySelectedKey = this.activeControls[0].key ?? null;
    },

    /**
     * ColorBy ëŒ€ìƒ ì»¨íŠ¸ë¡¤ì´ ì œê±°ë˜ì—ˆì„ ë•Œ
     * ê·œì¹™ì— ë”°ë¼ ë‹¤ìŒ ëŒ€ìƒ ì„ íƒ
     */
    transferColorBySelection(removedIndex) {
      if (!this.useColorBy || !this.activeControls.length) {
        this.colorBySelectedKey = null;
        return;
      }

      const length = this.activeControls.length;

      if (this.colorByTransferRule === 'first') {
        this.colorBySelectedKey = this.activeControls[0].key ?? null;
        return;
      }

      if (this.colorByTransferRule === 'left') {
        const targetIndex = removedIndex - 1;
        if (targetIndex >= 0) {
          this.colorBySelectedKey = this.activeControls[targetIndex].key ?? null;
        } else {
          this.colorBySelectedKey = this.activeControls[0].key ?? null;
        }
        return;
      }

      if (this.colorByTransferRule === 'right') {
        const targetIndex = removedIndex;
        if (targetIndex < length) {
          this.colorBySelectedKey = this.activeControls[targetIndex].key ?? null;
        } else {
          this.colorBySelectedKey = this.activeControls[length - 1].key ?? null;
        }
      }
    },

    /**
     * ColorBy ë¼ë””ì˜¤ ì§ì ‘ ë³€ê²½ ì‹œ ì´ë²¤íŠ¸ ë°œí–‰
     */
    onColorByChange(element) {
      this.colorBySelectedKey = element.key ?? null;
      this.$emit('color-by-change', {
        key: this.colorBySelectedKey,
        control: element
      });
    },

    // ===================== ë“œë˜ê·¸/ë“œë¡­ ì´ë²¤íŠ¸ =====================

    /**
     * í™œì„± ì˜ì—­ ë“œë˜ê·¸/ë“œë¡­ ë³€ê²½ ì´ë²¤íŠ¸
     */
    onActiveChange(event) {
      this.emitChain();

      if (event.added) {
        this.$emit('control-added', {
          control: event.added.element,
          index: event.added.newIndex
        });
      }

      if (event.moved) {
        this.$emit('control-depth-change', {
          control: event.moved.element,
          oldIndex: event.moved.oldIndex,
          newIndex: event.moved.newIndex
        });
      }

      if (event.removed) {
        this.$emit('control-removed', {
          control: event.removed.element,
          index: event.removed.oldIndex
        });
      }
    },

    /**
     * X ë²„íŠ¼ í´ë¦­ìœ¼ë¡œ ì»¨íŠ¸ë¡¤ ì œê±°
     * - ì˜¤ë¥¸ìª½ available ëª©ë¡ìœ¼ë¡œ ë˜ëŒë¦¼
     * - ColorBy ì„ íƒ ë³´ì •
     */
    removeControlById(controlId) {
      const index = this.activeControls.findIndex(
        control => control.id === controlId
      );
      if (index < 0) {
        return;
      }

      const removed = this.activeControls.splice(index, 1)[0];
      this.availableControls.push(removed);

      if (this.hoveredControlId === controlId) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === controlId) {
        this.showCloseControlId = null;
      }

      if (
        this.useColorBy &&
        removed &&
        removed.key === this.colorBySelectedKey
      ) {
        this.transferColorBySelection(index);
      }

      this.emitChain();
      this.$emit('control-removed', {
        control: removed,
        index
      });
    },

    /**
     * ë§ˆìš°ìŠ¤ hover ìƒíƒœ ê´€ë¦¬
     */
    onControlMouseEnter(element) {
      this.hoveredControlId = element.id;
      this.showCloseControlId = element.id;
    },

    onControlMouseLeave(element) {
      if (this.hoveredControlId === element.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === element.id) {
        this.showCloseControlId = null;
      }
    },

    // ===================== ì„ íƒ(ë“œë¡­ë‹¤ìš´/ë©€í‹°) ì´ë²¤íŠ¸ =====================

    onSingleSelectChange(element, index, value) {
      if (element.selectedValue === value) {
        return;
      }

      element.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'single',
        value
      });
    },

    onMultiSelectChange(element, index, values) {
      const nextValues = Array.isArray(values) ? values.slice() : [];
      const previousValues = Array.isArray(element.selectedValues)
        ? element.selectedValues
        : [];

      const isSame =
        previousValues.length === nextValues.length &&
        previousValues.every((item, position) => item === nextValues[position]);

      if (isSame) {
        return;
      }

      element.selectedValues = nextValues;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'multi',
        values: nextValues
      });
    },

    // ===================== ìŠ¤íƒ€ì¼/í‘œí˜„ í—¬í¼ =====================

    hasBody(element) {
      if (element.type === 'single' || element.type === 'multi') {
        return Array.isArray(element.items) && element.items.length > 0;
      }
      if (element.type === 'label') {
        return true;
      }
      return false;
    },

    getTextStyle(element, isActiveArea) {
      const isHovered = this.hoveredControlId === element.id;
      const color =
        isActiveArea && isHovered
          ? this.highlightFontColor
          : this.baseFontColor;

      return { color };
    },

    getContentStyle(index, element) {
      const style = {};

      const rawMaxWidth =
        element.maxWidth != null ? element.maxWidth : this.defaultMaxWidth;
      const maxWidth =
        typeof rawMaxWidth === 'number' ? `${rawMaxWidth}px` : rawMaxWidth;
      style.maxWidth = maxWidth;

      if (this.hoveredControlId === element.id) {
        const borderIndex = index % this.depthHighlightColors.length;
        const backgroundIndex = index % this.depthHighlightBgColors.length;
        style.borderColor = this.depthHighlightColors[borderIndex];
        style.backgroundColor = this.depthHighlightBgColors[backgroundIndex];
      }

      if (this.useColorBy && element.key === this.colorBySelectedKey) {
        style.boxShadow = '0 0 0 1px #1E5FCB';
      }

      return style;
    }
  }
};
</script>

