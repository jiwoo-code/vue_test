<!--
  ---------------------------------------------------------------------------
  필요한 라이브러리

  vuedraggable (Sortable.js 기반 드래그)
    npm install vuedraggable sortablejs
    yarn add vuedraggable sortablejs

  ---------------------------------------------------------------------------
-->

<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="containerStyle"
  >
    <!-- 활성 체인 영역 (왼쪽) -->
    <div
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span v-if="index > 0" class="control-chain__separator">>></span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <!-- 헤더: 마우스 오버 시 드래그 아이콘 + X, 색상/폰트 하이라이트 트리거 -->
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span
                  v-if="hoveredControlId === element.id"
                  class="control-chain__drag-handle"
                >
                  ≡
                </span>
                <span
                  class="control-chain__title"
                  :style="getTextStyle(element, true)"
                >
                  {{ element.label }}
                </span>
              </div>

              <div class="control-chain__header-right">
                <button
                  v-if="showCloseControlId === element.id"
                  type="button"
                  class="control-chain__close-button"
                  @click.stop="removeControlById(element.id)"
                >
                  ✕
                </button>
              </div>
            </div>

            <!-- 바디 (드롭다운/라벨 공통 높이감 유지) -->
            <div class="control-chain__body">
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <span
                v-else
                class="control-chain__label-value"
                :style="getTextStyle(element, true)"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>
          </div>
        </div>

        <div
          v-if="!activeControls.length"
          class="control-chain__empty"
          :style="emptyGuideTextStyle"
        >
          {{ emptyGuideText }}
        </div>
      </draggable>
    </div>

    <!-- 사용 가능한 컨트롤 영역 (오른쪽) -->
    <div
      class="control-chain__available"
      :style="availableAreaStyle"
    >
      <div
        v-if="availableTitle"
        class="control-chain__available-title"
        :style="availableTitleTextStyle"
      >
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span
                v-if="hoveredControlId === element.id"
                class="control-chain__drag-handle control-chain__drag-handle--small"
              >
                ≡
              </span>
              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>

  </div>
</template>

<script>
import draggable from 'vuedraggable';

const DEFAULT_MIN_HEIGHT = 260;
const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') {
    return undefined;
  }
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) {
    return null;
  }
  if (Array.isArray(input)) {
    return input.length ? input.slice() : null;
  }
  return [input];
};

export default {
  name: 'ControlChain',
  components: { draggable },

  model: {
    prop: 'value',
    event: 'input'
  },

  props: {
    value: {
      type: Array,
      default() {
        return [];
      }
    },
    controlTemplates: {
      type: Array,
      required: true
    },
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return ['right', 'left'].includes(v);
      }
    },
    emptyGuideText: {
      type: String,
      default: '목록에서 드래그하여 추가해 주세요.'
    },
    availableTitle: {
      type: String,
      default: ''
    },

    // 전체 컨트롤 체인 크기 (가장 많이 쓰는 패턴만 남김)
    width: {
      type: [Number, String],
      default: null    // null이면 부모 width 기준 100%
    },
    height: {
      type: [Number, String],
      default: null    // null이면 내용에 따라 늘어나되, 내부 minHeight는 기본값 사용
    },

    // 뎁스 영역 스크롤
    useHorizontalScroll: {
      type: Boolean,
      default: false
    },
    useVerticalScroll: {
      type: Boolean,
      default: false
    }
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],
      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',
      hoveredControlId: null,
      showCloseControlId: null,
      idMap: {},

      // 뎁스별 하이라이트 색상 (테두리/배경) - 왼쪽 뎁스 영역에만 사용
      depthHighlightColors: [
        '#D5383A',
        '#EB702D',
        '#FBB41A',
        '#2DA379',
        '#1E5FCB',
        '#553CA5'
      ],
      depthHighlightBgColors: [
        '#F8DDDF',
        '#FAE2D4',
        '#FFF0C8',
        '#E0F0E8',
        '#E0EBFA',
        '#E5E0F6'
      ],

      // 컨트롤 기본 max-width(px)
      defaultMaxWidth: 240,

      // 폰트 컬러: 기본 / 하이라이트(왼쪽 뎁스 영역 전용)
      baseFontColor: '#222222',
      highlightFontColor: '#1E5FCB',

      // 오른쪽 목록 영역 width (flex-basis와 width 모두에 사용)
      availableWidth: null
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    containerStyle() {
      const style = {};

      const w = toSize(this.width) || '100%';
      const h = toSize(this.height);

      style.width = w;
      style.boxSizing = 'border-box';

      if (h) {
        style.height = h;
        style.minHeight = h;
      } else {
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeAreaStyle() {
      const style = {
        flex: 1,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        boxSizing: 'border-box'
      };

      const h = toSize(this.height);
      if (h) {
        style.height = '100%';
        style.minHeight = 0;
      } else {
        style.height = '100%';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      // 가로 스크롤: 뎁스 영역 전체에 적용
      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';
      style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';

      return style;
    },

    availableAreaStyle() {
      const style = {
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff'
      };

      const rawWidth = this.availableWidth ?? `${DEFAULT_AVAILABLE_WIDTH}px`;
      const width = toSize(rawWidth) ?? rawWidth;

      style.width = width;
      style.flexBasis = width;
      style.flexShrink = 0;
      style.flexGrow = 0;

      const h = toSize(this.height);
      if (h) {
        style.height = '100%';
        style.minHeight = 0;
      } else {
        style.height = '100%';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeDraggableStyle() {
      const style = {
        boxSizing: 'border-box',
        minHeight: '100%'
      };

      if (this.useHorizontalScroll) {
        // 내용 크기만큼 가로로 늘어나고,
        // 실제 스크롤은 부모(activeArea)에 걸린다.
        style.display = 'inline-flex';
        style.flexWrap = 'nowrap';
        style.width = 'max-content';
      } else {
        style.display = 'flex';
        style.flexWrap = 'wrap';
        style.width = '100%';
      }

      return style;
    },

    emptyGuideTextStyle() {
      return {
        color: '#999999'
      };
    },

    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
      }
    },
    controlTemplates: {
      handler() {
        this.buildControls();
      }
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // =====================================================================
    // Public API: 외부에서 속성/스타일 변경할 때 사용하는 함수들
    // =====================================================================

    setHighlightColors(borderColors, backgroundColors) {
      if (borderColors) {
        this.setHighlightBorderColors(borderColors);
      }
      if (backgroundColors) {
        this.setHighlightBackgroundColors(backgroundColors);
      }
    },

    /**
     * 왼쪽 뎁스 영역 hover 시 테두리 색(뎁스별)을 변경.
     */
    setHighlightBorderColors(colors) {
      const arr = toArray(colors);
      if (arr && arr.length) {
        this.depthHighlightColors = arr;
      }
    },

    /**
     * 왼쪽 뎁스 영역 hover 시 배경 색(뎁스별)을 변경.
     */
    setHighlightBackgroundColors(colors) {
      const arr = toArray(colors);
      if (arr && arr.length) {
        this.depthHighlightBgColors = arr;
      }
    },

    /**
     * 기본 텍스트(라벨, 타이틀, 오른쪽 목록 등)에 사용하는 폰트 색 변경.
     */
    setBaseFontColor(color) {
      if (color) {
        this.baseFontColor = color;
      }
    },

    /**
     * 왼쪽 뎁스 영역 hover 시 사용되는 폰트 색 변경.
     * 오른쪽 목록에는 적용되지 않음.
     */
    setHighlightFontColor(color) {
      if (color) {
        this.highlightFontColor = color;
      }
    },

    /**
     * 오른쪽 "사용 가능한 컨트롤" 목록 영역의 width 변경.
     * 예: setAvailableWidth(260) 또는 setAvailableWidth('260px')
     */
    setAvailableWidth(width) {
      if (width == null || width === '') {
        return;
      }
      if (typeof width === 'number') {
        this.availableWidth = `${width}px`;
      } else {
        this.availableWidth = width;
      }
    },

    // =====================================================================
    // Internal: 데이터 빌드 / 공통 유틸
    // =====================================================================

    getStableId(control) {
      const key = control.key || control.label || 'control';
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[key];
    },

    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates)
        ? this.controlTemplates
        : [];

      const usedKeys = new Set(
        valueArray
          .map(control => control.key)
          .filter(key => key != null)
      );

      this.activeControls = valueArray.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter(template => !usedKeys.has(template.key))
        .map(template => ({
          ...template,
          id: template.id || this.getStableId(template)
        }));
    },

    emitChain() {
      const cloned = this.activeControls.map(control => {
        const clone = { ...control };
        if (Array.isArray(clone.selectedValues)) {
          clone.selectedValues = clone.selectedValues.slice();
        }
        delete clone.id;
        return clone;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    // =====================================================================
    // Internal: 드래그/드롭 관련 핸들러
    // =====================================================================

    onActiveChange(evt) {
      this.emitChain();

      if (evt.added) {
        this.$emit('control-added', {
          control: evt.added.element,
          index: evt.added.newIndex
        });
      }

      if (evt.moved) {
        this.$emit('control-depth-change', {
          control: evt.moved.element,
          oldIndex: evt.moved.oldIndex,
          newIndex: evt.moved.newIndex
        });
      }

      if (evt.removed) {
        this.$emit('control-removed', {
          control: evt.removed.element,
          index: evt.removed.oldIndex
        });
      }
    },

    removeControlById(id) {
      const idx = this.activeControls.findIndex(control => control.id === id);
      if (idx < 0) {
        return;
      }

      const removedList = this.activeControls.splice(idx, 1);
      const removed = removedList[0];

      // hover 상태 초기화 (오른쪽으로 이동 후 드래그 아이콘 남지 않도록)
      if (this.hoveredControlId === id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === id) {
        this.showCloseControlId = null;
      }

      this.availableControls.push(removed);

      this.emitChain();
      this.$emit('control-removed', {
        control: removed,
        index: idx
      });
    },

    onControlMouseEnter(control) {
      this.hoveredControlId = control.id;
      this.showCloseControlId = control.id;
    },

    onControlMouseLeave(control) {
      if (this.hoveredControlId === control.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === control.id) {
        this.showCloseControlId = null;
      }
    },

    // =====================================================================
    // Internal: 선택 변경 핸들러
    // =====================================================================

    onSingleSelectChange(control, index, value) {
      if (control.selectedValue === value) {
        return;
      }
      control.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control,
        index,
        type: 'single',
        value
      });
    },

    onMultiSelectChange(control, index, values) {
      const next = Array.isArray(values) ? values.slice() : [];
      const prev = Array.isArray(control.selectedValues)
        ? control.selectedValues
        : [];

      if (
        prev.length === next.length &&
        prev.every((item, i) => item === next[i])
      ) {
        return;
      }

      control.selectedValues = next;
      this.emitChain();
      this.$emit('control-selection-change', {
        control,
        index,
        type: 'multi',
        values: control.selectedValues
      });
    },

    // =====================================================================
    // Internal: 스타일 관련 헬퍼
    // =====================================================================

    /**
     * 컨트롤별로 상태/영역에 따라 텍스트 색을 결정.
     * - isActiveArea === true (왼쪽 뎁스 영역):
     *     hover 중이면 highlightFontColor, 아니면 baseFontColor
     * - isActiveArea === false (오른쪽 목록 영역):
     *     항상 baseFontColor
     */
    getTextStyle(control, isActiveArea) {
      const isHovered = this.hoveredControlId === control.id;
      const color =
        isActiveArea && isHovered ? this.highlightFontColor : this.baseFontColor;

      return {
        color
      };
    },

    /**
     * 컨트롤 박스(왼쪽 뎁스 영역) 스타일.
     * 마우스 오버 시에만 depthHighlightColors / depthHighlightBgColors 적용.
     */
    getContentStyle(index, control) {
      const style = {};

      const maxWidth =
        control.maxWidth != null ? control.maxWidth : this.defaultMaxWidth;

      if (typeof maxWidth === 'number') {
        style.maxWidth = `${maxWidth}px`;
      } else {
        style.maxWidth = maxWidth;
      }

      if (this.hoveredControlId === control.id) {
        const borderIndex = index % this.depthHighlightColors.length;
        const bgIndex = index % this.depthHighlightBgColors.length;
        style.borderColor = this.depthHighlightColors[borderIndex];
        style.backgroundColor = this.depthHighlightBgColors[bgIndex];
      }

      return style;
    }
  }
};
</script>

<style scoped>
.control-chain {
  display: flex;
  gap: 16px;
  align-items: stretch;
  background: #fafafa;
  border: 1px solid #e5e5e5;
  padding: 8px;
  box-sizing: border-box;
}

.control-chain--available-right {
  flex-direction: row;
}
.control-chain--available-left {
  flex-direction: row-reverse;
}

/* 활성 체인 영역 (왼쪽) */
.control-chain__active {
  position: relative;
  box-sizing: border-box;
}

/* 사용 가능한 컨트롤 영역 (오른쪽) */
.control-chain__available {
  box-sizing: border-box;
}

.control-chain__available-title {
  margin-bottom: 8px;
  font-weight: bold;
  font-size: 12px;
}

.control-chain__available-list-wrapper {
  flex: 1;
  overflow-y: auto;
}

.control-chain__available-list {
  list-style: none;
  padding: 0;
  margin: 0;
  min-height: 100%;
}

.control-chain__available-item + .control-chain__available-item {
  margin-top: 4px;
}

/* 공통 아이템/컨트롤 스타일 */
.control-chain__item {
  display: flex;
  align-items: center;
}
.control-chain__separator {
  margin-right: 4px;
}

/* 컨트롤 박스 */
.control-chain__content {
  border: 1px solid #e4e4e4;
  border-radius: 0;
  padding: 6px 8px;
  background: #ffffff;
  min-width: 180px;
  min-height: 44px;
  transition: background-color 0.15s ease, border-color 0.15s ease;
  display: flex;
  flex-direction: column;
}

.control-chain__header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  align-items: center;
}
.control-chain__header-left {
  display: flex;
  align-items: center;
  gap: 4px;
}
.control-chain__title {
  font-size: 12px;
  font-weight: 600;
}
.control-chain__header-right {
  display: flex;
  align-items: center;
  gap: 4px;
}

.control-chain__drag-handle {
  cursor: grab;
  font-size: 12px;
}
.control-chain__drag-handle--small {
  font-size: 11px;
}

.control-chain__close-button {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 12px;
}

/* 바디 */
.control-chain__body {
  display: flex;
  align-items: center;
  gap: 4px;
  min-height: 24px;
}
.control-chain__dropdown {
  width: 100%;
}
.control-chain__label-value {
  font-size: 12px;
  display: inline-block;
  padding: 3px 2px;
}

.control-chain__empty {
  font-size: 12px;
}

/* 오른쪽 목록 아이템 */
.control-chain__available-content {
  border: 1px solid #e0e0e0;
  padding: 4px 6px;
  display: flex;
  align-items: center;
  gap: 4px;
  justify-content: flex-start;
  background: #ffffff;
  transition: background-color 0.12s ease, border-color 0.12s ease;
}
.control-chain__available-content:hover {
  background: #f7f7f7;
  border-color: #d0d0d0;
}

.control-chain__available-label {
  font-size: 12px;
}
</style>















<template>
  <div class="playground">
    <!-- 왼쪽: 실제 ControlChain -->
    <div class="playground__left">
      <control-chain
        ref="controlChain"
        v-model="chain"
        :control-templates="controlTemplates"
        :available-placement="availablePlacement"
        :width="demoWidth"
        :height="demoHeight"
        :use-horizontal-scroll="useHorizontalScroll"
        :use-vertical-scroll="useVerticalScroll"
        :empty-guide-text="emptyGuideText"
        :available-title="availableTitle"
        @control-added="logEvent('control-added', $event)"
        @control-removed="logEvent('control-removed', $event)"
        @control-depth-change="logEvent('control-depth-change', $event)"
        @control-selection-change="logEvent('control-selection-change', $event)"
      />
    </div>

    <!-- 오른쪽: 데모용 설정 패널 -->
    <div class="playground__right">
      <h3 class="playground__title">ControlChain Playground</h3>

      <!-- 사이즈 설정 -->
      <section class="playground__section">
        <h4>크기 설정 (전체 영역)</h4>
        <div class="playground__field">
          <label>width</label>
          <input
            v-model="widthInput"
            type="text"
            placeholder="예: 800px, 100%"
          />
        </div>
        <div class="playground__field">
          <label>height</label>
          <input
            v-model="heightInput"
            type="text"
            placeholder="예: 320px (비워두면 auto)"
          />
        </div>
        <div class="playground__field playground__field--inline">
          <label>
            <input
              v-model="useHorizontalScroll"
              type="checkbox"
            />
            가로 스크롤 사용 (뎁스 영역)
          </label>
        </div>
        <div class="playground__field playground__field--inline">
          <label>
            <input
              v-model="useVerticalScroll"
              type="checkbox"
            />
            세로 스크롤 사용 (뎁스 영역)
          </label>
        </div>
        <button
          type="button"
          class="playground__button"
          @click="applySize"
        >
          크기 적용
        </button>
      </section>

      <!-- 오른쪽 목록 영역 설정 -->
      <section class="playground__section">
        <h4>사용 가능한 컨트롤 영역</h4>
        <div class="playground__field">
          <label>목록 영역 width</label>
          <input
            v-model="availableWidthInput"
            type="text"
            placeholder="예: 220px, 260px"
          />
        </div>
        <button
          type="button"
          class="playground__button"
          @click="applyAvailableWidth"
        >
          목록 width 적용
        </button>

        <div class="playground__field">
          <label>목록 위치</label>
          <select v-model="availablePlacement">
            <option value="right">오른쪽</option>
            <option value="left">왼쪽</option>
          </select>
        </div>

        <div class="playground__field">
          <label>빈 뎁스 안내 문구</label>
          <input
            v-model="emptyGuideText"
            type="text"
          />
        </div>

        <div class="playground__field">
          <label>목록 제목 (availableTitle)</label>
          <input
            v-model="availableTitle"
            type="text"
            placeholder="예: 사용 가능한 컨트롤"
          />
        </div>
      </section>

      <!-- 색상 설정 -->
      <section class="playground__section">
        <h4>색상 설정</h4>

        <div class="playground__field">
          <label>기본 폰트 색 (base)</label>
          <input
            v-model="baseFontInput"
            type="text"
            placeholder="예: #222222"
          />
        </div>
        <button
          type="button"
          class="playground__button playground__button--small"
          @click="applyBaseFontColor"
        >
          기본 폰트 색 적용
        </button>

        <div class="playground__field">
          <label>하이라이트 폰트 색 (왼쪽 뎁스)</label>
          <input
            v-model="highlightFontInput"
            type="text"
            placeholder="예: #1E5FCB"
          />
        </div>
        <button
          type="button"
          class="playground__button playground__button--small"
          @click="applyHighlightFontColor"
        >
          하이라이트 폰트 색 적용
        </button>

        <div class="playground__field">
          <label>하이라이트 테두리 색 배열 (쉼표 구분)</label>
          <input
            v-model="highlightBorderInput"
            type="text"
            placeholder="#D5383A,#EB702D,#FBB41A"
          />
        </div>
        <button
          type="button"
          class="playground__button playground__button--small"
          @click="applyHighlightBorderColors"
        >
          테두리 색 적용
        </button>

        <div class="playground__field">
          <label>하이라이트 배경 색 배열 (쉼표 구분)</label>
          <input
            v-model="highlightBackgroundInput"
            type="text"
            placeholder="#F8DDDF,#FAE2D4,#FFF0C8"
          />
        </div>
        <button
          type="button"
          class="playground__button playground__button--small"
          @click="applyHighlightBackgroundColors"
        >
          배경 색 적용
        </button>
      </section>

      <!-- 디버그 -->
      <section class="playground__section">
        <h4>이벤트 로그 (최근 5개)</h4>
        <pre class="playground__log">
{{ recentLogs }}
        </pre>
      </section>
    </div>
  </div>
</template>

<script>

import ControlChain from '@/components/ControlChain.vue';

export default {
  name: 'ControlChainPlayground',
  components: { ControlChain },

  data() {
    return {
      // 체인 데이터 (AAA >> BBB >> ...)
      chain: [],

      // 전체 컨트롤 템플릿
      controlTemplates: [
        {
          key: 'AAA',
          label: 'AAA (Single)',
          type: 'single',
          items: [
            { text: 'AAA-옵션 1', value: 'aaa1' },
            { text: 'AAA-옵션 2', value: 'aaa2' },
            { text: 'AAA-옵션 3', value: 'aaa3' }
          ],
          selectedValue: 'aaa1',
          maxWidth: 260
        },
        {
          key: 'BBB',
          label: 'BBB (Multi)',
          type: 'multi',
          items: [
            { text: 'BBB-옵션 1', value: 'bbb1' },
            { text: 'BBB-옵션 2', value: 'bbb2' },
            { text: 'BBB-옵션 3', value: 'bbb3' },
            { text: 'BBB-옵션 4', value: 'bbb4' }
          ],
          selectedValues: [],
          maxWidth: 260
        },
        {
          key: 'CCC',
          label: 'CCC (Label)',
          type: 'label',
          displayValue: '고정 라벨 컨트롤',
          maxWidth: 260
        },
        {
          key: 'DDD',
          label: 'DDD (Single)',
          type: 'single',
          items: [
            { text: 'DDD-옵션 1', value: 'ddd1' },
            { text: 'DDD-옵션 2', value: 'ddd2' }
          ],
          selectedValue: 'ddd1',
          maxWidth: 260
        },
        {
          key: 'EEE',
          label: 'EEE (Multi)',
          type: 'multi',
          items: [
            { text: 'EEE-옵션 1', value: 'eee1' },
            { text: 'EEE-옵션 2', value: 'eee2' },
            { text: 'EEE-옵션 3', value: 'eee3' }
          ],
          selectedValues: [],
          maxWidth: 260
        },
        {
          key: 'FFF',
          label: 'FFF (Label)',
          type: 'label',
          displayValue: '설명용 라벨 컨트롤',
          maxWidth: 260
        }
      ],

      // ControlChain props
      availablePlacement: 'right',
      demoWidth: '100%',
      demoHeight: null,
      useHorizontalScroll: false,
      useVerticalScroll: false,
      emptyGuideText: '목록에서 드래그하여 추가해 주세요.',
      availableTitle: '사용 가능한 컨트롤',

      // UI 입력값 (바인딩용)
      widthInput: '100%',
      heightInput: '',
      availableWidthInput: '220px',
      baseFontInput: '#222222',
      highlightFontInput: '#1E5FCB',
      highlightBorderInput: '#D5383A,#EB702D,#FBB41A,#2DA379,#1E5FCB,#553CA5',
      highlightBackgroundInput: '#F8DDDF,#FAE2D4,#FFF0C8,#E0F0E8,#E0EBFA,#E5E0F6',

      logs: []
    };
  },

  computed: {
    recentLogs() {
      if (!this.logs.length) {
        return '(로그 없음)';
      }
      return this.logs.slice(-5).join('\n');
    }
  },

  methods: {
    // 크기 적용
    applySize() {
      this.demoWidth = this.widthInput && this.widthInput.trim()
        ? this.widthInput.trim()
        : '100%';

      this.demoHeight = this.heightInput && this.heightInput.trim()
        ? this.heightInput.trim()
        : null;
    },

    // 오른쪽 목록 width 적용
    applyAvailableWidth() {
      const ref = this.$refs.controlChain;
      if (!ref) {
        return;
      }
      const width = this.availableWidthInput && this.availableWidthInput.trim()
        ? this.availableWidthInput.trim()
        : '220px';

      ref.setAvailableWidth(width);
    },

    // 색상 관련
    applyBaseFontColor() {
      const ref = this.$refs.controlChain;
      if (!ref || !this.baseFontInput) {
        return;
      }
      ref.setBaseFontColor(this.baseFontInput.trim());
    },

    applyHighlightFontColor() {
      const ref = this.$refs.controlChain;
      if (!ref || !this.highlightFontInput) {
        return;
      }
      ref.setHighlightFontColor(this.highlightFontInput.trim());
    },

    applyHighlightBorderColors() {
      const ref = this.$refs.controlChain;
      if (!ref || !this.highlightBorderInput) {
        return;
      }
      const arr = this.highlightBorderInput
        .split(',')
        .map(item => item.trim())
        .filter(item => item);

      if (!arr.length) {
        return;
      }
      ref.setHighlightBorderColors(arr);
    },

    applyHighlightBackgroundColors() {
      const ref = this.$refs.controlChain;
      if (!ref || !this.highlightBackgroundInput) {
        return;
      }
      const arr = this.highlightBackgroundInput
        .split(',')
        .map(item => item.trim())
        .filter(item => item);

      if (!arr.length) {
        return;
      }
      ref.setHighlightBackgroundColors(arr);
    },

    // 이벤트 로그 출력
    logEvent(type, payload) {
      const time = new Date().toLocaleTimeString();
      const summary = `[${time}] ${type} : ${JSON.stringify(payload)}`;
      this.logs.push(summary);
    }
  }
};
</script>

