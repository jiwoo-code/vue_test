.vcs-dropdown {
  position: absolute;
  z-index: 2000;
  top: 100%;
  left: 0;
  right: 0;
  margin-top: 4px;
  border: 1px solid #000000;
  border-radius: 0;
  background-color: #ffffff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

/* ê²€ìƒ‰ */
.vcs-search-input {
  width: 100%;
  box-sizing: border-box;
  padding: 4px 8px;
  border: 0;
  border-bottom: 1px solid #eeeeee;
  outline: none;
  font-size: 13px;
}

/* ë¦¬ìŠ¤íŠ¸ */
.vcs-options {
  max-height: 260px;
}

/* ê° í–‰: ê°„ê²© ì¡°ê¸ˆ ì¤„ì´ê³  ë†’ì´ ì•ˆì •í™” */
.vcs-option-row {
  display: flex;
  align-items: center;
  padding: 2px 8px;
  min-height: 24px;
  box-sizing: border-box;
  cursor: pointer;
}

/* row hover ì‹œ íšŒìƒ‰ ë°°ê²½ */
.vcs-option-row:hover {
  background-color: #f0f0f0;
}

.vcs-select-all-row {
  border-bottom: 1px solid #eeeeee;
}

/* ì²´í¬ë°•ìŠ¤ ê³µí†µ (background-image) */
.vcs-checkbox {
  display: inline-block;
  width: 16px;
  height: 16px;
  cursor: pointer;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}

/* ì–¸ì²´í¬ ìƒíƒœ */
.vcs-checkbox.is-unchecked {
  background:
    transparent
    url('~@/assets/style/svg/virtual-dropdown/checkbox_unchecked.svg')
    center/contain no-repeat;
}

/* ì²´í¬ ìƒíƒœ */
