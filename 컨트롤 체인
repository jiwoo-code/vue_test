<!--
  ---------------------------------------------------------------------------
  í•„ìš”í•œ ë¼ì´ë¸ŒëŸ¬ë¦¬

  vuedraggable (Sortable.js ê¸°ë°˜ ë“œë˜ê·¸)
    npm install vuedraggable sortablejs
    yarn add vuedraggable sortablejs

  ---------------------------------------------------------------------------
-->

<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="containerStyle"
  >
    <!-- í™œì„± ì²´ì¸ ì˜ì—­ (ì™¼ìª½) -->
    <div
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span v-if="index > 0" class="control-chain__separator">>></span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <!-- íƒ€ì´í‹€ + ë“œë˜ê·¸í•¸ë“¤ + ì‚­ì œë²„íŠ¼ -->
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span class="control-chain__drag-handle">â‰¡</span>

                <span
                  class="control-chain__title"
                  :style="getTextStyle(element, true)"
                >
                  {{ element.label }}
                </span>
              </div>

              <button
                type="button"
                class="control-chain__close-button"
                :style="{ visibility: showCloseControlId === element.id ? 'visible' : 'hidden' }"
                @click.stop="removeControlById(element.id)"
              >
                âœ•
              </button>
            </div>

            <!-- ì»¨íŠ¸ë¡¤ ë°”ë”” -->
            <div class="control-chain__body">
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <!-- ë¼ë²¨ ì»¨íŠ¸ë¡¤ -->
              <span
                v-else
                class="control-chain__label-value"
                :style="{ color: baseFontColor }"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>
          </div>
        </div>

        <div
          v-if="!activeControls.length"
          class="control-chain__empty"
          :style="emptyGuideTextStyle"
        >
          {{ emptyGuideText }}
        </div>
      </draggable>
    </div>

    <!-- ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤ ì˜ì—­ -->
    <div
      class="control-chain__available"
      :style="availableAreaStyle"
    >
      <div
        v-if="availableTitle"
        class="control-chain__available-title"
        :style="availableTitleTextStyle"
      >
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span
                class="control-chain__drag-handle control-chain__drag-handle--small"
              >
                â‰¡
              </span>

              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>

  </div>
</template>

<script>
import draggable from 'vuedraggable';

const DEFAULT_MIN_HEIGHT = 260;
const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') return undefined;
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) return null;
  if (Array.isArray(input)) return input.length ? input.slice() : null;
  return [input];
};

const horizontalMap = {
  left: 'flex-start',
  center: 'center',
  right: 'flex-end'
};
const verticalMap = {
  top: 'flex-start',
  center: 'center',
  bottom: 'flex-end'
};

export default {
  name: 'ControlChain',
  components: { draggable },

  model: { prop: 'value', event: 'input' },

  props: {
    value: Array,
    controlTemplates: Array,
    availablePlacement: {
      type: String,
      default: 'right'
    },
    emptyGuideText: {
      type: String,
      default: 'ëª©ë¡ì—ì„œ ë“œë˜ê·¸í•˜ì—¬ ì¶”ê°€í•´ ì£¼ì„¸ìš”.'
    },
    availableTitle: { type: String, default: '' },

    width: [Number, String],
    height: [Number, String],

    useHorizontalScroll: Boolean,
    useVerticalScroll: Boolean
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],
      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',

      hoveredControlId: null,
      showCloseControlId: null,

      idMap: {},

      depthHighlightColors: [
        '#D5383A', '#EB702D', '#FBB41A',
        '#2DA379', '#1E5FCB', '#553CA5'
      ],
      depthHighlightBgColors: [
        '#F8DDDF', '#FAE2D4', '#FFF0C8',
        '#E0F0E8', '#E0EBFA', '#E5E0F6'
      ],

      defaultMaxWidth: 240,

      baseFontColor: '#222',
      highlightFontColor: '#1E5FCB',

      availableWidth: null,

      horizontalAlign: 'flex-start',
      verticalAlign: 'flex-start'
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    containerStyle() {
      const style = {
        width: toSize(this.width) || '100%',
        boxSizing: 'border-box'
      };

      const h = toSize(this.height);
      if (h) {
        style.height = h;
        style.minHeight = h;
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }
      return style;
    },

    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#fff',
        display: 'flex',
        flexDirection: 'column',
        minWidth: 0,
        boxSizing: 'border-box'
      };

      const h = toSize(this.height);
      if (h) {
        style.height = '100%';
        style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';
      } else {
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';
      return style;
    },

    availableAreaStyle() {
      const raw = this.availableWidth ?? `${DEFAULT_AVAILABLE_WIDTH}px`;
      const w = toSize(raw) ?? raw;

      const style = {
        width: w,
        flexBasis: w,
        flexGrow: 0,
        flexShrink: 0,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#fff',
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column'
      };

      const h = toSize(this.height);
      style.height = h ? '100%' : 'auto';

      return style;
    },

    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        minHeight: 0,
        minWidth: 0,
        flex: '1 1 auto'
      };

      if (this.useHorizontalScroll) {
        style.flexWrap = 'nowrap';
        style.width = 'max-content';
        style.minWidth = '100%';
        style.justifyContent = 'flex-start';
        style.alignItems = this.useVerticalScroll ? 'flex-start' : this.verticalAlign;
      } else {
        style.flexWrap = 'wrap';
        style.width = '100%';
        style.justifyContent = this.horizontalAlign;
        style.alignContent = this.verticalAlign;
      }

      return style;
    },

    emptyGuideTextStyle() {
      return { color: '#999' };
    },

    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: { handler() { this.buildControls(); }, deep: true },
    controlTemplates: { handler() { this.buildControls(); }, deep: true }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // ì™¸ë¶€ APIë“¤
    setHighlightBorderColors(colors) {
      const arr = toArray(colors);
      if (arr) this.depthHighlightColors = arr;
    },
    setHighlightBackgroundColors(colors) {
      const arr = toArray(colors);
      if (arr) this.depthHighlightBgColors = arr;
    },
    setBaseFontColor(color) {
      if (color) this.baseFontColor = color;
    },
    setHighlightFontColor(color) {
      if (color) this.highlightFontColor = color;
    },
    setAvailableWidth(w) {
      if (typeof w === 'number') this.availableWidth = `${w}px`;
      else if (w) this.availableWidth = w;
    },
    setHorizontalAlign(mode) {
      const mapped = horizontalMap[mode];
      if (mapped) this.horizontalAlign = mapped;
    },
    setVerticalAlign(mode) {
      const mapped = verticalMap[mode];
      if (mapped) this.verticalAlign = mapped;
    },

    // ë‚´ë¶€ ë¡œì§
    getStableId(control) {
      const key = control.key || control.label;
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2,8)}`;
      }
      return this.idMap[key];
    },

    buildControls() {
      const valueArr = Array.isArray(this.value) ? this.value : [];
      const templateArr = Array.isArray(this.controlTemplates)
        ? this.controlTemplates
        : [];

      const used = new Set(valueArr.map(v => v.key));

      this.activeControls = valueArr.map(c => ({
        ...c,
        id: c.id || this.getStableId(c)
      }));

      this.availableControls = templateArr
        .filter(t => !used.has(t.key))
        .map(t => ({
          ...t,
          id: t.id || this.getStableId(t)
        }));
    },

    emitChain() {
      const cloned = this.activeControls.map(c => {
        const o = { ...c };
        if (Array.isArray(o.selectedValues))
          o.selectedValues = o.selectedValues.slice();
        delete o.id;
        return o;
      });
      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    // ë“œë˜ê·¸/ë“œë¡­ ì´ë²¤íŠ¸
    onActiveChange(event) {
      this.emitChain();
      if (event.added) {
        this.$emit('control-added', { control: event.added.element, index: event.added.newIndex });
      }
      if (event.moved) {
        this.$emit('control-depth-change', {
          control: event.moved.element,
          oldIndex: event.moved.oldIndex,
          newIndex: event.moved.newIndex
        });
      }
      if (event.removed) {
        this.$emit('control-removed', {
          control: event.removed.element,
          index: event.removed.oldIndex
        });
      }
    },

    removeControlById(id) {
      const i = this.activeControls.findIndex(c => c.id === id);
      if (i < 0) return;

      const removed = this.activeControls.splice(i, 1)[0];
      this.availableControls.push(removed);

      if (this.hoveredControlId === id) this.hoveredControlId = null;
      if (this.showCloseControlId === id) this.showCloseControlId = null;

      this.emitChain();
      this.$emit('control-removed', { control: removed, index: i });
    },

    onControlMouseEnter(element) {
      this.hoveredControlId = element.id;
      this.showCloseControlId = element.id;
    },
    onControlMouseLeave(element) {
      if (this.hoveredControlId === element.id) this.hoveredControlId = null;
      if (this.showCloseControlId === element.id) this.showCloseControlId = null;
    },

    // ì„ íƒ ë³€ê²½ ì´ë²¤íŠ¸
    onSingleSelectChange(element, index, val) {
      if (element.selectedValue === val) return;
      element.selectedValue = val;
      this.emitChain();
      this.$emit('control-selection-change', { control: element, index, type: 'single', value: val });
    },

    onMultiSelectChange(element, index, vals) {
      const next = Array.isArray(vals) ? vals.slice() : [];
      const prev = Array.isArray(element.selectedValues) ? element.selectedValues : [];
      if (prev.length === next.length && prev.every((v,i)=>v===next[i])) return;

      element.selectedValues = next;
      this.emitChain();
      this.$emit('control-selection-change', { control: element, index, type: 'multi', values: next });
    },

    // ìŠ¤íƒ€ì¼ ë¡œì§
    getTextStyle(element, isActiveArea) {
      const isHovered = this.hoveredControlId === element.id;
      return {
        color: isActiveArea && isHovered
          ? this.highlightFontColor
          : this.baseFontColor
      };
    },

    getContentStyle(index, element) {
      const s = {};

      const maxW = element.maxWidth ?? this.defaultMaxWidth;
      s.maxWidth = typeof maxW === 'number' ? `${maxW}px` : maxW;

      if (this.hoveredControlId === element.id) {
        const bi = index % this.depthHighlightColors.length;
        s.borderColor = this.depthHighlightColors[bi];
        s.backgroundColor = this.depthHighlightBgColors[bi];
      }

      return s;
    }
  }
};
</script>

<style scoped>
.control-chain {
  display: flex;
  gap: 16px;
  align-items: stretch;
  background: #fafafa;
  border: 1px solid #e5e5e5;
