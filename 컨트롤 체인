            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span class="control-chain__drag-handle control-chain__drag-handle--small">
                â‰¡
              </span>

              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>
  </div>
</template>

<script>
import draggable from 'vuedraggable';

const DEFAULT_MIN_HEIGHT = 260;
const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') {
    return undefined;
  }
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) {
    return null;
  }
  if (Array.isArray(input)) {
    return input.length ? input.slice() : null;
  }
  return [input];
};

const horizontalMap = {
  left: 'flex-start',
  center: 'center',
  right: 'flex-end'
};

const verticalMap = {
  top: 'flex-start',
  center: 'center',
  bottom: 'flex-end'
};

export default {
  name: 'ControlChain',
  components: { draggable },

  model: { prop: 'value', event: 'input' },

  props: {
    value: {
      type: Array,
      default() {
        return [];
      }
    },
    controlTemplates: {
      type: Array,
      required: true
    },
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return v === 'right' || v === 'left';
      }
    },
    emptyGuideText: {
      type: String,
      default: 'ëª©ë¡ì—ì„œ ë“œë˜ê·¸í•˜ì—¬ ì¶”ê°€í•´ ì£¼ì„¸ìš”.'
    },
    availableTitle: {
      type: String,
      default: ''
    },

    // ì „ì²´ ì»¨íŠ¸ë¡¤ ì²´ì¸ ì˜ì—­ í¬ê¸°
    width: {
      type: [Number, String],
      default: null
    },
    height: {
      type: [Number, String],
      default: null
    },

    // ìŠ¤í¬ë¡¤ ì‚¬ìš© ì—¬ë¶€ (ëìŠ¤ ì˜ì—­ ê¸°ì¤€)
    useHorizontalScroll: {
      type: Boolean,
      default: false
    },
    useVerticalScroll: {
      type: Boolean,
      default: false
    }
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],

      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',

      hoveredControlId: null,
      showCloseControlId: null,

      idMap: {},

      depthHighlightColors: [
        '#D5383A',
        '#EB702D',
        '#FBB41A',
        '#2DA379',
        '#1E5FCB',
        '#553CA5'
      ],
      depthHighlightBgColors: [
        '#F8DDDF',
        '#FAE2D4',
        '#FFF0C8',
        '#E0F0E8',
        '#E0EBFA',
        '#E5E0F6'
      ],

      defaultMaxWidth: 240,

      baseFontColor: '#222222',
      highlightFontColor: '#1E5FCB',

      availableWidth: null,

      horizontalAlign: 'flex-start',
      verticalAlign: 'center'
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    containerStyle() {
      const style = {
        width: toSize(this.width) || '100%',
        boxSizing: 'border-box'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = heightValue;
        style.minHeight = heightValue;
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        display: 'flex',
        flexDirection: 'column',
        boxSizing: 'border-box'
      };

      const heightValue = toSize(this.height);
      const hasHeight = !!heightValue;

      if (hasHeight) {
        style.height = '100%';
        style.minHeight = 0;
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';
      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';

      return style;
    },

    availableAreaStyle() {
      const rawWidth = this.availableWidth != null
        ? this.availableWidth
        : `${DEFAULT_AVAILABLE_WIDTH}px`;
      const widthValue = toSize(rawWidth) || rawWidth;

      const style = {
        width: widthValue,
        flexBasis: widthValue,
        flexShrink: 0,
        flexGrow: 0,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column'
      };

      const heightValue = toSize(this.height);
      const hasHeight = !!heightValue;

      if (hasHeight) {
        style.height = '100%';
        style.minHeight = 0;
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        flex: '1 1 auto',
        width: '100%',
        minWidth: 0,
        minHeight: '140px' // ğŸ”¹ í•­ìƒ ì¼ì • ì´ìƒ ë“œë¡­ ì˜ì—­ í™•ë³´
      };

      // ê°€ë¡œ ìŠ¤í¬ë¡¤ ì—¬ë¶€ì— ë”°ë¼ ì¤„ë°”ê¿ˆ ë°©ì‹ ì œì–´
      style.flexWrap = this.useHorizontalScroll ? 'nowrap' : 'wrap';

      // ì •ë ¬ì€ ìŠ¤í¬ë¡¤ ì—¬ë¶€ì™€ ê´€ê³„ ì—†ì´ í•­ìƒ ì˜µì…˜ ì‚¬ìš©
      style.justifyContent = this.horizontalAlign;

      // í•œ ì¤„ / ì—¬ëŸ¬ ì¤„ ì¼€ì´ìŠ¤ì— ë”°ë¼ ì„¸ë¡œ ì •ë ¬ ì ìš©
      if (this.useHorizontalScroll) {
        style.alignItems = this.verticalAlign;
      } else {
        style.alignContent = this.verticalAlign;
      }

      return style;
    },

    emptyGuideTextStyle() {
      return {
        color: '#999999'
      };
    },

    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
      },
      deep: true
    },
    controlTemplates: {
      handler() {
        this.buildControls();
      },
      deep: true
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // ========================= Public API =========================

    setHighlightBorderColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightColors = array;
      }
    },

    setHighlightBackgroundColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightBgColors = array;
      }
    },

    setBaseFontColor(color) {
      if (color) {
        this.baseFontColor = color;
      }
    },

    setHighlightFontColor(color) {
      if (color) {
        this.highlightFontColor = color;
      }
    },

    setAvailableWidth(width) {
      if (typeof width === 'number') {
        this.availableWidth = `${width}px`;
      } else if (width) {
        this.availableWidth = width;
      }
    },

    setHorizontalAlign(mode) {
      const mapped = horizontalMap[mode];
      if (mapped) {
        this.horizontalAlign = mapped;
      }
    },

    setVerticalAlign(mode) {
      const mapped = verticalMap[mode];
      if (mapped) {
        this.verticalAlign = mapped;
      }
    },

    // ========================= ë‚´ë¶€ ë¡œì§ =========================

    getStableId(control) {
      const baseKey = control.key || control.label || 'control';
      if (!this.idMap[baseKey]) {
        this.idMap[baseKey] = `${baseKey}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[baseKey];
    },

    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates)
        ? this.controlTemplates
        : [];

      const usedKeys = new Set(
        valueArray
          .map(control => control.key)
          .filter(key => key != null)
      );

      this.activeControls = valueArray.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter(template => !usedKeys.has(template.key))
        .map(template => ({
          ...template,
          id: template.id || this.getStableId(template)
        }));
    },

    emitChain() {
      const cloned = this.activeControls.map(control => {
        const clone = { ...control };
        if (Array.isArray(clone.selectedValues)) {
          clone.selectedValues = clone.selectedValues.slice();
        }
        delete clone.id;
        return clone;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    // =================== Drag & Drop ===================

    onActiveChange(event) {
      this.emitChain();

      if (event.added) {
        this.$emit('control-added', {
          control: event.added.element,
          index: event.added.newIndex
        });
      }

      if (event.moved) {
        this.$emit('control-depth-change', {
          control: event.moved.element,
          oldIndex: event.moved.oldIndex,
          newIndex: event.moved.newIndex
        });
      }

      if (event.removed) {
        this.$emit('control-removed', {
          control: event.removed.element,
          index: event.removed.oldIndex
        });
      }
    },

    removeControlById(id) {
      const index = this.activeControls.findIndex(control => control.id === id);
      if (index < 0) {
        return;
      }

      const removed = this.activeControls.splice(index, 1)[0];
      this.availableControls.push(removed);

      if (this.hoveredControlId === id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === id) {
        this.showCloseControlId = null;
      }

      this.emitChain();
      this.$emit('control-removed', {
        control: removed,
        index
      });
    },

    onControlMouseEnter(element) {
      this.hoveredControlId = element.id;
      this.showCloseControlId = element.id;
    },

    onControlMouseLeave(element) {
      if (this.hoveredControlId === element.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === element.id) {
        this.showCloseControlId = null;
      }
    },

    // =================== ì„ íƒ ë³€ê²½ ===================

    onSingleSelectChange(element, index, value) {
      if (element.selectedValue === value) {
        return;
      }
      element.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'single',
        value
      });
    },

    onMultiSelectChange(element, index, values) {
      const next = Array.isArray(values) ? values.slice() : [];
      const previous = Array.isArray(element.selectedValues)
        ? element.selectedValues
        : [];

      const isSame =
        previous.length === next.length &&
        previous.every((item, position) => item === next[position]);

      if (isSame) {
        return;
      }

      element.selectedValues = next;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'multi',
        values: next
      });
    },

    // =================== ìŠ¤íƒ€ì¼ ===================

    getTextStyle(element, isActiveArea) {
      const isHovered = this.hoveredControlId === element.id;
      const color =
        isActiveArea && isHovered ? this.highlightFontColor : this.baseFontColor;

      return { color };
    },

    getContentStyle(index, element) {
      const style = {};

      const maxWidth =
        element.maxWidth != null ? element.maxWidth : this.defaultMaxWidth;
      style.maxWidth = typeof maxWidth === 'number' ? `${maxWidth}px` : maxWidth;

      if (this.hoveredControlId === element.id) {
        const borderIndex = index % this.depthHighlightColors.length;
        const backgroundIndex = index % this.depthHighlightBgColors.length;
        style.borderColor = this.depthHighlightColors[borderIndex];
        style.backgroundColor = this.depthHighlightBgColors[backgroundIndex];
      }

      return style;
    }
  }
};
</script>

