<template>
  <div class="control-chain" :class="layoutClass">

    <!-- 활성 체인 -->
    <div class="control-chain__active">
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span v-if="index > 0" class="control-chain__separator">>></span>

          <div
            class="control-chain__content"
            @mouseenter="onControlMouseEnter(element)"
            @mouseleave="onControlMouseLeave(element)"
          >
            <div class="control-chain__header">
              <div class="control-chain__header-left">
                <span
                  v-if="hoveredControlId === element.id"
                  class="control-chain__drag-handle"
                >
                  ≡
                </span>
                <span class="control-chain__title">{{ element.label }}</span>
              </div>

              <div class="control-chain__header-right">
                <button
                  v-if="showCloseControlId === element.id"
                  type="button"
                  class="control-chain__close-button"
                  @click.stop="removeControlById(element.id)"
                >
                  ✕
                </button>
              </div>
            </div>

            <div class="control-chain__body">
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.options"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.options"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <span v-else class="control-chain__label-value">
                {{ element.displayValue || '-' }}
              </span>
            </div>
          </div>
        </div>

        <div v-if="!activeControls.length" class="control-chain__empty">
          사용 가능한 컨트롤 목록에서 드래그해 추가해주세요.
        </div>
      </draggable>
    </div>

    <!-- 사용 가능한 컨트롤 -->
    <div class="control-chain__available">
      <div class="control-chain__available-title">사용 가능한 컨트롤</div>

      <draggable
        :list="availableControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__available-list"
        :handle="dragHandleSelector"
      >
        <li
          v-for="element in availableControls"
          :key="element.id"
          class="control-chain__available-item"
        >
          <div
            class="control-chain__available-content"
            @mouseenter="onControlMouseEnter(element)"
            @mouseleave="onControlMouseLeave(element)"
          >
            <span class="control-chain__available-label">{{ element.label }}</span>

            <span
              v-if="hoveredControlId === element.id"
              class="control-chain__drag-handle control-chain__drag-handle--small"
            >
              ≡
            </span>
          </div>
        </li>
      </draggable>
    </div>

  </div>
</template>

<script>
import draggable from 'vuedraggable';

export default {
  name: 'ControlChain',
  components: { draggable },

  model: {
    prop: 'value',
    event: 'input'
  },

  props: {
    value: {
      type: Array,
      default() {
        return [];
      }
    },
    controlTemplates: {
      type: Array,
      required: true
    },
    availablePlacement: {
      type: String,
      default: 'right',
      validator(pos) {
        return ['right', 'left', 'top', 'bottom'].includes(pos);
      }
    }
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],
      dragGroup: { name: 'control-chain', pull: true, put: true },
      dragHandleSelector: '.control-chain__drag-handle',
      hoveredControlId: null,
      hoverTimerId: null,
      showCloseControlId: null
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    }
  },

  watch: {
    value: { handler() { this.buildControls(); }, deep: true },
    controlTemplates: { handler() { this.buildControls(); }, deep: true }
  },

  created() {
    this.buildControls();
  },

  methods: {
    normalizeOptions(source) {
      const rawItems = Array.isArray(source.items)
        ? source.items
        : Array.isArray(source.options)
          ? source.options
          : [];

      return rawItems.map(opt => ({
        ...opt,
        text: opt.text,
        value: opt.value
      }));
    },

    buildControls() {
      const v = Array.isArray(this.value) ? this.value : [];
      const t = Array.isArray(this.controlTemplates) ? this.controlTemplates : [];

      const usedKeys = new Set(v.map(c => c.key));

      this.activeControls = v.map(c => ({
        ...c,
        options: this.normalizeOptions(c),
        id: c.id || this.makeId(c)
      }));

      this.availableControls = t
        .filter(c => !usedKeys.has(c.key))
        .map(c => ({
          ...c,
          options: this.normalizeOptions(c),
          id: c.id || this.makeId(c)
        }));
    },

    onActiveChange(evt) {
      this.emitChain();

      if (evt.added) {
        this.$emit('control-added', { control: evt.added.element, index: evt.added.newIndex });
      }
      if (evt.moved) {
        this.$emit('control-depth-change', {
          control: evt.moved.element,
          oldIndex: evt.moved.oldIndex,
          newIndex: evt.moved.newIndex
        });
      }
      if (evt.removed) {
        this.$emit('control-removed', { control: evt.removed.element, index: evt.removed.oldIndex });
      }
    },

    onSingleSelectChange(control, index, value) {
      control.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', { control, index, type: 'single', value });
    },

    onMultiSelectChange(control, index, values) {
      control.selectedValues = Array.isArray(values) ? values.slice() : [];
      this.emitChain();
      this.$emit('control-selection-change', {
        control,
        index,
        type: 'multi',
        values: control.selectedValues
      });
    },

    removeControlById(id) {
      const idx = this.activeControls.findIndex(c => c.id === id);
      if (idx < 0) return;

      const [removed] = this.activeControls.splice(idx, 1);
      this.availableControls.push(removed);

      this.emitChain();
      this.$emit('control-removed', { control: removed, index: idx });
    },

    onControlMouseEnter(control) {
      this.hoveredControlId = control.id;
      if (this.hoverTimerId) clearTimeout(this.hoverTimerId);
      this.hoverTimerId = setTimeout(() => {
        this.showCloseControlId = control.id;
      }, 1000);
    },

    onControlMouseLeave(control) {
      this.hoveredControlId = null;
      if (this.hoverTimerId) clearTimeout(this.hoverTimerId);
      if (this.showCloseControlId === control.id) {
        this.showCloseControlId = null;
      }
    },

    emitChain() {
      const cloned = this.activeControls.map(c => ({
        ...c,
        selectedValues: Array.isArray(c.selectedValues) ? c.selectedValues.slice() : c.selectedValues
      }));
      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    makeId(c) {
      return `${c.key}-${Date.now()}-${Math.random().toString(36).slice(2, 8)}`;
    }
  }
};
</script>

<style scoped>
.control-chain {
  display: flex;
  gap: 16px;
  align-items: flex-start;
}

.control-chain--available-right { flex-direction: row; }
.control-chain--available-left { flex-direction: row-reverse; }
.control-chain--available-top { flex-direction: column-reverse; }
.control-chain--available-bottom { flex-direction: column; }

.control-chain__active { flex: 1; }
.control-chain__draggable { display: flex; flex-wrap: wrap; gap: 8px; }

.control-chain__item { display: flex; align-items: center; }
.control-chain__separator { margin-right: 4px; }

.control-chain__content {
  background: #fafafa;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 6px 8px;
  min-width: 160px;
}

.control-chain__header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  align-items: center;
}

.control-chain__header-left {
  display: flex;
  gap: 4px;
  align-items: center;
}

.control-chain__title {
  font-size: 12px;
  font-weight: 600;
}

.control-chain__drag-handle { cursor: grab; font-size: 12px; }
.control-chain__drag-handle--small { font-size: 11px; }

.control-chain__close-button {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 12px;
}

.control-chain__body { display: flex; gap: 4px; }
.control-chain__dropdown { width: 100%; }

.control-chain__label-value { font-size: 12px; }

.control-chain__empty { font-size: 12px; color: #777; }

/* available list */
.control-chain__available {
  width: 180px;
}
.control-chain--available-right .control-chain__available {
  border-left: 1px solid #eee;
  padding-left: 12px;
}

.control-chain__available-title {
  font-weight: bold;
  margin-bottom: 8px;
}

.control-chain__available-list {
  padding: 0;
  margin: 0;
  list-style: none;
}

.control-chain__available-item + .control-chain__available-item {
  margin-top: 4px;
}

.control-chain__available-content {
  border: 1px dashed #ccc;
  padding: 4px 6px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.control-chain__available-label { font-size: 12px; }
</style>









<template>
  <div>
    <control-chain
      v-model="chain"
      :control-templates="controlTemplates"
      available-placement="right"
      @control-added="logEvent"
      @control-removed="logEvent"
      @control-depth-change="logEvent"
      @control-selection-change="logEvent"
    />
  </div>
</template>

<script>
import ControlChain from '@/components/ControlChain.vue';

export default {
  name: 'ControlChainDemo',
  components: { ControlChain },

  data() {
    return {
      controlTemplates: [
        {
          key: 'AAA',
          label: 'AAA',
          type: 'single',
          items: [
            { text: 'AAA1', value: 'aaa1' },
            { text: 'AAA2', value: 'aaa2' }
          ],
          selectedValue: 'aaa1'
        },
        {
          key: 'BBB',
          label: 'BBB',
          type: 'multi',
          items: [
            { text: 'BBB1', value: 'bbb1' },
            { text: 'BBB2', value: 'bbb2' }
          ],
          selectedValues: []
        },
        {
          key: 'CCC',
          label: 'CCC',
          type: 'label',
          displayValue: '고정 라벨'
        }
      ],

      chain: []
    };
  },

  methods: {
    logEvent(e) {
      console.log('EVENT:', e);
    }
  }
};
</script>