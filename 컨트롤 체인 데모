<template>
  <div class="control-chain-demo">
    <!-- ë°ëª¨ ì„¤ì • íŒ¨ë„ -->
    <div class="demo-panel">
      <h3 class="demo-panel__title">ControlChain Demo</h3>

      <div class="demo-panel__row">
        <label class="demo-panel__label">
          ê³ ì • width ì‚¬ìš©
          <input
            type="checkbox"
            v-model="useFixedWidth"
          />
        </label>
        <input
          v-if="useFixedWidth"
          type="number"
          class="demo-panel__input"
          v-model.number="fixedWidth"
          min="300"
          step="50"
        />
        <span v-if="useFixedWidth" class="demo-panel__suffix">px</span>
      </div>

      <div class="demo-panel__row">
        <label class="demo-panel__label">
          ê³ ì • height ì‚¬ìš©
          <input
            type="checkbox"
            v-model="useFixedHeight"
          />
        </label>
        <input
          v-if="useFixedHeight"
          type="number"
          class="demo-panel__input"
          v-model.number="fixedHeight"
          min="200"
          step="20"
        />
        <span v-if="useFixedHeight" class="demo-panel__suffix">px</span>
      </div>

      <div class="demo-panel__row">
        <label class="demo-panel__label">
          ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤ ì œëª©
        </label>
        <input
          type="text"
          class="demo-panel__input demo-panel__input--full"
          v-model="availableTitle"
          placeholder="ì˜ˆ: ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤"
        />
      </div>

      <div class="demo-panel__row">
        <label class="demo-panel__label">
          ë¹ˆ ì²´ì¸ ì•ˆë‚´ ë¬¸êµ¬
        </label>
        <input
          type="text"
          class="demo-panel__input demo-panel__input--full"
          v-model="emptyGuideText"
          placeholder="ì˜ˆ: ëª©ë¡ì—ì„œ ë“œë˜ê·¸í•˜ì—¬ ì¶”ê°€í•´ ì£¼ì„¸ìš”."
        />
      </div>

      <div class="demo-panel__row">
        <label class="demo-panel__label">
          ì»¨íŠ¸ë¡¤ ëª©ë¡ ìœ„ì¹˜
        </label>
        <select
          v-model="availablePlacement"
          class="demo-panel__select"
        >
          <option value="right">ì˜¤ë¥¸ìª½</option>
          <option value="left">ì™¼ìª½</option>
        </select>
      </div>
    </div>

    <!-- ì‹¤ì œ ControlChain ì˜ì—­ -->
    <div class="demo-chain-wrapper">
      <control-chain
        v-model="chain"
        :control-templates="controlTemplates"
        :available-placement="availablePlacement"
        :width="resolvedWidth"
        :height="resolvedHeight"
        :available-title="availableTitle"
        :empty-guide-text="emptyGuideText"
        @control-added="logEvent('control-added', $event)"
        @control-removed="logEvent('control-removed', $event)"
        @control-depth-change="logEvent('control-depth-change', $event)"
        @control-selection-change="logEvent('control-selection-change', $event)"
      />
    </div>
  </div>
</template>

<script>
import ControlChain from '@/components/ControlChain.vue';

export default {
  name: 'ControlChainDemo',
  components: { ControlChain },

  data() {
    return {
      // ì²´ì¸ ìƒíƒœ
      chain: [],

      // ì „ì²´ í…œí”Œë¦¿ ëª©ë¡
      controlTemplates: [
        {
          key: 'AAA',
          label: 'AAA',
          type: 'single',
          items: [
            { text: 'AAA1', value: 'aaa1' },
            { text: 'AAA2', value: 'aaa2' },
            { text: 'AAA3', value: 'aaa3' }
          ],
          selectedValue: 'aaa1',
          maxWidth: 260
        },
        {
          key: 'BBB',
          label: 'BBB',
          type: 'multi',
          items: [
            { text: 'BBB1', value: 'bbb1' },
            { text: 'BBB2', value: 'bbb2' },
            { text: 'BBB3', value: 'bbb3' },
            { text: 'BBB4', value: 'bbb4' }
          ],
          selectedValues: [],
          maxWidth: 260
        },
        {
          key: 'CCC',
          label: 'CCC',
          type: 'label',
          displayValue: 'ê³ ì • ë¼ë²¨ 1',
          maxWidth: 260
        },
        {
          key: 'DDD',
          label: 'DDD',
          type: 'single',
          items: [
            { text: 'ì˜µì…˜ 1', value: 'opt1' },
            { text: 'ì˜µì…˜ 2', value: 'opt2' },
            { text: 'ì˜µì…˜ 3', value: 'opt3' }
          ],
          selectedValue: 'opt1',
          maxWidth: 260
        },
        {
          key: 'EEE',
          label: 'EEE',
          type: 'multi',
          items: [
            { text: 'E-1', value: 'e1' },
            { text: 'E-2', value: 'e2' },
            { text: 'E-3', value: 'e3' }
          ],
          selectedValues: ['e1'],
          maxWidth: 260
        },
        {
          key: 'FFF',
          label: 'FFF',
          type: 'label',
          displayValue: 'ì„¤ëª…ìš© ë¼ë²¨ í…ìŠ¤íŠ¸',
          maxWidth: 260
        }
      ],

      // ë ˆì´ì•„ì›ƒ/ìŠ¤í¬ë¡¤ ì œì–´ìš©
      useFixedWidth: true,
      useFixedHeight: true,
      fixedWidth: 900,
      fixedHeight: 280,

      // ê¸°íƒ€ í…ìŠ¤íŠ¸/ì˜µì…˜
      availablePlacement: 'right',
      availableTitle: 'ì‚¬ìš© ê°€ëŠ¥í•œ ì»¨íŠ¸ë¡¤',
      emptyGuideText: 'ëª©ë¡ì—ì„œ ë“œë˜ê·¸í•˜ì—¬ ì¶”ê°€í•´ ì£¼ì„¸ìš”.'
    };
  },

  computed: {
    resolvedWidth() {
      if (!this.useFixedWidth) {
        return null;
      }
      return this.fixedWidth;
    },

    resolvedHeight() {
      if (!this.useFixedHeight) {
        return null;
      }
      return this.fixedHeight;
    }
  },

  methods: {
    logEvent(type, payload) {
      // í•„ìš”í•˜ë©´ ì‹¤ì œ ë¡œê¹…/ë””ë²„ê¹…ì— ì‚¬ìš©
      // console.log(`[${type}]`, payload);
    }
  }
};
</script>

