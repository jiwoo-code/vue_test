<!--
  필요한 라이브러리
  - vuedraggable (Sortable.js 기반)
    npm install vuedraggable sortablejs
    yarn add vuedraggable sortablejs
-->

<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="containerStyle"
  >
    <!-- 활성 체인 영역 (왼쪽) -->
    <div
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span
            v-if="index > 0"
            class="control-chain__separator"
          >
            >>
          </span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <!-- 타이틀 + 드래그핸들 + 삭제버튼 -->
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span class="control-chain__drag-handle">≡</span>

                <span
                  class="control-chain__title"
                  :style="getTextStyle(element, true)"
                >
                  {{ element.label }}
                </span>
              </div>

              <button
                type="button"
                class="control-chain__close-button"
                :style="{ visibility: showCloseControlId === element.id ? 'visible' : 'hidden' }"
                @click.stop="removeControlById(element.id)"
              >
                ✕
              </button>
            </div>

            <!-- 컨트롤 바디 -->
            <div class="control-chain__body">
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <!-- 라벨 컨트롤 -->
              <span
                v-else
                class="control-chain__label-value"
                :style="{ color: baseFontColor }"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>
          </div>
        </div>

        <!-- 활성 컨트롤이 없을 때 안내 문구 (여기에도 드롭 가능) -->
        <div
          v-if="!activeControls.length"
          class="control-chain__empty"
          :style="emptyGuideTextStyle"
        >
          {{ emptyGuideText }}
        </div>
      </draggable>
    </div>

    <!-- 사용 가능한 컨트롤 영역 -->
    <div
      class="control-chain__available"
      :style="availableAreaStyle"
    >
      <div
        v-if="availableTitle"
        class="control-chain__available-title"
        :style="availableTitleTextStyle"
      >
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span class="control-chain__drag-handle control-chain__drag-handle--small">
                ≡
              </span>

              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>
  </div>
</template>

<script>
import draggable from 'vuedraggable';

const DEFAULT_MIN_HEIGHT = 260;
const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') {
    return undefined;
  }
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) {
    return null;
  }
  if (Array.isArray(input)) {
    return input.length ? input.slice() : null;
  }
  return [input];
};

const horizontalMap = {
  left: 'flex-start',
  center: 'center',
  right: 'flex-end'
};

const verticalMap = {
  top: 'flex-start',
  center: 'center',
  bottom: 'flex-end'
};

export default {
  name: 'ControlChain',
  components: { draggable },

  model: { prop: 'value', event: 'input' },

  props: {
    value: {
      type: Array,
      default() {
        return [];
      }
    },
    controlTemplates: {
      type: Array,
      required: true
    },
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return v === 'right' || v === 'left';
      }
    },
    emptyGuideText: {
      type: String,
      default: '목록에서 드래그하여 추가해 주세요.'
    },
    availableTitle: {
      type: String,
      default: ''
    },

    // 전체 컨트롤 체인 영역 크기
    width: {
      type: [Number, String],
      default: null
    },
    height: {
      type: [Number, String],
      default: null
    },

    // 스크롤 사용 여부 (뎁스 영역 기준)
    useHorizontalScroll: {
      type: Boolean,
      default: false
    },
    useVerticalScroll: {
      type: Boolean,
      default: false
    }
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],

      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',

      hoveredControlId: null,
      showCloseControlId: null,

      idMap: {},

      depthHighlightColors: [
        '#D5383A',
        '#EB702D',
        '#FBB41A',
        '#2DA379',
        '#1E5FCB',
        '#553CA5'
      ],
      depthHighlightBgColors: [
        '#F8DDDF',
        '#FAE2D4',
        '#FFF0C8',
        '#E0F0E8',
        '#E0EBFA',
        '#E5E0F6'
      ],

      defaultMaxWidth: 240,

      baseFontColor: '#222222',
      highlightFontColor: '#1E5FCB',

      availableWidth: null,

      // 정렬 (외부에서 setHorizontalAlign / setVerticalAlign으로 변경)
      horizontalAlign: 'flex-start',
      verticalAlign: 'center'
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    containerStyle() {
      const style = {
        width: toSize(this.width) || '100%',
        boxSizing: 'border-box'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        style.height = heightValue;
        style.minHeight = heightValue;
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        display: 'flex',
        flexDirection: 'column',
        boxSizing: 'border-box'
      };

      const hasHeight = !!this.height;

      if (hasHeight) {
        // 컨테이너의 height를 기준으로 채움
        style.height = '100%';
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      // 세로 스크롤 여부
      style.overflowY = this.useVerticalScroll ? 'auto' : 'visible';

      // 가로 스크롤 여부
      style.overflowX = this.useHorizontalScroll ? 'auto' : 'visible';

      return style;
    },

    availableAreaStyle() {
      const rawWidth = this.availableWidth != null
        ? this.availableWidth
        : `${DEFAULT_AVAILABLE_WIDTH}px`;
      const widthValue = toSize(rawWidth) || rawWidth;

      const style = {
        width: widthValue,
        flexBasis: widthValue,
        flexShrink: 0,
        flexGrow: 0,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column'
      };

      const hasHeight = !!this.height;

      if (hasHeight) {
        style.height = '100%';
      } else {
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      // 오른쪽 목록은 항상 세로 스크롤 허용 (내용 많을 수 있으니까)
      // 실제 스크롤 동작은 내부 wrapper가 담당
      return style;
    },

    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        flex: '1 1 auto',
        minHeight: `${DEFAULT_MIN_HEIGHT - 16}px`, // 패딩 제외한 최소 드롭 영역
        minWidth: 0
      };

      if (this.useHorizontalScroll) {
        // 가로 스크롤: 한 줄 배치 + 내용에 따라 확장
        style.flexWrap = 'nowrap';
        style.width = 'max-content';
        style.minWidth = '100%';
      } else {
        // 줄바꿈 허용
        style.flexWrap = 'wrap';
        style.width = '100%';
      }

      // 정렬은 스크롤 여부와 관계없이 항상 옵션 사용
      style.justifyContent = this.horizontalAlign;

      // 한 줄일 때는 alignItems, 여러 줄일 때는 alignContent가 핵심
      if (this.useHorizontalScroll) {
        style.alignItems = this.verticalAlign;
      } else {
        style.alignContent = this.verticalAlign;
      }

      return style;
    },

    emptyGuideTextStyle() {
      return {
        color: '#999999'
      };
    },

    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
      },
      deep: true
    },
    controlTemplates: {
      handler() {
        this.buildControls();
      },
      deep: true
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // ========================= Public API =========================

    setHighlightBorderColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightColors = array;
      }
    },

    setHighlightBackgroundColors(colors) {
      const array = toArray(colors);
      if (array) {
        this.depthHighlightBgColors = array;
      }
    },

    setBaseFontColor(color) {
      if (color) {
        this.baseFontColor = color;
      }
    },

    setHighlightFontColor(color) {
      if (color) {
        this.highlightFontColor = color;
      }
    },

    setAvailableWidth(width) {
      if (typeof width === 'number') {
        this.availableWidth = `${width}px`;
      } else if (width) {
        this.availableWidth = width;
      }
    },

    setHorizontalAlign(mode) {
      const mapped = horizontalMap[mode];
      if (mapped) {
        this.horizontalAlign = mapped;
      }
    },

    setVerticalAlign(mode) {
      const mapped = verticalMap[mode];
      if (mapped) {
        this.verticalAlign = mapped;
      }
    },

    // ========================= 내부 로직 =========================

    getStableId(control) {
      const baseKey = control.key || control.label || 'control';
      if (!this.idMap[baseKey]) {
        this.idMap[baseKey] = `${baseKey}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[baseKey];
    },

    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates)
        ? this.controlTemplates
        : [];

      const usedKeys = new Set(
        valueArray
          .map(control => control.key)
          .filter(key => key != null)
      );

      this.activeControls = valueArray.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter(template => !usedKeys.has(template.key))
        .map(template => ({
          ...template,
          id: template.id || this.getStableId(template)
        }));
    },

    emitChain() {
      const cloned = this.activeControls.map(control => {
        const clone = { ...control };
        if (Array.isArray(clone.selectedValues)) {
          clone.selectedValues = clone.selectedValues.slice();
        }
        delete clone.id;
        return clone;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    // =================== Drag & Drop ===================

    onActiveChange(event) {
      this.emitChain();

      if (event.added) {
        this.$emit('control-added', {
          control: event.added.element,
          index: event.added.newIndex
        });
      }

      if (event.moved) {
        this.$emit('control-depth-change', {
          control: event.moved.element,
          oldIndex: event.moved.oldIndex,
          newIndex: event.moved.newIndex
        });
      }

      if (event.removed) {
        this.$emit('control-removed', {
          control: event.removed.element,
          index: event.removed.oldIndex
        });
      }
    },

    removeControlById(id) {
      const index = this.activeControls.findIndex(control => control.id === id);
      if (index < 0) {
        return;
      }

      const removed = this.activeControls.splice(index, 1)[0];
      this.availableControls.push(removed);

      if (this.hoveredControlId === id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === id) {
        this.showCloseControlId = null;
      }

      this.emitChain();
      this.$emit('control-removed', {
        control: removed,
        index
      });
    },

    onControlMouseEnter(element) {
      this.hoveredControlId = element.id;
      this.showCloseControlId = element.id;
    },

    onControlMouseLeave(element) {
      if (this.hoveredControlId === element.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === element.id) {
        this.showCloseControlId = null;
      }
    },

    // =================== 선택 변경 ===================

    onSingleSelectChange(element, index, value) {
      if (element.selectedValue === value) {
        return;
      }
      element.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'single',
        value
      });
    },

    onMultiSelectChange(element, index, values) {
      const next = Array.isArray(values) ? values.slice() : [];
      const previous = Array.isArray(element.selectedValues)
        ? element.selectedValues
        : [];

      const isSame =
        previous.length === next.length &&
        previous.every((item, position) => item === next[position]);

      if (isSame) {
        return;
      }

      element.selectedValues = next;
      this.emitChain();
      this.$emit('control-selection-change', {
        control: element,
        index,
        type: 'multi',
        values: next
      });
    },

    // =================== 스타일 ===================

    getTextStyle(element, isActiveArea) {
      const isHovered = this.hoveredControlId === element.id;
      const color =
        isActiveArea && isHovered ? this.highlightFontColor : this.baseFontColor;

      return { color };
    },

    getContentStyle(index, element) {
      const style = {};

      const maxWidth =
        element.maxWidth != null ? element.maxWidth : this.defaultMaxWidth;
      style.maxWidth = typeof maxWidth === 'number' ? `${maxWidth}px` : maxWidth;

      if (this.hoveredControlId === element.id) {
        const borderIndex = index % this.depthHighlightColors.length;
        const backgroundIndex = index % this.depthHighlightBgColors.length;
        style.borderColor = this.depthHighlightColors[borderIndex];
        style.backgroundColor = this.depthHighlightBgColors[backgroundIndex];
      }

      return style;
    }
  }
};
</script>

<style scoped>
.control-chain {
  display: flex;
  gap: 16px;
  align-items: stretch;
  background: #fafafa;
  border: 1px solid #e5e5e5;
  padding: 8px;
  box-sizing: border-box;
}

.control-chain--available-right {
  flex-direction: row;
}

.control-chain--available-left {
  flex-direction: row-reverse;
}

/* 활성 체인 영역 */
.control-chain__active {
  position: relative;
  box-sizing: border-box;
}

.control-chain__draggable {
  width: 100%;
  height: 100%;
}

/* 사용 가능한 컨트롤 영역 */
.control-chain__available {
  box-sizing: border-box;
}

.control-chain__available-title {
  margin-bottom: 8px;
  font-weight: bold;
  font-size: 12px;
}

.control-chain__available-list-wrapper {
  flex: 1;
  overflow-y: auto;
}

.control-chain__available-list {
  list-style: none;
  padding: 0;
  margin: 0;
  height: 100%;
}

.control-chain__available-item + .control-chain__available-item {
  margin-top: 4px;
}

/* 공통 아이템/컨트롤 스타일 */
.control-chain__item {
  display: flex;
  align-items: center;
}

.control-chain__separator {
  margin-right: 4px;
}

/* 컨트롤 박스 */
.control-chain__content {
  border: 1px solid #e4e4e4;
  padding: 6px 8px;
  background: #ffffff;
  min-width: 180px;
  min-height: 44px;
  transition: background-color 0.15s ease, border-color 0.15s ease;
  display: flex;
  flex-direction: column;
}

.control-chain__header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  align-items: center;
}

.control-chain__header-left {
  display: flex;
  align-items: center;
  gap: 4px;
}

.control-chain__title {
  font-size: 12px;
  font-weight: 600;
}

.control-chain__close-button {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 12px;
  width: 12px;
  height: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-chain__drag-handle {
  cursor: grab;
  font-size: 12px;
  width: 12px;
}

.control-chain__drag-handle--small {
  font-size: 11px;
  width: 11px;
}

.control-chain__body {
  display: flex;
  align-items: stretch;
  gap: 4px;
  min-height: 24px;
}

.control-chain__dropdown {
  width: 100%;
}

.control-chain__label-value {
  font-size: 12px;
  display: flex;
  align-items: center;
  width: 100%;
  min-height: 26px;
  padding: 3px 6px;
  background: #ffffff;
  border: 1px solid #d9d9d9;
  box-sizing: border-box;
}

.control-chain__empty {
  font-size: 12px;
}

/* 오른쪽 목록 아이템 */
.control-chain__available-content {
  border: 1px solid #e0e0e0;
  padding: 4px 6px;
  display: flex;
  align-items: center;
  gap: 4px;
  background: #ffffff;
  transition: background-color 0.12s ease, border-color 0.12s ease;
}

.control-chain__available-content:hover {
  background: #f7f7f7;
  border-color: #d0d0d0;
}

.control-chain__available-label {
  font-size: 12px;
}
</style>










<template>
  <div class="control-chain-demo">
    <!-- 설정 패널 -->
    <div class="demo-panel">
      <h3 class="demo-panel__title">ControlChain Demo</h3>

      <!-- width -->
      <div class="demo-panel__row">
        <label class="demo-panel__label">
          고정 width 사용
          <input
            type="checkbox"
            v-model="useFixedWidth"
          />
        </label>
        <input
          v-if="useFixedWidth"
          type="number"
          class="demo-panel__input"
          v-model.number="fixedWidth"
          min="400"
          step="50"
        />
        <span
          v-if="useFixedWidth"
          class="demo-panel__suffix"
        >
          px
        </span>
      </div>

      <!-- height -->
      <div class="demo-panel__row">
        <label class="demo-panel__label">
          고정 height 사용
          <input
            type="checkbox"
            v-model="useFixedHeight"
          />
        </label>
        <input
          v-if="useFixedHeight"
          type="number"
          class="demo-panel__input"
          v-model.number="fixedHeight"
          min="220"
          step="20"
        />
        <span
          v-if="useFixedHeight"
          class="demo-panel__suffix"
        >
          px
        </span>
      </div>

      <!-- 가로/세로 스크롤 -->
      <div class="demo-panel__section-title">
        스크롤 옵션 (뎁스 영역)
      </div>

      <div class="demo-panel__row">
        <label class="demo-panel__label">
          가로 스크롤 사용
        </label>
        <input
          type="checkbox"
          v-model="useHorizontalScroll"
        />
      </div>

      <div class="demo-panel__row">
        <label class="demo-panel__label">
          세로 스크롤 사용
        </label>
        <input
          type="checkbox"
          v-model="useVerticalScroll"
        />
      </div>

      <!-- 오른쪽 목록 width -->
      <div class="demo-panel__section-title">
        레이아웃
      </div>

      <div class="demo-panel__row">
        <label class="demo-panel__label">
          목록 영역 width
        </label>
        <input
          type="number"
          class="demo-panel__input"
          v-model.number="availableWidth"
          min="160"
          step="20"
        />
        <span class="demo-panel__suffix">px</span>
        <button
          type="button"
          class="demo-panel__button"
          @click="applyAvailableWidth"
        >
          적용
        </button>
      </div>

      <!-- 목록 위치 -->
      <div class="demo-panel__row">
        <label class="demo-panel__label">
          컨트롤 목록 위치
        </label>
        <select
          v-model="availablePlacement"
          class="demo-panel__select"
        >
          <option value="right">오른쪽</option>
          <option value="left">왼쪽</option>
        </select>
      </div>

      <!-- 타이틀 / 안내문구 -->
      <div class="demo-panel__row">
        <label class="demo-panel__label">
          목록 타이틀
        </label>
      </div>
      <div class="demo-panel__row demo-panel__row--block">
        <input
          type="text"
          class="demo-panel__input demo-panel__input--full"
          v-model="availableTitle"
          placeholder="예: 사용 가능한 컨트롤"
        />
      </div>

      <div class="demo-panel__row">
        <label class="demo-panel__label">
          빈 체인 안내 문구
        </label>
      </div>
      <div class="demo-panel__row demo-panel__row--block">
        <input
          type="text"
          class="demo-panel__input demo-panel__input--full"
          v-model="emptyGuideText"
          placeholder="예: 목록에서 드래그하여 추가해 주세요."
        />
      </div>

      <!-- 정렬 -->
      <div class="demo-panel__section-title">
        정렬
      </div>

      <div class="demo-panel__row">
        <span class="demo-panel__label demo-panel__label--small">
          가로 정렬
        </span>
        <select
          v-model="horizontalMode"
          class="demo-panel__select"
          @change="applyHorizontalAlign"
        >
          <option value="left">left</option>
          <option value="center">center</option>
          <option value="right">right</option>
        </select>
      </div>

      <div class="demo-panel__row">
        <span class="demo-panel__label demo-panel__label--small">
          세로 정렬
        </span>
        <select
          v-model="verticalMode"
          class="demo-panel__select"
          @change="applyVerticalAlign"
        >
          <option value="top">top</option>
          <option value="center">center</option>
          <option value="bottom">bottom</option>
        </select>
      </div>

      <!-- 폰트 컬러 -->
      <div class="demo-panel__section-title">
        폰트 색상
      </div>

      <div class="demo-panel__row">
        <span class="demo-panel__label demo-panel__label--small">
          기본 폰트
        </span>
        <input
          type="text"
          class="demo-panel__input"
          v-model="baseFontColorInput"
          placeholder="#222222"
        />
        <button
          type="button"
          class="demo-panel__button"
          @click="applyBaseFontColor"
        >
          적용
        </button>
      </div>

      <div class="demo-panel__row">
        <span class="demo-panel__label demo-panel__label--small">
          하이라이트 폰트
        </span>
        <input
          type="text"
          class="demo-panel__input"
          v-model="highlightFontColorInput"
          placeholder="#1E5FCB"
        />
        <button
          type="button"
          class="demo-panel__button"
          @click="applyHighlightFontColor"
        >
          적용
        </button>
      </div>

      <!-- 뎁스별 하이라이트 색상 preset -->
      <div class="demo-panel__section-title">
        뎁스 하이라이트 색상 Preset
      </div>

      <div class="demo-panel__row demo-panel__row--block">
        <button
          type="button"
          class="demo-panel__button demo-panel__button--full"
          @click="applyDefaultHighlightColors"
        >
          기본 프리셋 적용
        </button>
      </div>
      <div class="demo-panel__row demo-panel__row--block">
        <button
          type="button"
          class="demo-panel__button demo-panel__button--full"
          @click="applySoftBlueHighlight"
        >
          블루 계열 프리셋 적용
        </button>
      </div>
    </div>

    <!-- 오른쪽: ControlChain -->
    <div class="demo-chain-wrapper">
      <control-chain
        ref="controlChain"
        v-model="chain"
        :control-templates="controlTemplates"
        :available-placement="availablePlacement"
        :width="resolvedWidth"
        :height="resolvedHeight"
        :use-horizontal-scroll="useHorizontalScroll"
        :use-vertical-scroll="useVerticalScroll"
        :available-title="availableTitle"
        :empty-guide-text="emptyGuideText"
        @control-added="logEvent('control-added', $event)"
        @control-removed="logEvent('control-removed', $event)"
        @control-depth-change="logEvent('control-depth-change', $event)"
        @control-selection-change="logEvent('control-selection-change', $event)"
      />
    </div>
  </div>
</template>

<script>
import ControlChain from '@/components/ControlChain.vue';

export default {
  name: 'ControlChainDemo',
  components: { ControlChain },

  data() {
    return {
      chain: [],

      controlTemplates: [
        {
          key: 'AAA',
          label: 'AAA',
          type: 'single',
          items: [
            { text: 'AAA1', value: 'aaa1' },
            { text: 'AAA2', value: 'aaa2' },
            { text: 'AAA3', value: 'aaa3' }
          ],
          selectedValue: 'aaa1',
          maxWidth: 260
        },
        {
          key: 'BBB',
          label: 'BBB',
          type: 'multi',
          items: [
            { text: 'BBB1', value: 'bbb1' },
            { text: 'BBB2', value: 'bbb2' },
            { text: 'BBB3', value: 'bbb3' },
            { text: 'BBB4', value: 'bbb4' }
          ],
          selectedValues: [],
          maxWidth: 260
        },
        {
          key: 'CCC',
          label: 'CCC',
          type: 'label',
          displayValue: '고정 라벨 1',
          maxWidth: 260
        },
        {
          key: 'DDD',
          label: 'DDD',
          type: 'single',
          items: [
            { text: '옵션 1', value: 'opt1' },
            { text: '옵션 2', value: 'opt2' },
            { text: '옵션 3', value: 'opt3' }
          ],
          selectedValue: 'opt1',
          maxWidth: 260
        },
        {
          key: 'EEE',
          label: 'EEE',
          type: 'multi',
          items: [
            { text: 'E-1', value: 'e1' },
            { text: 'E-2', value: 'e2' },
            { text: 'E-3', value: 'e3' }
          ],
          selectedValues: ['e1'],
          maxWidth: 260
        },
        {
          key: 'FFF',
          label: 'FFF',
          type: 'label',
          displayValue: '설명용 라벨 텍스트',
          maxWidth: 260
        }
      ],

      useFixedWidth: true,
      useFixedHeight: true,
      fixedWidth: 900,
      fixedHeight: 280,

      useHorizontalScroll: false,
      useVerticalScroll: true,

      availablePlacement: 'right',
      availableTitle: '사용 가능한 컨트롤',
      emptyGuideText: '목록에서 드래그하여 추가해 주세요.',

      availableWidth: 220,

      horizontalMode: 'left',
      verticalMode: 'center',

      baseFontColorInput: '#222222',
      highlightFontColorInput: '#1E5FCB'
    };
  },

  computed: {
    resolvedWidth() {
      if (!this.useFixedWidth) {
        return null;
      }
      return this.fixedWidth;
    },

    resolvedHeight() {
      if (!this.useFixedHeight) {
        return null;
      }
      return this.fixedHeight;
    }
  },

  mounted() {
    this.applyHorizontalAlign();
    this.applyVerticalAlign();
    this.applyAvailableWidth();
    this.applyBaseFontColor();
    this.applyHighlightFontColor();
    this.applyDefaultHighlightColors();
  },

  methods: {
    logEvent(type, payload) {
      // 필요하면 디버깅용으로 사용
      // console.log(`[${type}]`, payload);
    },

    applyAvailableWidth() {
      if (!this.$refs.controlChain) {
        return;
      }
      if (!this.availableWidth) {
        return;
      }
      this.$refs.controlChain.setAvailableWidth(this.availableWidth);
    },

    applyHorizontalAlign() {
      if (!this.$refs.controlChain) {
        return;
      }
      this.$refs.controlChain.setHorizontalAlign(this.horizontalMode);
    },

    applyVerticalAlign() {
      if (!this.$refs.controlChain) {
        return;
      }
      this.$refs.controlChain.setVerticalAlign(this.verticalMode);
    },

    applyBaseFontColor() {
      if (!this.$refs.controlChain) {
        return;
      }
      if (!this.baseFontColorInput) {
        return;
      }
      this.$refs.controlChain.setBaseFontColor(this.baseFontColorInput);
    },

    applyHighlightFontColor() {
      if (!this.$refs.controlChain) {
        return;
      }
      if (!this.highlightFontColorInput) {
        return;
      }
      this.$refs.controlChain.setHighlightFontColor(this.highlightFontColorInput);
    },

    applyDefaultHighlightColors() {
      if (!this.$refs.controlChain) {
        return;
      }
      const borderColors = [
        '#D5383A',
        '#EB702D',
        '#FBB41A',
        '#2DA379',
        '#1E5FCB',
        '#553CA5'
      ];
      const backgroundColors = [
        '#F8DDDF',
        '#FAE2D4',
        '#FFF0C8',
        '#E0F0E8',
        '#E0EBFA',
        '#E5E0F6'
      ];
      this.$refs.controlChain.setHighlightBorderColors(borderColors);
      this.$refs.controlChain.setHighlightBackgroundColors(backgroundColors);
    },

    applySoftBlueHighlight() {
      if (!this.$refs.controlChain) {
        return;
      }
      const borderColors = [
        '#1E5FCB',
        '#2DA379',
        '#553CA5',
        '#1E5FCB',
        '#2DA379',
        '#553CA5'
      ];
      const backgroundColors = [
        '#E0EBFA',
        '#E0F0E8',
        '#E5E0F6',
        '#E0EBFA',
        '#E0F0E8',
        '#E5E0F6'
      ];
      this.$refs.controlChain.setHighlightBorderColors(borderColors);
      this.$refs.controlChain.setHighlightBackgroundColors(backgroundColors);
    }
  }
};
</script>

