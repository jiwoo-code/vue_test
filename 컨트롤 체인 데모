<!--
  ---------------------------------------------------------------------------
  필요한 라이브러리

  vuedraggable (Sortable.js 기반 드래그)
    npm install vuedraggable sortablejs
    yarn add vuedraggable sortablejs

  ---------------------------------------------------------------------------
-->

<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="containerStyle"
  >

    <!-- 활성 체인 영역 (왼쪽) -->
    <div
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span v-if="index > 0" class="control-chain__separator">>></span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <!-- 헤더: 마우스 오버 시 드래그 아이콘 + X, 색상 변경 트리거 -->
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span
                  v-if="hoveredControlId === element.id"
                  class="control-chain__drag-handle"
                >
                  ≡
                </span>
                <span class="control-chain__title">
                  {{ element.label }}
                </span>
              </div>

              <div class="control-chain__header-right">
                <button
                  v-if="showCloseControlId === element.id"
                  type="button"
                  class="control-chain__close-button"
                  @click.stop="removeControlById(element.id)"
                >
                  ✕
                </button>
              </div>
            </div>

            <!-- 바디 (드롭다운/라벨 공통 높이감 유지) -->
            <div class="control-chain__body">
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <span
                v-else
                class="control-chain__label-value"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>
          </div>
        </div>

        <div v-if="!activeControls.length" class="control-chain__empty">
          {{ emptyGuideText }}
        </div>
      </draggable>
    </div>

    <!-- 사용 가능한 컨트롤 영역 (오른쪽) -->
    <div class="control-chain__available">
      <div
        v-if="availableTitle"
        class="control-chain__available-title"
      >
        {{ availableTitle }}
      </div>

      <!-- 목록 영역만 높이 제한 + 스크롤 (항상 세로 스크롤) -->
      <div
        class="control-chain__available-list-wrapper"
        :style="availableListStyle"
      >
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span
                v-if="hoveredControlId === element.id"
                class="control-chain__drag-handle control-chain__drag-handle--small"
              >
                ≡
              </span>
              <span class="control-chain__available-label">
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>

  </div>
</template>

<script>
import draggable from 'vuedraggable';

const toSize = (value) => {
  if (value == null) {
    return undefined;
  }
  return typeof value === 'number' ? `${value}px` : value;
};

export default {
  name: 'ControlChain',
  components: { draggable },

  model: {
    prop: 'value',
    event: 'input'
  },

  props: {
    value: {
      type: Array,
      default() {
        return [];
      }
    },
    controlTemplates: {
      type: Array,
      required: true
    },
    // 목록 영역 위치: 좌/우만 허용
    availablePlacement: {
      type: String,
      default: 'right',
      validator(v) {
        return ['right', 'left'].includes(v);
      }
    },
    emptyGuideText: {
      type: String,
      default: '목록에서 드래그하여 추가해 주세요.'
    },
    availableTitle: {
      type: String,
      default: ''
    },

    // ➜ 전체 ControlChain 크기 제어
    width: {
      type: [Number, String],
      default: null
    },
    minWidth: {
      type: [Number, String],
      default: null
    },
    maxWidth: {
      type: [Number, String],
      default: null
    },
    height: {
      type: [Number, String],
      default: null
    },
    minHeight: {
      type: [Number, String],
      default: null
    },
    maxHeight: {
      type: [Number, String],
      default: null
    },

    // ➜ 뎁스 영역(왼쪽) 가로/세로 스크롤 사용 여부
    useHorizontalScroll: {
      type: Boolean,
      default: false
    },
    useVerticalScroll: {
      type: Boolean,
      default: false
    },

    // 오른쪽 목록 영역의 최대 높이 (항상 세로 스크롤)
    availableMaxHeight: {
      type: [Number, String],
      default: 260
    }
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],
      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',
      hoveredControlId: null,
      showCloseControlId: null,
      idMap: {},

      // ur 팔레트 원색
      depthHighlightColors: [
        '#D5383A',
        '#EB702D',
        '#FBB41A',
        '#2DA379',
        '#1E5FCB',
        '#553CA5'
      ],
      // 은은한 배경
      depthHighlightBgColors: [
        '#F8DDDF',
        '#FAE2D4',
        '#FFF0C8',
        '#E0F0E8',
        '#E0EBFA',
        '#E5E0F6'
      ],

      // 컨트롤 기본 max-width(px) – 템플릿에서 maxWidth로 override 가능
      defaultMaxWidth: 240
    };
  },

  computed: {
    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    // 전체 ControlChain 컨테이너 width / height / min/max
    containerStyle() {
      const style = {};

      const w = toSize(this.width);
      const mw = toSize(this.minWidth);
      const xw = toSize(this.maxWidth);
      const h = toSize(this.height);
      const mh = toSize(this.minHeight);
      const xh = toSize(this.maxHeight);

      if (w) {
        style.width = w;
      }
      if (mw) {
        style.minWidth = mw;
      }
      if (xw) {
        style.maxWidth = xw;
      }

      // 세로 스크롤을 쓰는 경우 height는 "기준"이 되므로 height 우선
      if (this.useVerticalScroll && h) {
        style.height = h;
      } else {
        if (h) {
          style.minHeight = h;
        }
        if (mh) {
          style.minHeight = mh;
        }
        if (xh) {
          style.maxHeight = xh;
        }
      }

      return style;
    },

    // 왼쪽 뎁스 영역 컨테이너 스타일 (세로 스크롤 제어)
    activeAreaStyle() {
      const style = {
        flex: 1,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#ffffff',
        boxSizing: 'border-box'
      };

      if (this.useVerticalScroll) {
        // 전체 컨테이너 높이가 고정되어 있다면 그 안에서 스크롤
        if (this.height != null || this.maxHeight != null) {
          style.height = '100%';
        } else {
          // height/maxHeight 미지정이면 기본값으로 제한
          style.maxHeight = '260px';
        }
        style.overflowY = 'auto';
      } else {
        style.overflowY = 'visible';
      }

      return style;
    },

    // 왼쪽 뎁스 영역 내부 드래그 컨테이너 스타일 (가로 스크롤 제어)
    activeDraggableStyle() {
      const style = {};

      if (this.useHorizontalScroll) {
        style.flexWrap = 'nowrap';
        style.overflowX = 'auto';
      } else {
        style.flexWrap = 'wrap';
        style.overflowX = 'visible';
      }

      return style;
    },

    // 오른쪽 목록 영역 스크롤 (항상 세로 스크롤)
    availableListStyle() {
      let base = this.availableMaxHeight;

      // 전체 높이가 정해져 있으면 그 안에서 제한하는 게 자연스럽다
      if (this.height != null) {
        base = this.height;
      } else if (this.maxHeight != null) {
        base = this.maxHeight;
      }

      const size = toSize(base) || '260px';

      return {
        maxHeight: size,
        overflowY: 'auto'
      };
    }
  },

  watch: {
    value: {
      handler() {
        this.buildControls();
      }
    },
    controlTemplates: {
      handler() {
        this.buildControls();
      }
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // 외부에서 색 변경: this.$refs.controlChain.setHighlightColors([...], [...])
    setHighlightColors(borderColors, backgroundColors) {
      if (Array.isArray(borderColors) && borderColors.length) {
        this.depthHighlightColors = borderColors.slice();
      }
      if (Array.isArray(backgroundColors) && backgroundColors.length) {
        this.depthHighlightBgColors = backgroundColors.slice();
      }
    },

    getStableId(control) {
      const key = control.key || control.label || 'control';
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[key];
    },

    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates)
        ? this.controlTemplates
        : [];

      const usedKeys = new Set(
        valueArray
          .map(c => c.key)
          .filter(key => key != null)
      );

      this.activeControls = valueArray.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter(t => !usedKeys.has(t.key))
        .map(t => ({
          ...t,
          id: t.id || this.getStableId(t)
        }));
    },

    onActiveChange(evt) {
      this.emitChain();

      if (evt.added) {
        this.$emit('control-added', {
          control: evt.added.element,
          index: evt.added.newIndex
        });
      }

      if (evt.moved) {
        this.$emit('control-depth-change', {
          control: evt.moved.element,
          oldIndex: evt.moved.oldIndex,
          newIndex: evt.moved.newIndex
        });
      }

      if (evt.removed) {
        this.$emit('control-removed', {
          control: evt.removed.element,
          index: evt.removed.oldIndex
        });
      }
    },

    onSingleSelectChange(control, index, value) {
      if (control.selectedValue === value) {
        return;
      }
      control.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', {
        control,
        index,
        type: 'single',
        value
      });
    },

    onMultiSelectChange(control, index, values) {
      const next = Array.isArray(values) ? values.slice() : [];
      const prev = Array.isArray(control.selectedValues)
        ? control.selectedValues
        : [];

      if (
        prev.length === next.length &&
        prev.every((v, i) => v === next[i])
      ) {
        return;
      }

      control.selectedValues = next;
      this.emitChain();
      this.$emit('control-selection-change', {
        control,
        index,
        type: 'multi',
        values: control.selectedValues
      });
    },

    removeControlById(id) {
      const idx = this.activeControls.findIndex(c => c.id === id);
      if (idx < 0) {
        return;
      }

      const [removed] = this.activeControls.splice(idx, 1);
      this.availableControls.push(removed);

      this.emitChain();
      this.$emit('control-removed', {
        control: removed,
        index: idx
      });
    },

    // hover 시 바로 아이콘/X 보이게
    onControlMouseEnter(control) {
      this.hoveredControlId = control.id;
      this.showCloseControlId = control.id;
    },

    onControlMouseLeave(control) {
      if (this.hoveredControlId === control.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === control.id) {
        this.showCloseControlId = null;
      }
    },

    getContentStyle(index, control) {
      const style = {};

      // per-control maxWidth → 설정 없으면 기본값
      const maxWidth =
        control.maxWidth != null ? control.maxWidth : this.defaultMaxWidth;

      if (typeof maxWidth === 'number') {
        style.maxWidth = `${maxWidth}px`;
      } else {
        style.maxWidth = maxWidth;
      }

      // hover 시에만 색상 하이라이트
      if (this.hoveredControlId === control.id) {
        const colorIndex = index % this.depthHighlightColors.length;
        style.borderColor = this.depthHighlightColors[colorIndex];
        style.backgroundColor = this.depthHighlightBgColors[colorIndex];
      }

      return style;
    },

    emitChain() {
      const cloned = this.activeControls.map(control => {
        const clone = { ...control };
        if (Array.isArray(clone.selectedValues)) {
          clone.selectedValues = clone.selectedValues.slice();
        }
        delete clone.id;
        return clone;
      });

      this.$emit('input', cloned);
      this.$emit('change', cloned);
    }
  }
};
</script>

<style scoped>
.control-chain {
  display: flex;
  gap: 16px;
  align-items: flex-start;
}

/* 좌/우 배치만 사용 */
.control-chain--available-right { flex-direction: row; }
.control-chain--available-left { flex-direction: row-reverse; }

/* 활성 체인 영역 (왼쪽) – 박스로 구분 */
.control-chain__active {
  box-sizing: border-box;
}

/* 사용 가능한 컨트롤 영역 (오른쪽) – 박스로 구분 */
.control-chain__available {
  width: 200px;
  padding: 8px;
  border: 1px solid #e5e5e5;
  background: #ffffff;
  box-sizing: border-box;
}

.control-chain__draggable {
  display: flex;
  /* flex-wrap / overflow-x는 activeDraggableStyle에서 제어 */
  gap: 8px;
}

.control-chain__item {
  display: flex;
  align-items: center;
}
.control-chain__separator {
  margin-right: 4px;
}

/* 컨트롤 박스 */
.control-chain__content {
  border: 1px solid #e4e4e4;
  border-radius: 0;
  padding: 6px 8px;
  background: #ffffff;
  min-width: 180px;
  min-height: 44px;
  transition: background-color 0.15s ease, border-color 0.15s ease;
  display: flex;
  flex-direction: column;
}

.control-chain__header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
  align-items: center;
}
.control-chain__header-left {
  display: flex;
  align-items: center;
  gap: 4px;
}
.control-chain__title {
  font-size: 12px;
  font-weight: 600;
}
.control-chain__header-right {
  display: flex;
  align-items: center;
  gap: 4px;
}

.control-chain__drag-handle {
  cursor: grab;
  font-size: 12px;
}
.control-chain__drag-handle--small {
  font-size: 11px;
}

.control-chain__close-button {
  background: transparent;
  border: none;
  cursor: pointer;
  font-size: 12px;
}

/* 바디 */
.control-chain__body {
  display: flex;
  align-items: center;
  gap: 4px;
  min-height: 24px;
}
.control-chain__dropdown {
  width: 100%;
}
.control-chain__label-value {
  font-size: 12px;
  display: inline-block;
  padding: 3px 2px;
}

.control-chain__empty {
  font-size: 12px;
  color: #777;
}

/* 사용 가능한 컨트롤 목록 */
.control-chain__available-title {
  margin-bottom: 8px;
  font-weight: bold;
  font-size: 12px;
}

/* 목록 + 스크롤 래퍼: 세로 스크롤은 availableListStyle에서 제어 */
.control-chain__available-list-wrapper {
}

.control-chain__available-list {
  list-style: none;
  padding: 0;
  margin: 0;
}
.control-chain__available-item + .control-chain__available-item {
  margin-top: 4px;
}

.control-chain__available-content {
  border: 1px solid #e0e0e0;
  padding: 4px 6px;
  display: flex;
  align-items: center;
  gap: 4px;
  justify-content: flex-start;
  background: #ffffff;
  transition: background-color 0.12s ease, border-color 0.12s ease;
}
.control-chain__available-content:hover {
  background: #f7f7f7;
  border-color: #d0d0d0;
}

.control-chain__available-label {
  font-size: 12px;
}
</style>















<template>
  <div class="cc-playground">
    <!-- 왼쪽: 실제 ControlChain 데모 -->
    <div class="cc-playground__demo">
      <h3 class="cc-playground__title">ControlChain 데모</h3>

      <control-chain
        ref="controlChain"
        v-model="chain"
        :control-templates="controlTemplates"
        :available-placement="form.availablePlacement"
        :width="parsed.width"
        :min-width="parsed.minWidth"
        :max-width="parsed.maxWidth"
        :height="parsed.height"
        :min-height="parsed.minHeight"
        :max-height="parsed.maxHeight"
        :use-horizontal-scroll="form.useHorizontalScroll"
        :use-vertical-scroll="form.useVerticalScroll"
        :available-max-height="parsed.availableMaxHeight"
        :empty-guide-text="form.emptyGuideText"
        :available-title="form.availableTitle"
        @control-added="logEvent"
        @control-removed="logEvent"
        @control-depth-change="logEvent"
        @control-selection-change="logEvent"
      />

      <div class="cc-playground__section">
        <div class="cc-playground__section-title">현재 체인 값</div>
        <pre class="cc-playground__code">
{{ prettyChain }}
        </pre>
      </div>

      <div class="cc-playground__section">
        <div class="cc-playground__section-title">최근 이벤트</div>
        <pre class="cc-playground__code">
{{ lastEventText }}
        </pre>
      </div>
    </div>

    <!-- 오른쪽 설정 패널 -->
    <div class="cc-playground__panel">
      <h3 class="cc-playground__title">설정 패널</h3>

      <!-- 레이아웃 / 위치 -->
      <div class="cc-playground__group">
        <div class="cc-playground__group-title">레이아웃 / 위치</div>

        <!-- ★ 추가됨: 목록 영역을 왼쪽/오른쪽으로 변경 -->
        <label class="cc-playground__field">
          <span class="cc-playground__label">목록 영역 위치 (availablePlacement)</span>
          <select v-model="form.availablePlacement" class="cc-playground__input">
            <option value="right">오른쪽(right)</option>
            <option value="left">왼쪽(left)</option>
          </select>
        </label>

        <label class="cc-playground__field">
          <span class="cc-playground__label">가로 스크롤 사용 (뎁스 영역)</span>
          <input v-model="form.useHorizontalScroll" type="checkbox" />
        </label>

        <label class="cc-playground__field">
          <span class="cc-playground__label">세로 스크롤 사용 (뎁스 영역)</span>
          <input v-model="form.useVerticalScroll" type="checkbox" />
        </label>
      </div>

      <!-- 전체 크기 -->
      <div class="cc-playground__group">
        <div class="cc-playground__group-title">전체 크기 (ControlChain 컨테이너)</div>

        <div class="cc-playground__field-row">
          <label class="cc-playground__field cc-playground__field--half">
            <span class="cc-playground__label">width</span>
            <input v-model="form.width" class="cc-playground__input" placeholder="예: 900 또는 100%" />
          </label>

          <label class="cc-playground__field cc-playground__field--half">
            <span class="cc-playground__label">height</span>
            <input v-model="form.height" class="cc-playground__input" placeholder="예: 320" />
          </label>
        </div>

        <div class="cc-playground__field-row">
          <label class="cc-playground__field cc-playground__field--half">
            <span class="cc-playground__label">minWidth</span>
            <input v-model="form.minWidth" class="cc-playground__input" placeholder="빈 값이면 미사용" />
          </label>

          <label class="cc-playground__field cc-playground__field--half">
            <span class="cc-playground__label">maxWidth</span>
            <input v-model="form.maxWidth" class="cc-playground__input" placeholder="빈 값이면 미사용" />
          </label>
        </div>

        <div class="cc-playground__field-row">
          <label class="cc-playground__field cc-playground__field--half">
            <span class="cc-playground__label">minHeight</span>
            <input v-model="form.minHeight" class="cc-playground__input" placeholder="빈 값이면 미사용" />
          </label>

          <label class="cc-playground__field cc-playground__field--half">
            <span class="cc-playground__label">maxHeight</span>
            <input v-model="form.maxHeight" class="cc-playground__input" placeholder="빈 값이면 미사용" />
          </label>
        </div>
      </div>

      <!-- 오른쪽 목록 영역 -->
      <div class="cc-playground__group">
        <div class="cc-playground__group-title">오른쪽 목록 영역</div>

        <label class="cc-playground__field">
          <span class="cc-playground__label">availableMaxHeight</span>
          <input v-model="form.availableMaxHeight" class="cc-playground__input" placeholder="예: 260" />
        </label>

        <label class="cc-playground__field">
          <span class="cc-playground__label">availableTitle</span>
          <input v-model="form.availableTitle" class="cc-playground__input" placeholder="기본: ''" />
        </label>
      </div>

      <!-- 문구 -->
      <div class="cc-playground__group">
        <div class="cc-playground__group-title">문구</div>
        <label class="cc-playground__field">
          <span class="cc-playground__label">emptyGuideText</span>
          <input v-model="form.emptyGuideText" class="cc-playground__input" />
        </label>
      </div>
    </div>
  </div>
</template>

<script>
import ControlChain from '@/components/ControlChain.vue';

export default {
  name: 'ControlChainPlayground',
  components: { ControlChain },

  data() {
    return {
      controlTemplates: [
        {
          key: 'AAA',
          label: 'AAA (단일 선택)',
          type: 'single',
          items: [
            { text: 'AAA-옵션 1', value: 'aaa1' },
            { text: 'AAA-옵션 2', value: 'aaa2' },
            { text: 'AAA-옵션 3', value: 'aaa3' }
          ],
          selectedValue: 'aaa1',
          maxWidth: 240
        },
        {
          key: 'BBB',
          label: 'BBB (다중 선택)',
          type: 'multi',
          items: [
            { text: 'BBB-옵션 1', value: 'bbb1' },
            { text: 'BBB-옵션 2', value: 'bbb2' },
            { text: 'BBB-옵션 3', value: 'bbb3' }
          ],
          selectedValues: [],
          maxWidth: 260
        },
        {
          key: 'CCC',
          label: 'CCC (라벨)',
          type: 'label',
          displayValue: '고정 라벨 텍스트',
          maxWidth: 220
        },
        {
          key: 'DDD',
          label: 'DDD (단일)',
          type: 'single',
          items: [
            { text: 'ON', value: 'on' },
            { text: 'OFF', value: 'off' }
          ],
          selectedValue: 'on',
          maxWidth: 280
        },
        {
          key: 'EEE',
          label: 'EEE (다중 옵션)',
          type: 'multi',
          items: [
            { text: '조건 A', value: 'condA' },
            { text: '조건 B', value: 'condB' }
          ],
          selectedValues: ['condA'],
          maxWidth: 300
        },
        {
          key: 'FFF',
          label: 'FFF (라벨)',
          type: 'label',
          displayValue: '설명 텍스트',
          maxWidth: 260
        }
      ],

      chain: [],

      form: {
        availablePlacement: 'right',

        width: '900',
        minWidth: '600',
        maxWidth: '1200',

        height: '320',
        minHeight: '',
        maxHeight: '480',

        useHorizontalScroll: true,
        useVerticalScroll: true,

        availableMaxHeight: '260',
        availableTitle: '사용 가능한 컨트롤',
        emptyGuideText: '조건을 왼쪽 체인에 드래그해 구성해 주세요.'
      },

      lastEvent: null
    };
  },

  computed: {
    parsed() {
      const parse = (v) => {
        if (v === '' || v == null) return null;
        const n = Number(v);
        return Number.isNaN(n) ? v : n;
      };
      return {
        width: parse(this.form.width),
        minWidth: parse(this.form.minWidth),
        maxWidth: parse(this.form.maxWidth),
        height: parse(this.form.height),
        minHeight: parse(this.form.minHeight),
        maxHeight: parse(this.form.maxHeight),
        availableMaxHeight: parse(this.form.availableMaxHeight)
      };
    },

    prettyChain() {
      return JSON.stringify(this.chain, null, 2);
    },

    lastEventText() {
      return this.lastEvent ? JSON.stringify(this.lastEvent, null, 2) : '(이벤트 없음)';
    }
  },

  methods: {
    logEvent(ev) {
      this.lastEvent = ev;
    }
  }
};
</script>

