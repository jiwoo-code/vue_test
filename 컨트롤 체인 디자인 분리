<template>
  <div
    class="control-chain"
    :class="layoutClass"
    :style="containerStyle"
  >
    <!-- 활성 체인 영역 (왼쪽) -->
    <div
      class="control-chain__active"
      :style="activeAreaStyle"
    >
      <draggable
        :list="activeControls"
        :group="dragGroup"
        item-key="id"
        class="control-chain__draggable"
        :style="activeDraggableStyle"
        :handle="dragHandleSelector"
        @change="onActiveChange"
      >
        <div
          v-for="(element, index) in activeControls"
          :key="element.id"
          class="control-chain__item"
        >
          <span v-if="index > 0" class="control-chain__separator">>></span>

          <div
            class="control-chain__content"
            :style="getContentStyle(index, element)"
          >
            <!-- 타이틀 + 드래그핸들 + 삭제버튼 -->
            <div
              class="control-chain__header"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <div class="control-chain__header-left">
                <span class="control-chain__drag-handle">≡</span>

                <span
                  class="control-chain__title"
                  :style="getTextStyle(element, true)"
                >
                  {{ element.label }}
                </span>
              </div>

              <button
                type="button"
                class="control-chain__close-button"
                :style="{ visibility: showCloseControlId === element.id ? 'visible' : 'hidden' }"
                @click.stop="removeControlById(element.id)"
              >
                ✕
              </button>
            </div>

            <!-- 컨트롤 바디 -->
            <div class="control-chain__body">
              <ur-dropdown
                v-if="element.type === 'single'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValue"
                :items="element.items"
                @input="onSingleSelectChange(element, index, $event)"
              />

              <ur-multi-dropdown
                v-else-if="element.type === 'multi'"
                class="control-chain__dropdown"
                sm
                v-model="element.selectedValues"
                :items="element.items"
                @input="onMultiSelectChange(element, index, $event)"
              />

              <!-- 라벨 컨트롤 -->
              <span
                v-else
                class="control-chain__label-value"
                :style="{ color: baseFontColor }"
              >
                {{ element.displayValue || '-' }}
              </span>
            </div>
          </div>
        </div>

        <div
          v-if="!activeControls.length"
          class="control-chain__empty"
          :style="emptyGuideTextStyle"
        >
          {{ emptyGuideText }}
        </div>
      </draggable>
    </div>

    <!-- 사용 가능한 컨트롤 영역 -->
    <div
      class="control-chain__available"
      :style="availableAreaStyle"
    >
      <div
        v-if="availableTitle"
        class="control-chain__available-title"
        :style="availableTitleTextStyle"
      >
        {{ availableTitle }}
      </div>

      <div class="control-chain__available-list-wrapper">
        <draggable
          :list="availableControls"
          :group="dragGroup"
          item-key="id"
          class="control-chain__available-list"
          :handle="dragHandleSelector"
        >
          <li
            v-for="element in availableControls"
            :key="element.id"
            class="control-chain__available-item"
          >
            <div
              class="control-chain__available-content"
              @mouseenter="onControlMouseEnter(element)"
              @mouseleave="onControlMouseLeave(element)"
            >
              <span
                class="control-chain__drag-handle control-chain__drag-handle--small"
              >
                ≡
              </span>

              <span
                class="control-chain__available-label"
                :style="getTextStyle(element, false)"
              >
                {{ element.label }}
              </span>
            </div>
          </li>
        </draggable>
      </div>
    </div>

  </div>
</template>

<script>
import draggable from 'vuedraggable';

const DEFAULT_MIN_HEIGHT = 260;
const DEFAULT_AVAILABLE_WIDTH = 220;

const toSize = (value) => {
  if (value == null || value === '') return undefined;
  return typeof value === 'number' ? `${value}px` : value;
};

const toArray = (input) => {
  if (!input) return null;
  if (Array.isArray(input)) return input.length ? input.slice() : null;
  return [input];
};

const horizontalMap = {
  left: 'flex-start',
  center: 'center',
  right: 'flex-end'
};

const verticalMap = {
  top: 'flex-start',
  center: 'center',
  bottom: 'flex-end'
};

export default {
  name: 'ControlChain',
  components: { draggable },

  model: { prop: 'value', event: 'input' },

  props: {
    value: Array,
    controlTemplates: Array,
    availablePlacement: {
      type: String,
      default: 'right'
    },
    emptyGuideText: {
      type: String,
      default: '목록에서 드래그하여 추가해 주세요.'
    },
    availableTitle: { 
      type: String, 
      default: '' 
    },

    width: [Number, String],
    height: [Number, String]
  },

  data() {
    return {
      activeControls: [],
      availableControls: [],
      dragGroup: {
        name: 'control-chain',
        pull: true,
        put: true
      },
      dragHandleSelector: '.control-chain__drag-handle',

      hoveredControlId: null,
      showCloseControlId: null,

      idMap: {},

      depthHighlightColors: [
        '#D5383A', '#EB702D', '#FBB41A',
        '#2DA379', '#1E5FCB', '#553CA5'
      ],
      depthHighlightBgColors: [
        '#F8DDDF', '#FAE2D4', '#FFF0C8',
        '#E0F0E8', '#E0EBFA', '#E5E0F6'
      ],

      defaultMaxWidth: 240,

      baseFontColor: '#222',
      highlightFontColor: '#1E5FCB',

      availableWidth: null,

      horizontalAlign: 'flex-start',
      verticalAlign: 'flex-start'
    };
  },

  computed: {
    // width/height가 지정되면 자동으로 스크롤 활성화
    shouldUseVerticalScroll() {
      return !!this.height;
    },

    shouldUseHorizontalScroll() {
      return !!this.width;
    },

    layoutClass() {
      return `control-chain--available-${this.availablePlacement}`;
    },

    containerStyle() {
      const style = {
        width: toSize(this.width) || '100%',
        boxSizing: 'border-box'
      };

      const heightValue = toSize(this.height);
      if (heightValue) {
        // height 지정 시 고정
        style.height = heightValue;
        style.minHeight = heightValue;
      } else {
        // height 미지정 시 컨텐츠에 맞춰 자동 확장
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }
      
      return style;
    },

    activeAreaStyle() {
      const style = {
        flex: '1 1 auto',
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#fff',
        display: 'flex',
        flexDirection: 'column',
        boxSizing: 'border-box'
      };

      if (this.shouldUseVerticalScroll) {
        // 세로 스크롤 사용: 영역 고정, overflow auto
        style.height = '100%';
        style.overflowY = 'auto';
      } else {
        // 세로 스크롤 미사용: 컨텐츠에 맞춰 자동 확장
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
        style.overflowY = 'visible';
      }

      if (this.shouldUseHorizontalScroll) {
        // 가로 스크롤 사용
        style.overflowX = 'auto';
        style.minWidth = 0;
      } else {
        // 가로 스크롤 미사용
        style.overflowX = 'visible';
        style.minWidth = 'auto';
      }

      return style;
    },

    availableAreaStyle() {
      const rawWidth = this.availableWidth ?? `${DEFAULT_AVAILABLE_WIDTH}px`;
      const widthValue = toSize(rawWidth) ?? rawWidth;

      const style = {
        width: widthValue,
        flexBasis: widthValue,
        flexGrow: 0,
        flexShrink: 0,
        padding: '8px',
        border: '1px solid #e5e5e5',
        background: '#fff',
        boxSizing: 'border-box',
        display: 'flex',
        flexDirection: 'column'
      };

      if (this.shouldUseVerticalScroll) {
        // 세로 스크롤 사용: active 영역과 동일한 높이
        style.height = '100%';
      } else {
        // 세로 스크롤 미사용: 컨텐츠에 맞춰 자동 확장
        style.height = 'auto';
        style.minHeight = `${DEFAULT_MIN_HEIGHT}px`;
      }

      return style;
    },

    activeDraggableStyle() {
      const style = {
        display: 'flex',
        boxSizing: 'border-box',
        rowGap: '6px',
        columnGap: '8px',
        flex: '1 1 auto'
      };

      if (this.shouldUseHorizontalScroll) {
        // 가로 스크롤 사용: 한 줄로 나열
        style.flexWrap = 'nowrap';
        style.width = 'max-content';
        style.minWidth = '100%';
        style.minHeight = 0;
        style.justifyContent = 'flex-start';
        // 세로 스크롤도 함께 사용하면 무조건 top 정렬
        style.alignItems = this.shouldUseVerticalScroll ? 'flex-start' : this.verticalAlign;
      } else {
        // 가로 스크롤 미사용: 줄바꿈 허용
        style.flexWrap = 'wrap';
        style.width = '100%';
        style.minWidth = 0;
        style.minHeight = 0;
        style.justifyContent = this.horizontalAlign;
        // 세로 스크롤도 함께 사용하면 무조건 top 정렬
        style.alignContent = this.shouldUseVerticalScroll ? 'flex-start' : this.verticalAlign;
      }

      // 양쪽 스크롤 모두 미사용: 컨텐츠에 맞춰 자동 확장
      if (!this.shouldUseVerticalScroll && !this.shouldUseHorizontalScroll) {
        style.height = 'auto';
        style.minHeight = 'auto';
      }

      return style;
    },

    emptyGuideTextStyle() {
      return { color: '#999' };
    },

    availableTitleTextStyle() {
      return {
        color: this.baseFontColor,
        fontWeight: '600'
      };
    }
  },

  watch: {
    value: { 
      handler() { 
        this.buildControls(); 
      }, 
      deep: true 
    },
    controlTemplates: { 
      handler() { 
        this.buildControls(); 
      }, 
      deep: true 
    }
  },

  created() {
    this.buildControls();
  },

  methods: {
    // 외부 API
    setHighlightBorderColors(colors) {
      const colorArray = toArray(colors);
      if (colorArray) this.depthHighlightColors = colorArray;
    },

    setHighlightBackgroundColors(colors) {
      const colorArray = toArray(colors);
      if (colorArray) this.depthHighlightBgColors = colorArray;
    },

    setBaseFontColor(color) {
      if (color) this.baseFontColor = color;
    },

    setHighlightFontColor(color) {
      if (color) this.highlightFontColor = color;
    },

    setAvailableWidth(width) {
      if (typeof width === 'number') this.availableWidth = `${width}px`;
      else if (width) this.availableWidth = width;
    },

    setHorizontalAlign(mode) {
      const mapped = horizontalMap[mode];
      if (mapped) this.horizontalAlign = mapped;
    },

    setVerticalAlign(mode) {
      const mapped = verticalMap[mode];
      if (mapped) this.verticalAlign = mapped;
    },

    // 내부 로직
    getStableId(control) {
      const key = control.key || control.label;
      if (!this.idMap[key]) {
        this.idMap[key] = `${key}-${Math.random().toString(36).slice(2, 8)}`;
      }
      return this.idMap[key];
    },

    buildControls() {
      const valueArray = Array.isArray(this.value) ? this.value : [];
      const templateArray = Array.isArray(this.controlTemplates)
        ? this.controlTemplates
        : [];

      const usedKeys = new Set(valueArray.map(item => item.key));

      this.activeControls = valueArray.map(control => ({
        ...control,
        id: control.id || this.getStableId(control)
      }));

      this.availableControls = templateArray
        .filter(template => !usedKeys.has(template.key))
        .map(template => ({
          ...template,
          id: template.id || this.getStableId(template)
        }));
    },

    emitChain() {
      const cloned = this.activeControls.map(control => {
        const obj = { ...control };
        if (Array.isArray(obj.selectedValues)) {
          obj.selectedValues = obj.selectedValues.slice();
        }
        delete obj.id;
        return obj;
      });
      this.$emit('input', cloned);
      this.$emit('change', cloned);
    },

    // 드래그/드롭 이벤트
    onActiveChange(event) {
      this.emitChain();
      
      if (event.added) {
        this.$emit('control-added', { 
          control: event.added.element, 
          index: event.added.newIndex 
        });
      }
      
      if (event.moved) {
        this.$emit('control-depth-change', {
          control: event.moved.element,
          oldIndex: event.moved.oldIndex,
          newIndex: event.moved.newIndex
        });
      }
      
      if (event.removed) {
        this.$emit('control-removed', {
          control: event.removed.element,
          index: event.removed.oldIndex
        });
      }
    },

    removeControlById(controlId) {
      const index = this.activeControls.findIndex(ctrl => ctrl.id === controlId);
      if (index < 0) return;

      const removed = this.activeControls.splice(index, 1)[0];
      this.availableControls.push(removed);

      if (this.hoveredControlId === controlId) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === controlId) {
        this.showCloseControlId = null;
      }

      this.emitChain();
      this.$emit('control-removed', { 
        control: removed, 
        index: index 
      });
    },

    onControlMouseEnter(element) {
      this.hoveredControlId = element.id;
      this.showCloseControlId = element.id;
    },

    onControlMouseLeave(element) {
      if (this.hoveredControlId === element.id) {
        this.hoveredControlId = null;
      }
      if (this.showCloseControlId === element.id) {
        this.showCloseControlId = null;
      }
    },

    // 선택 변경 이벤트
    onSingleSelectChange(element, index, value) {
      if (element.selectedValue === value) return;
      
      element.selectedValue = value;
      this.emitChain();
      this.$emit('control-selection-change', { 
        control: element, 
        index, 
        type: 'single', 
        value 
      });
    },

    onMultiSelectChange(element, index, values) {
      const nextValues = Array.isArray(values) ? values.slice() : [];
      const prevValues = Array.isArray(element.selectedValues) 
        ? element.selectedValues 
        : [];
      
      const isSame = prevValues.length === nextValues.length 
        && prevValues.every((val, idx) => val === nextValues[idx]);
      
      if (isSame) return;

      element.selectedValues = nextValues;
      this.emitChain();
      this.$emit('control-selection-change', { 
        control: element, 
        index, 
        type: 'multi', 
        values: nextValues 
      });
    },

    // 스타일 로직
    getTextStyle(element, isActiveArea) {
      const isHovered = this.hoveredControlId === element.id;
      return {
        color: isActiveArea && isHovered
          ? this.highlightFontColor
          : this.baseFontColor
      };
    },

    getContentStyle(index, element) {
      const style = {};

      const maxWidth = element.maxWidth ?? this.defaultMaxWidth;
      style.maxWidth = typeof maxWidth === 'number' ? `${maxWidth}px` : maxWidth;

      if (this.hoveredControlId === element.id) {
        const colorIndex = index % this.depthHighlightColors.length;
        style.borderColor = this.depthHighlightColors[colorIndex];
        style.backgroundColor = this.depthHighlightBgColors[colorIndex];
      }

      return style;
    }
  }
};
</script>

<style scoped>
/* 
  스타일은 외부 CSS 파일로 분리하여 사용합니다.
  
  기본 테마:
  @import './control-chain-default.css';
  
  모던 테마:
  @import './control-chain-modern.css';
*/
</style>































